<UserControl x:Class="MusicEngineEditor.Views.MultiTrackPianoRollView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
             xmlns:local="clr-namespace:MusicEngineEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="#1E1F22"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="ToolbarBackgroundColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="AccentColor">#4A9EFF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{StaticResource ToolbarBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

        <!-- Track Colors -->
        <Color x:Key="Track1Color">#4CAF50</Color>
        <Color x:Key="Track2Color">#2196F3</Color>
        <Color x:Key="Track3Color">#FF9800</Color>
        <Color x:Key="Track4Color">#E91E63</Color>
        <Color x:Key="Track5Color">#9C27B0</Color>
        <Color x:Key="Track6Color">#00BCD4</Color>
        <Color x:Key="Track7Color">#FFEB3B</Color>
        <Color x:Key="Track8Color">#795548</Color>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="MultiTrackToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Track Toggle Style -->
        <Style x:Key="TrackToggleStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Track List Item Template -->
        <DataTemplate x:Key="TrackListItemTemplate">
            <Border x:Name="ItemBorder"
                    Background="Transparent"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="8,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Visibility Toggle -->
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsVisible}"
                              ToolTip="Show/Hide Track"
                              Margin="0,0,4,0"/>

                    <!-- Color Indicator -->
                    <Border Grid.Column="1"
                            Width="12"
                            Height="12"
                            CornerRadius="2"
                            Background="{Binding ColorBrush}"
                            ToolTip="{Binding Name}"/>

                    <!-- Track Name -->
                    <TextBlock Grid.Column="2"
                               Text="{Binding Name}"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               TextTrimming="CharacterEllipsis"/>

                    <!-- Active Indicator -->
                    <Border Grid.Column="3"
                            x:Name="ActiveIndicator"
                            Width="8"
                            Height="8"
                            CornerRadius="4"
                            Background="{StaticResource AccentBrush}"
                            Visibility="{Binding IsActive, Converter={StaticResource BoolToVisibilityConverter}}"
                            ToolTip="Active Track (editable)"/>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter TargetName="ItemBorder" Property="Background" Value="#30FFFFFF"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Horizontal ScrollBar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource ToolbarBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left Section: Title and Controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Multi-Track Piano Roll"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,16,0"/>

                    <!-- Zoom Controls -->
                    <TextBlock Text="Zoom:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <Button x:Name="ZoomOutXButton"
                            Style="{StaticResource MultiTrackToolbarButtonStyle}"
                            Content="-"
                            Click="ZoomOutX_Click"
                            ToolTip="Zoom Out"/>
                    <Button x:Name="ZoomInXButton"
                            Style="{StaticResource MultiTrackToolbarButtonStyle}"
                            Content="+"
                            Click="ZoomInX_Click"
                            ToolTip="Zoom In"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource BorderBrush}"
                               Margin="12,4"/>

                    <!-- Grid Snap -->
                    <TextBlock Text="Grid:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <ComboBox x:Name="GridSnapComboBox"
                              SelectedIndex="2"
                              Width="70"
                              FontSize="10">
                        <ComboBoxItem Content="1/4" Tag="1.0"/>
                        <ComboBoxItem Content="1/8" Tag="0.5"/>
                        <ComboBoxItem Content="1/16" Tag="0.25"/>
                        <ComboBoxItem Content="1/32" Tag="0.125"/>
                    </ComboBox>

                    <Rectangle Width="1"
                               Fill="{StaticResource BorderBrush}"
                               Margin="12,4"/>

                    <!-- Show All / Hide All -->
                    <Button x:Name="ShowAllButton"
                            Style="{StaticResource MultiTrackToolbarButtonStyle}"
                            Content="Show All"
                            Click="ShowAll_Click"
                            ToolTip="Show all tracks"/>
                    <Button x:Name="HideAllButton"
                            Style="{StaticResource MultiTrackToolbarButtonStyle}"
                            Content="Hide All"
                            Click="HideAll_Click"
                            ToolTip="Hide all tracks"/>
                </StackPanel>

                <!-- Right Section: Opacity and Pattern Length -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- Inactive Track Opacity -->
                    <TextBlock Text="Opacity:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <Slider x:Name="InactiveOpacitySlider"
                            Minimum="0.1"
                            Maximum="1.0"
                            Value="0.5"
                            Width="80"
                            ValueChanged="InactiveOpacity_Changed"
                            ToolTip="Inactive track opacity"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource BorderBrush}"
                               Margin="12,4"/>

                    <!-- Pattern Length -->
                    <TextBlock Text="Length:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBox x:Name="PatternLengthTextBox"
                             Text="16"
                             Width="40"
                             Background="#252629"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="4,2"
                             FontSize="11"
                             VerticalContentAlignment="Center"/>
                    <TextBlock Text="beats"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Track List Sidebar -->
                <ColumnDefinition Width="160"/>
                <!-- Splitter -->
                <ColumnDefinition Width="Auto"/>
                <!-- Piano Keyboard -->
                <ColumnDefinition Width="60"/>
                <!-- Note Canvas -->
                <ColumnDefinition Width="*"/>
                <!-- Vertical ScrollBar -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- Top Ruler -->
                <RowDefinition Height="24"/>
                <!-- Main Canvas -->
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Track List Header -->
            <Border Grid.Row="0" Grid.Column="0"
                    Background="{StaticResource ToolbarBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,1"
                    Padding="8,4">
                <TextBlock Text="Tracks"
                           FontSize="11"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           VerticalAlignment="Center"/>
            </Border>

            <!-- Track List -->
            <Border Grid.Row="1" Grid.Column="0"
                    Background="#252629"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <ListBox x:Name="TrackListBox"
                         Background="Transparent"
                         BorderThickness="0"
                         SelectionMode="Single"
                         ItemTemplate="{StaticResource TrackListItemTemplate}"
                         SelectionChanged="TrackList_SelectionChanged">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <ContentPresenter/>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                          Width="4"
                          Background="{StaticResource BorderBrush}"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"/>

            <!-- Top-Left Corner -->
            <Border Grid.Row="0" Grid.Column="2"
                    Background="#252629"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,1"/>

            <!-- Beat Ruler -->
            <Border Grid.Row="0" Grid.Column="3"
                    Background="#252629"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Canvas x:Name="RulerCanvas" ClipToBounds="True"/>
            </Border>

            <!-- Top-Right Corner -->
            <Border Grid.Row="0" Grid.Column="4"
                    Background="#252629"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,1"
                    Width="16"/>

            <!-- Piano Keyboard -->
            <controls:PianoKeyboard x:Name="PianoKeyboard"
                                    Grid.Row="1" Grid.Column="2"
                                    Width="60"
                                    VerticalAlignment="Stretch"/>

            <!-- Note Canvas -->
            <Canvas x:Name="NotesCanvas"
                    Grid.Row="1" Grid.Column="3"
                    Background="#1E1F22"
                    ClipToBounds="True"
                    MouseLeftButtonDown="NotesCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="NotesCanvas_MouseLeftButtonUp"
                    MouseMove="NotesCanvas_MouseMove"
                    MouseRightButtonDown="NotesCanvas_MouseRightButtonDown">

                <!-- Grid Lines -->
                <Canvas x:Name="GridCanvas"
                        Background="Transparent"
                        IsHitTestVisible="False"/>

                <!-- Track Notes Canvases (one per track, layered) -->
                <Canvas x:Name="TrackNotesContainer"
                        Background="Transparent"/>

                <!-- Playhead -->
                <Rectangle x:Name="Playhead"
                           Width="2"
                           Fill="{StaticResource AccentBrush}"
                           Canvas.Top="0"
                           Visibility="Collapsed"/>

                <!-- Selection Rectangle -->
                <Rectangle x:Name="SelectionRect"
                           Fill="#204A9EFF"
                           Stroke="{StaticResource AccentBrush}"
                           StrokeThickness="1"
                           Visibility="Collapsed"/>

                <!-- Context Menu -->
                <Canvas.ContextMenu>
                    <ContextMenu x:Name="NoteContextMenu">
                        <MenuItem Header="Delete Selected" Click="DeleteSelected_Click"/>
                        <MenuItem Header="Duplicate Selected" Click="DuplicateSelected_Click"/>
                        <Separator/>
                        <MenuItem Header="Quantize" Click="Quantize_Click"/>
                        <MenuItem Header="Transpose Up" Click="TransposeUp_Click"/>
                        <MenuItem Header="Transpose Down" Click="TransposeDown_Click"/>
                        <Separator/>
                        <MenuItem Header="Select All in Track" Click="SelectAllInTrack_Click"/>
                    </ContextMenu>
                </Canvas.ContextMenu>
            </Canvas>

            <!-- Vertical ScrollBar -->
            <ScrollBar x:Name="VerticalScrollBar"
                       Grid.Row="1" Grid.Column="4"
                       Orientation="Vertical"
                       Minimum="0"
                       Maximum="127"
                       Value="64"
                       ViewportSize="60"
                       SmallChange="1"
                       LargeChange="12"
                       ValueChanged="VerticalScroll_Changed"/>
        </Grid>

        <!-- Horizontal ScrollBar -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="164"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="16"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Grid.ColumnSpan="2"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,0"/>

            <ScrollBar x:Name="HorizontalScrollBar"
                       Grid.Column="2"
                       Orientation="Horizontal"
                       Minimum="0"
                       Maximum="32"
                       Value="0"
                       ViewportSize="16"
                       SmallChange="0.25"
                       LargeChange="4"
                       ValueChanged="HorizontalScroll_Changed"/>

            <Border Grid.Column="3"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,1,0,0"/>
        </Grid>
    </Grid>
</UserControl>
