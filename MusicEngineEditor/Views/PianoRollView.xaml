<UserControl x:Class="MusicEngineEditor.Views.PianoRollView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance Type=vm:PianoRollViewModel}"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Colors matching dark theme -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="ToolbarBackgroundColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="ButtonHoverColor">#3C3F41</Color>
        <Color x:Key="ButtonPressedColor">#4B6EAF</Color>
        <Color x:Key="ButtonActiveColor">#4B6EAF</Color>
        <Color x:Key="SeparatorColor">#43454A</Color>
        <Color x:Key="RulerBackgroundColor">#252629</Color>
        <Color x:Key="AccentColor">#4A9EFF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="{StaticResource ToolbarBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="{StaticResource SeparatorColor}"/>
        <SolidColorBrush x:Key="RulerBackgroundBrush" Color="{StaticResource RulerBackgroundColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="PianoRollToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="28"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonPressedColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style for Tool Selection -->
        <Style x:Key="PianoRollToolToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="MinHeight" Value="26"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonHoverColor}"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource ButtonActiveColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="{StaticResource AccentColor}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style for Grid Snap -->
        <Style x:Key="PianoRollComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ToolbarBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="70"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Danger Button Style (for Delete) -->
        <Style x:Key="PianoRollDangerButtonStyle" TargetType="Button" BasedOn="{StaticResource PianoRollToolbarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="Transparent"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#5C3535"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#D32F2F"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#F75464"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="#D32F2F"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Transport Button Style -->
        <Style x:Key="TransportButtonStyle" TargetType="Button" BasedOn="{StaticResource PianoRollToolbarButtonStyle}">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinWidth" Value="32"/>
            <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
        </Style>

        <!-- ScrollBar Style -->
        <Style x:Key="DarkScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        </Style>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Main Content -->
            <RowDefinition Height="*"/>
            <!-- Horizontal ScrollBar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource ToolbarBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left Section: Tool Selection -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <!-- Tool Selection Group -->
                    <Border Background="#252629"
                            CornerRadius="4"
                            Padding="2"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <ToggleButton x:Name="SelectToolButton"
                                          Style="{StaticResource PianoRollToolToggleButtonStyle}"
                                          IsChecked="True"
                                          ToolTip="Select Tool (V)"
                                          Command="{Binding SetToolCommand}"
                                          CommandParameter="{x:Static vm:PianoRollTool.Select}">
                                <TextBlock Text="&#x2B05;" FontFamily="Segoe UI Symbol" FontSize="14"/>
                            </ToggleButton>
                            <ToggleButton x:Name="DrawToolButton"
                                          Style="{StaticResource PianoRollToolToggleButtonStyle}"
                                          ToolTip="Draw Tool (D)"
                                          Command="{Binding SetToolCommand}"
                                          CommandParameter="{x:Static vm:PianoRollTool.Draw}">
                                <TextBlock Text="&#x270F;" FontFamily="Segoe UI Symbol" FontSize="14"/>
                            </ToggleButton>
                            <ToggleButton x:Name="EraseToolButton"
                                          Style="{StaticResource PianoRollToolToggleButtonStyle}"
                                          ToolTip="Erase Tool (E)"
                                          Command="{Binding SetToolCommand}"
                                          CommandParameter="{x:Static vm:PianoRollTool.Erase}">
                                <TextBlock Text="&#x2716;" FontFamily="Segoe UI Symbol" FontSize="14"/>
                            </ToggleButton>
                        </StackPanel>
                    </Border>

                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="4,4"/>

                    <!-- Grid Snap -->
                    <TextBlock Text="Grid:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="8,0,4,0"/>
                    <ComboBox x:Name="GridSnapComboBox"
                              Style="{StaticResource PianoRollComboBoxStyle}"
                              SelectedIndex="0"
                              ToolTip="Grid Snap Value">
                        <ComboBoxItem Content="1/4" Tag="1.0"/>
                        <ComboBoxItem Content="1/8" Tag="0.5"/>
                        <ComboBoxItem Content="1/16" Tag="0.25"/>
                        <ComboBoxItem Content="1/32" Tag="0.125"/>
                    </ComboBox>

                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="12,4"/>

                    <!-- Zoom Controls -->
                    <TextBlock Text="Zoom:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="4,0,4,0"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,4,0">
                        <TextBlock Text="X"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,2,0"/>
                        <Button Style="{StaticResource PianoRollToolbarButtonStyle}"
                                Content="-"
                                Command="{Binding ZoomOutXCommand}"
                                ToolTip="Zoom Out Horizontal"/>
                        <Button Style="{StaticResource PianoRollToolbarButtonStyle}"
                                Content="+"
                                Command="{Binding ZoomInXCommand}"
                                ToolTip="Zoom In Horizontal"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="4,0,0,0">
                        <TextBlock Text="Y"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,2,0"/>
                        <Button Style="{StaticResource PianoRollToolbarButtonStyle}"
                                Content="-"
                                Command="{Binding ZoomOutYCommand}"
                                ToolTip="Zoom Out Vertical"/>
                        <Button Style="{StaticResource PianoRollToolbarButtonStyle}"
                                Content="+"
                                Command="{Binding ZoomInYCommand}"
                                ToolTip="Zoom In Vertical"/>
                    </StackPanel>

                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="12,4"/>

                    <!-- Edit Actions -->
                    <Button Content="Quantize"
                            Style="{StaticResource PianoRollToolbarButtonStyle}"
                            Command="{Binding QuantizeSelectedCommand}"
                            ToolTip="Quantize Selected Notes (Q)"/>

                    <Button Content="Delete"
                            Style="{StaticResource PianoRollDangerButtonStyle}"
                            Command="{Binding DeleteSelectedCommand}"
                            ToolTip="Delete Selected Notes (Del)"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="12,4"/>

                    <!-- Pattern Length -->
                    <TextBlock Text="Length:"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="4,0,4,0"/>
                    <TextBox x:Name="PatternLengthTextBox"
                             Text="{Binding TotalBeats, StringFormat='{}{0:F0}'}"
                             Width="50"
                             Background="#252629"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             Padding="4,2"
                             FontSize="12"
                             VerticalContentAlignment="Center"
                             ToolTip="Pattern Length in Beats"/>
                    <TextBlock Text="beats"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Right Section: Transport Controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" Margin="8,0,0,0">
                    <Rectangle Width="1"
                               Fill="{StaticResource SeparatorBrush}"
                               Margin="4,4,12,4"/>

                    <!-- Transport Buttons -->
                    <Button Style="{StaticResource TransportButtonStyle}"
                            ToolTip="Stop">
                        <TextBlock Text="&#x25A0;" FontSize="12"/>
                    </Button>
                    <Button Style="{StaticResource TransportButtonStyle}"
                            ToolTip="Play/Pause">
                        <TextBlock Text="&#x25B6;" FontSize="12"/>
                    </Button>
                    <ToggleButton Style="{StaticResource PianoRollToolToggleButtonStyle}"
                                  IsChecked="{Binding LoopEnabled}"
                                  ToolTip="Loop">
                        <TextBlock Text="&#x1F501;" FontFamily="Segoe UI Symbol" FontSize="12"/>
                    </ToggleButton>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <!-- Piano Keyboard -->
                <ColumnDefinition Width="60"/>
                <!-- Note Canvas -->
                <ColumnDefinition Width="*"/>
                <!-- Vertical ScrollBar -->
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <!-- Top Ruler -->
                <RowDefinition Height="24"/>
                <!-- Main Canvas -->
                <RowDefinition Height="*"/>
                <!-- Velocity Lane Splitter -->
                <RowDefinition Height="Auto"/>
                <!-- Velocity Lane -->
                <RowDefinition Height="100" MinHeight="60" MaxHeight="200"/>
            </Grid.RowDefinitions>

            <!-- Top-Left Corner (empty, above piano keyboard) -->
            <Border Grid.Row="0" Grid.Column="0"
                    Background="{StaticResource RulerBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,1"/>

            <!-- Beat/Bar Ruler -->
            <Border Grid.Row="0" Grid.Column="1"
                    Background="{StaticResource RulerBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1">
                <Canvas x:Name="RulerCanvas" ClipToBounds="True">
                    <!-- Ruler tick marks and beat numbers are drawn in code-behind or via a custom control -->
                    <!-- Placeholder text for design-time -->
                    <TextBlock Text="1" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Canvas.Left="4" Canvas.Top="4"/>
                    <TextBlock Text="2" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Canvas.Left="104" Canvas.Top="4"/>
                    <TextBlock Text="3" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Canvas.Left="204" Canvas.Top="4"/>
                    <TextBlock Text="4" Foreground="{StaticResource TextSecondaryBrush}" FontSize="10" Canvas.Left="304" Canvas.Top="4"/>
                </Canvas>
            </Border>

            <!-- Top-Right Corner (empty, above vertical scrollbar) -->
            <Border Grid.Row="0" Grid.Column="2"
                    Background="{StaticResource RulerBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,1"
                    Width="16"/>

            <!-- Piano Keyboard -->
            <controls:PianoKeyboard x:Name="PianoKeyboard"
                                    Grid.Row="1" Grid.Column="0"
                                    Width="60"
                                    VerticalAlignment="Stretch"/>

            <!-- Note Canvas -->
            <controls:NoteCanvas x:Name="NoteCanvas"
                                 Grid.Row="1" Grid.Column="1"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"/>

            <!-- Vertical ScrollBar (for notes) -->
            <ScrollBar x:Name="VerticalNoteScrollBar"
                       Grid.Row="1" Grid.Column="2"
                       Orientation="Vertical"
                       Minimum="0"
                       Maximum="127"
                       Value="{Binding ScrollY}"
                       ViewportSize="60"
                       SmallChange="1"
                       LargeChange="12"
                       Style="{StaticResource DarkScrollBarStyle}"/>

            <!-- Velocity Lane Splitter -->
            <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                          Height="5"
                          HorizontalAlignment="Stretch"
                          Background="{StaticResource BorderBrush}"
                          ResizeDirection="Rows"
                          ShowsPreview="True"/>

            <!-- Velocity Lane Label Area -->
            <Border Grid.Row="3" Grid.Column="0"
                    Background="{StaticResource RulerBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0"/>

            <!-- Velocity Lane -->
            <controls:VelocityLane x:Name="VelocityLane"
                                   Grid.Row="3" Grid.Column="1"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"/>

            <!-- Velocity Lane Right Corner -->
            <Border Grid.Row="3" Grid.Column="2"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,0,0,0"
                    Width="16"/>
        </Grid>

        <!-- Horizontal ScrollBar (for beats) -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <!-- Spacer for piano keyboard area -->
                <ColumnDefinition Width="60"/>
                <!-- ScrollBar -->
                <ColumnDefinition Width="*"/>
                <!-- Spacer for vertical scrollbar area -->
                <ColumnDefinition Width="16"/>
            </Grid.ColumnDefinitions>

            <!-- Bottom-Left Corner -->
            <Border Grid.Column="0"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,1,0"/>

            <!-- Horizontal ScrollBar -->
            <ScrollBar x:Name="HorizontalBeatScrollBar"
                       Grid.Column="1"
                       Orientation="Horizontal"
                       Minimum="0"
                       Maximum="{Binding TotalBeats}"
                       Value="{Binding ScrollX}"
                       ViewportSize="16"
                       SmallChange="0.25"
                       LargeChange="4"
                       Style="{StaticResource DarkScrollBarStyle}"/>

            <!-- Bottom-Right Corner -->
            <Border Grid.Column="2"
                    Background="{StaticResource BackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1,1,0,0"/>
        </Grid>
    </Grid>
</UserControl>
