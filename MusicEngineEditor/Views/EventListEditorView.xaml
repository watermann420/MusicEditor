<UserControl x:Class="MusicEngineEditor.Views.EventListEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:MusicEngineEditor.Models"
             xmlns:local="clr-namespace:MusicEngineEditor.Views"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             Background="#1E1F22">

    <UserControl.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1F22"/>
        <SolidColorBrush x:Key="ToolbarBackgroundBrush" Color="#2B2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#393B40"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#BCBEC4"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#6F737A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="SelectedBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="AlternatingRowBrush" Color="#252628"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="EventListToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Delete Button Style -->
        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource EventListToolbarButtonStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5C3535"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="#F75464"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource SecondaryForegroundBrush}"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="EventFilterComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2B2D30"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="EventDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowBackground" Value="Transparent"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource AlternatingRowBrush}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="SelectionMode" Value="Extended"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="True"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#2B2D30"/>
            <Setter Property="Foreground" Value="#DFE1E5"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="FontSize" Value="11"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource SelectedBrush}"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3F41"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource ToolbarBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <DockPanel>
                <!-- Left: Add/Delete Actions -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Button Content="+ Add Event"
                            Style="{StaticResource EventListToolbarButtonStyle}"
                            Click="AddEvent_Click"
                            ToolTip="Add new MIDI event"/>
                    <Button Content="Duplicate"
                            Style="{StaticResource EventListToolbarButtonStyle}"
                            Click="DuplicateEvent_Click"
                            ToolTip="Duplicate selected events"/>
                    <Button Content="Delete"
                            Style="{StaticResource DeleteButtonStyle}"
                            Click="DeleteEvent_Click"
                            ToolTip="Delete selected events"/>

                    <Rectangle Width="1"
                               Fill="{StaticResource BorderBrush}"
                               Margin="12,4"/>

                    <!-- Filter by Type -->
                    <TextBlock Text="Filter:"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <ComboBox x:Name="TypeFilterCombo"
                              Style="{StaticResource EventFilterComboStyle}"
                              SelectedIndex="0"
                              SelectionChanged="TypeFilterCombo_SelectionChanged"
                              ToolTip="Filter by event type">
                        <ComboBoxItem Content="All Events" Tag="All"/>
                        <ComboBoxItem Content="Note On" Tag="NoteOn"/>
                        <ComboBoxItem Content="Note Off" Tag="NoteOff"/>
                        <ComboBoxItem Content="Control Change" Tag="ControlChange"/>
                        <ComboBoxItem Content="Program Change" Tag="ProgramChange"/>
                        <ComboBoxItem Content="Pitch Bend" Tag="PitchBend"/>
                    </ComboBox>

                    <!-- Filter by Channel -->
                    <TextBlock Text="Channel:"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               Margin="12,0,4,0"/>
                    <ComboBox x:Name="ChannelFilterCombo"
                              Style="{StaticResource EventFilterComboStyle}"
                              SelectedIndex="0"
                              MinWidth="60"
                              SelectionChanged="ChannelFilterCombo_SelectionChanged"
                              ToolTip="Filter by MIDI channel">
                        <ComboBoxItem Content="All" Tag="-1"/>
                        <ComboBoxItem Content="1" Tag="0"/>
                        <ComboBoxItem Content="2" Tag="1"/>
                        <ComboBoxItem Content="3" Tag="2"/>
                        <ComboBoxItem Content="4" Tag="3"/>
                        <ComboBoxItem Content="5" Tag="4"/>
                        <ComboBoxItem Content="6" Tag="5"/>
                        <ComboBoxItem Content="7" Tag="6"/>
                        <ComboBoxItem Content="8" Tag="7"/>
                        <ComboBoxItem Content="9" Tag="8"/>
                        <ComboBoxItem Content="10" Tag="9"/>
                        <ComboBoxItem Content="11" Tag="10"/>
                        <ComboBoxItem Content="12" Tag="11"/>
                        <ComboBoxItem Content="13" Tag="12"/>
                        <ComboBoxItem Content="14" Tag="13"/>
                        <ComboBoxItem Content="15" Tag="14"/>
                        <ComboBoxItem Content="16" Tag="15"/>
                    </ComboBox>
                </StackPanel>

                <!-- Right: Selection Actions -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <Button Content="Select All"
                            Style="{StaticResource EventListToolbarButtonStyle}"
                            Click="SelectAll_Click"/>
                    <Button Content="Clear Selection"
                            Style="{StaticResource EventListToolbarButtonStyle}"
                            Click="ClearSelection_Click"/>
                </StackPanel>

                <!-- Center: Search -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBox x:Name="SearchTextBox"
                             Width="200"
                             Padding="6,4"
                             Background="#1E1F22"
                             Foreground="{StaticResource ForegroundBrush}"
                             BorderBrush="{StaticResource BorderBrush}"
                             BorderThickness="1"
                             FontSize="11"
                             TextChanged="SearchTextBox_TextChanged"
                             ToolTip="Search events"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Event DataGrid -->
        <DataGrid x:Name="EventsDataGrid"
                  Grid.Row="1"
                  Style="{StaticResource EventDataGridStyle}"
                  ItemsSource="{Binding FilteredEvents}"
                  SelectionChanged="EventsDataGrid_SelectionChanged"
                  CellEditEnding="EventsDataGrid_CellEditEnding"
                  Sorting="EventsDataGrid_Sorting">

            <DataGrid.Columns>
                <!-- Position Column -->
                <DataGridTextColumn Header="Position"
                                    Binding="{Binding Position, StringFormat='{}{0:F3}'}"
                                    Width="80"
                                    IsReadOnly="False"/>

                <!-- Channel Column -->
                <DataGridTextColumn Header="Ch"
                                    Binding="{Binding Channel, Converter={x:Static local:ChannelDisplayConverter.Instance}}"
                                    Width="40"
                                    IsReadOnly="False"/>

                <!-- Type Column -->
                <DataGridComboBoxColumn Header="Type"
                                        SelectedItemBinding="{Binding EventType}"
                                        Width="100">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="IsHitTestVisible" Value="False"/>
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                    <DataGridComboBoxColumn.EditingElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="Background" Value="#2B2D30"/>
                        </Style>
                    </DataGridComboBoxColumn.EditingElementStyle>
                </DataGridComboBoxColumn>

                <!-- Note/CC Column -->
                <DataGridTextColumn Header="Note/CC"
                                    Binding="{Binding NoteOrCCDisplay}"
                                    Width="80"
                                    IsReadOnly="True"/>

                <!-- Value Column -->
                <DataGridTextColumn Header="Velocity/Value"
                                    Binding="{Binding VelocityOrValue}"
                                    Width="90"
                                    IsReadOnly="False"/>

                <!-- Length Column -->
                <DataGridTextColumn Header="Length"
                                    Binding="{Binding LengthDisplay}"
                                    Width="70"
                                    IsReadOnly="True"/>

                <!-- Mute Column -->
                <DataGridCheckBoxColumn Header="Mute"
                                        Binding="{Binding IsMuted}"
                                        Width="50"/>
            </DataGrid.Columns>

            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Edit Event..." Click="EditEvent_Click"/>
                    <MenuItem Header="Duplicate" Click="DuplicateEvent_Click"/>
                    <Separator/>
                    <MenuItem Header="Mute Selected" Click="MuteSelected_Click"/>
                    <MenuItem Header="Unmute Selected" Click="UnmuteSelected_Click"/>
                    <Separator/>
                    <MenuItem Header="Delete" Click="DeleteEvent_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource ToolbarBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Event Count -->
                <TextBlock x:Name="EventCountText"
                           Grid.Column="0"
                           Text="0 events"
                           FontSize="11"
                           Foreground="{StaticResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"/>

                <!-- Selection Info -->
                <TextBlock x:Name="SelectionInfoText"
                           Grid.Column="1"
                           Text="0 selected"
                           FontSize="11"
                           Foreground="{StaticResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           Margin="16,0"/>

                <!-- Filter Status -->
                <TextBlock x:Name="FilterStatusText"
                           Grid.Column="2"
                           Text=""
                           FontSize="11"
                           Foreground="{StaticResource AccentBrush}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
