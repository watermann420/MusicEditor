<Window x:Class="MusicEngineEditor.Views.Dialogs.CollaborationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Collaboration"
        Width="750" Height="550"
        MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Role Badge Colors -->
        <SolidColorBrush x:Key="HostBadgeBrush" Color="#6AAB73"/>
        <SolidColorBrush x:Key="EditorBadgeBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="ViewerBadgeBrush" Color="#6F737A"/>

        <!-- Connection Status Colors -->
        <SolidColorBrush x:Key="ConnectedBrush" Color="#6AAB73"/>
        <SolidColorBrush x:Key="ConnectingBrush" Color="#E8B339"/>
        <SolidColorBrush x:Key="DisconnectedBrush" Color="#F75464"/>

        <!-- Peer Item Style -->
        <Style x:Key="PeerItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Chat Message Style -->
        <Style x:Key="ChatMessageStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Real-Time Collaboration"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock Text="Work together on projects in real-time"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Connection Status -->
                <Border Grid.Column="1"
                        CornerRadius="12"
                        Padding="12,6"
                        VerticalAlignment="Center">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#2D3D2D"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=ConnectionStatus, Path=Text}" Value="Connecting...">
                                    <Setter Property="Background" Value="#3D3D2D"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=ConnectionStatus, Path=Text}" Value="Disconnected">
                                    <Setter Property="Background" Value="#3D2D2D"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="ConnectionIndicator"
                                 Width="8" Height="8"
                                 Fill="{StaticResource DisconnectedBrush}"
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionStatus"
                                   Text="Disconnected"
                                   FontSize="12"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Not Connected View -->
            <Grid x:Name="NotConnectedView">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Create Session Panel -->
                <Border Grid.Column="0"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,1,0"
                        Padding="24">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="&#x2795;"
                                   FontSize="36"
                                   Foreground="{DynamicResource AccentBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Create Session"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="Start a new collaboration session and invite others"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,8,0,24"/>

                        <TextBlock Text="Session Name"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="CreateSessionName"
                                 Style="{DynamicResource InputTextBoxStyle}"
                                 Text="My Session"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Password (optional)"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <PasswordBox x:Name="CreateSessionPassword"
                                     Background="{DynamicResource InputBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource SubtleBorderBrush}"
                                     Padding="8,6"
                                     Margin="0,0,0,16"/>

                        <Button Content="Create Session"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Click="CreateSession_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>

                <!-- Join Session Panel -->
                <Border Grid.Column="1"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        Padding="24">
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="&#x1F517;"
                                   FontSize="36"
                                   Foreground="{DynamicResource SuccessBrush}"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Join Session"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   HorizontalAlignment="Center"
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="Join an existing collaboration session"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"
                                   Margin="0,8,0,24"/>

                        <TextBlock Text="Session Code"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="JoinSessionCode"
                                 Style="{DynamicResource InputTextBoxStyle}"
                                 Margin="0,0,0,12"/>

                        <TextBlock Text="Password (if required)"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <PasswordBox x:Name="JoinSessionPassword"
                                     Background="{DynamicResource InputBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource SubtleBorderBrush}"
                                     Padding="8,6"
                                     Margin="0,0,0,16"/>

                        <Button Content="Join Session"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Click="JoinSession_Click"
                                HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Connected View -->
            <Grid x:Name="ConnectedView" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Peer List Panel -->
                <Border Grid.Column="0"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="0,0,1,0">
                    <DockPanel>
                        <!-- Panel Header -->
                        <Border DockPanel.Dock="Top"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="12,10">
                            <StackPanel>
                                <TextBlock Text="Participants"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource BrightForegroundBrush}"/>
                                <TextBlock x:Name="ParticipantCount"
                                           Text="0 connected"
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Peer List -->
                        <ListBox x:Name="PeerList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource PeerItemStyle}"
                                 Padding="8">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Color Indicator -->
                                        <Ellipse Grid.Column="0"
                                                 Width="8" Height="8"
                                                 Fill="{Binding ColorBrush}"
                                                 Margin="0,0,8,0"
                                                 VerticalAlignment="Center"/>

                                        <!-- Name -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Name}"
                                                   FontSize="12"
                                                   VerticalAlignment="Center"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- Role Badge -->
                                        <Border Grid.Column="2"
                                                Background="{Binding RoleBrush}"
                                                CornerRadius="3"
                                                Padding="6,2">
                                            <TextBlock Text="{Binding Role}"
                                                       FontSize="9"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- Chat Panel -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Session Info Header -->
                    <Border Grid.Row="0"
                            Background="{DynamicResource PanelBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1"
                            Padding="16,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Session:"
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,8,0"/>
                                <TextBlock x:Name="SessionNameDisplay"
                                           Text="My Session"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource BrightForegroundBrush}"/>
                                <TextBlock Text=" | Code: "
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="12,0,0,0"/>
                                <TextBlock x:Name="SessionCodeDisplay"
                                           Text="ABC123"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource AccentBrush}"/>
                                <Button Content="Copy"
                                        Style="{DynamicResource ToolbarButtonStyle}"
                                        Click="CopySessionCode_Click"
                                        Margin="8,0,0,0"
                                        Padding="8,2"/>
                            </StackPanel>

                            <Button Grid.Column="1"
                                    Content="Leave Session"
                                    Style="{DynamicResource SecondaryButtonStyle}"
                                    Foreground="{DynamicResource ErrorBrush}"
                                    Click="LeaveSession_Click"/>
                        </Grid>
                    </Border>

                    <!-- Chat Messages -->
                    <Border Grid.Row="1" Padding="8">
                        <ListBox x:Name="ChatMessages"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource ChatMessageStyle}"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="6" Height="6"
                                                     Fill="{Binding ColorBrush}"
                                                     Margin="0,0,6,0"
                                                     VerticalAlignment="Center"/>
                                            <TextBlock Text="{Binding SenderName}"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"
                                                       Foreground="{Binding ColorBrush}"/>
                                            <TextBlock Text="{Binding Timestamp, StringFormat=' - {0:HH:mm}'}"
                                                       FontSize="10"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Message}"
                                                   FontSize="12"
                                                   TextWrapping="Wrap"
                                                   Margin="12,2,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                    <!-- Chat Input -->
                    <Border Grid.Row="2"
                            Background="{DynamicResource PanelBackgroundBrush}"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,1,0,0"
                            Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="ChatInput"
                                     Grid.Column="0"
                                     Style="{DynamicResource InputTextBoxStyle}"
                                     KeyDown="ChatInput_KeyDown"/>

                            <Button Grid.Column="1"
                                    Content="Send"
                                    Style="{DynamicResource PrimaryButtonStyle}"
                                    Click="SendMessage_Click"
                                    Margin="8,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="StatusText"
                           Text="Not connected to any session"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Close"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Click="CloseButton_Click"
                        IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
