<Window x:Class="MusicEngineEditor.Views.Dialogs.WorkspaceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicEngineEditor.Views.Dialogs"
        mc:Ignorable="d"
        Title="Workspace Manager"
        Width="700" Height="550"
        MinWidth="600" MinHeight="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#0D0D0D"
        Foreground="#E0E0E0">

    <Window.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#141414"/>
        <SolidColorBrush x:Key="EditorBackgroundBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="BrightForegroundBrush" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5A7FC4"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#00FF88"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#D9A343"/>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource EditorBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="WorkspaceItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#181818"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#394B6E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="250"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Workspace List -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Workspaces"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{StaticResource BrightForegroundBrush}"
                           Margin="0,0,0,10"/>

                <!-- Toolbar -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="NewButton"
                            Content="New"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="NewButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="DuplicateButton"
                            Content="Duplicate"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="DuplicateButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="DeleteButton"
                            Content="Delete"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="DeleteButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="ImportButton"
                            Content="Import"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ImportButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="ExportButton"
                            Content="Export"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ExportButton_Click"/>
                </StackPanel>

                <!-- Workspace List -->
                <Border Grid.Row="2"
                        Background="{StaticResource EditorBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ListBox x:Name="WorkspaceList"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource WorkspaceItemStyle}"
                             SelectionChanged="WorkspaceList_SelectionChanged"
                             MouseDoubleClick="WorkspaceList_MouseDoubleClick">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Grid.Column="0"
                                            Width="32" Height="32"
                                            Background="{StaticResource AccentBrush}"
                                            CornerRadius="4"
                                            Margin="0,0,12,0">
                                        <TextBlock Text="{Binding IconName, FallbackValue=W}"
                                                   FontSize="12"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Name and Description -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{Binding Name}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{StaticResource BrightForegroundBrush}"/>
                                            <TextBlock Text="(Built-in)"
                                                       FontSize="10"
                                                       Foreground="{StaticResource SecondaryForegroundBrush}"
                                                       Margin="8,0,0,0"
                                                       VerticalAlignment="Center"
                                                       Visibility="{Binding IsBuiltIn, Converter={StaticResource BoolToVisibilityConverter}}"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="200"/>
                                    </StackPanel>

                                    <!-- Shortcut -->
                                    <Border Grid.Column="2"
                                            Background="{StaticResource BackgroundBrush}"
                                            CornerRadius="3"
                                            Padding="6,3"
                                            VerticalAlignment="Center"
                                            Visibility="{Binding Shortcut, Converter={StaticResource StringToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Shortcut}"
                                                   FontSize="10"
                                                   FontFamily="Consolas"
                                                   Foreground="{StaticResource SecondaryForegroundBrush}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- Right Panel: Details -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Workspace Details"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{StaticResource BrightForegroundBrush}"
                           Margin="0,0,0,10"/>

                <!-- Name -->
                <TextBlock Text="Name" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="NameTextBox"
                         Background="{StaticResource EditorBackgroundBrush}"
                         Foreground="{StaticResource ForegroundBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         Padding="8,6"
                         Margin="0,0,0,12"
                         TextChanged="NameTextBox_TextChanged"/>

                <!-- Description -->
                <TextBlock Text="Description" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="DescriptionTextBox"
                         Background="{StaticResource EditorBackgroundBrush}"
                         Foreground="{StaticResource ForegroundBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         Padding="8,6"
                         Height="60"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         Margin="0,0,0,12"
                         TextChanged="DescriptionTextBox_TextChanged"/>

                <!-- Active View -->
                <TextBlock Text="Active View" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <ComboBox x:Name="ActiveViewCombo"
                          Background="{StaticResource EditorBackgroundBrush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          BorderBrush="{StaticResource BorderBrush}"
                          Padding="8,6"
                          Margin="0,0,0,12"
                          SelectionChanged="ActiveViewCombo_SelectionChanged">
                    <ComboBoxItem Content="Arrangement"/>
                    <ComboBoxItem Content="Mixer"/>
                    <ComboBoxItem Content="PianoRoll"/>
                    <ComboBoxItem Content="AudioEditor"/>
                </ComboBox>

                <!-- Shortcut -->
                <TextBlock Text="Shortcut" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <TextBox x:Name="ShortcutTextBox"
                         Background="{StaticResource EditorBackgroundBrush}"
                         Foreground="{StaticResource ForegroundBrush}"
                         BorderBrush="{StaticResource BorderBrush}"
                         Padding="8,6"
                         Margin="0,0,0,12"
                         IsReadOnly="True"
                         PreviewKeyDown="ShortcutTextBox_PreviewKeyDown"/>

                <Separator Background="{StaticResource BorderBrush}" Margin="0,5,0,15"/>

                <!-- Info Panel -->
                <Border Background="{StaticResource PanelBackgroundBrush}"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,15">
                    <StackPanel>
                        <Grid Margin="0,0,0,6">
                            <TextBlock Text="Created:" Foreground="{StaticResource SecondaryForegroundBrush}" FontSize="11"/>
                            <TextBlock x:Name="CreatedText" HorizontalAlignment="Right" FontSize="11"/>
                        </Grid>
                        <Grid Margin="0,0,0,6">
                            <TextBlock Text="Modified:" Foreground="{StaticResource SecondaryForegroundBrush}" FontSize="11"/>
                            <TextBlock x:Name="ModifiedText" HorizontalAlignment="Right" FontSize="11"/>
                        </Grid>
                        <Grid>
                            <TextBlock Text="Windows:" Foreground="{StaticResource SecondaryForegroundBrush}" FontSize="11"/>
                            <TextBlock x:Name="WindowCountText" HorizontalAlignment="Right" FontSize="11"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Actions -->
                <Button x:Name="SaveCurrentButton"
                        Content="Save Current Layout"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="SaveCurrentButton_Click"
                        Margin="0,0,0,8"/>

                <Button x:Name="LoadButton"
                        Content="Load Workspace"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Click="LoadButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close"
                        Style="{StaticResource ActionButtonStyle}"
                        IsCancel="True"
                        Padding="20,8"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
