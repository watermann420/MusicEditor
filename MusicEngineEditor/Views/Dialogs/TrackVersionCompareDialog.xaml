<Window x:Class="MusicEngineEditor.Views.Dialogs.TrackVersionCompareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Compare Track Versions"
        Width="900" Height="700"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#0D0D0D"
        Foreground="#E0E0E0">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Diff item styles -->
        <Style x:Key="DiffItemAddedStyle" TargetType="Border">
            <Setter Property="Background" Value="#204CAF50"/>
            <Setter Property="BorderBrush" Value="#00CC66"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="DiffItemRemovedStyle" TargetType="Border">
            <Setter Property="Background" Value="#20F44336"/>
            <Setter Property="BorderBrush" Value="#FF4757"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="DiffItemModifiedStyle" TargetType="Border">
            <Setter Property="Background" Value="#20FF9800"/>
            <Setter Property="BorderBrush" Value="#FF9800"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="DiffItemUnchangedStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#252525"/>
            <Setter Property="BorderThickness" Value="3,0,0,0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,1"/>
        </Style>

        <!-- Version selector button style -->
        <Style x:Key="VersionSelectorStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#181818"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#252525"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="200"/>
        </Style>

        <!-- Category expander style -->
        <Style x:Key="CategoryExpanderStyle" TargetType="Expander">
            <Setter Property="Background" Value="#181818"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="#252525"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="IsExpanded" Value="True"/>
        </Style>

        <!-- Standard button style -->
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary button style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource StandardButtonStyle}">
            <Setter Property="Background" Value="#00D9FF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5B7EBF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3B5E9F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#181818"
                BorderBrush="#252525"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="Compare Track Versions"
                           FontWeight="Bold"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,0,0,4"/>
                <TextBlock x:Name="TrackNameText"
                           Text="Select a track to compare versions"
                           FontSize="11"
                           Foreground="#808080"/>
            </StackPanel>
        </Border>

        <!-- Version Selection -->
        <Border Grid.Row="1"
                Background="#181818"
                BorderBrush="#252525"
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Version A (Base) -->
                <TextBlock Grid.Column="0" Grid.Row="0"
                           Text="Version A (Base)"
                           FontWeight="SemiBold"
                           FontSize="11"
                           Foreground="#808080"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="VersionAComboBox"
                          Grid.Column="0" Grid.Row="1"
                          Style="{StaticResource VersionSelectorStyle}"
                          DisplayMemberPath="Name"
                          SelectionChanged="VersionAComboBox_SelectionChanged"/>

                <!-- Swap button -->
                <Button Grid.Column="1" Grid.Row="1"
                        Style="{StaticResource StandardButtonStyle}"
                        Content="&lt;-&gt;"
                        Click="SwapVersions_Click"
                        ToolTip="Swap versions"
                        Margin="12,0"
                        Width="40"/>

                <!-- Version B (Compare) -->
                <TextBlock Grid.Column="2" Grid.Row="0"
                           Text="Version B (Compare)"
                           FontWeight="SemiBold"
                           FontSize="11"
                           Foreground="#808080"
                           Margin="0,0,0,6"/>
                <ComboBox x:Name="VersionBComboBox"
                          Grid.Column="2" Grid.Row="1"
                          Style="{StaticResource VersionSelectorStyle}"
                          DisplayMemberPath="Name"
                          SelectionChanged="VersionBComboBox_SelectionChanged"/>

                <!-- Compare button -->
                <Button x:Name="CompareButton"
                        Grid.Column="3" Grid.Row="1"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Content="Compare"
                        Click="CompareButton_Click"
                        Margin="12,0,0,0"
                        IsEnabled="False"/>
            </Grid>
        </Border>

        <!-- Summary -->
        <Border Grid.Row="2"
                Background="#252528"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                    <TextBlock x:Name="AddedCountText"
                               Text="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#00CC66"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Added"
                               FontSize="10"
                               Foreground="#808080"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                    <TextBlock x:Name="RemovedCountText"
                               Text="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF4757"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Removed"
                               FontSize="10"
                               Foreground="#808080"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                    <TextBlock x:Name="ModifiedCountText"
                               Text="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#FF9800"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Modified"
                               FontSize="10"
                               Foreground="#808080"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                    <TextBlock x:Name="UnchangedCountText"
                               Text="0"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#808080"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Unchanged"
                               FontSize="10"
                               Foreground="#808080"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Diff View -->
        <Grid Grid.Row="3" Margin="20,16,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter tabs -->
            <Border Grid.Row="0"
                    Background="#181818"
                    CornerRadius="6,6,0,0"
                    Padding="8">
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="FilterAllRadio"
                                 Content="All"
                                 GroupName="DiffFilter"
                                 IsChecked="True"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"
                                 Margin="0,0,16,0"/>
                    <RadioButton x:Name="FilterNotesRadio"
                                 Content="Notes"
                                 GroupName="DiffFilter"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"
                                 Margin="0,0,16,0"/>
                    <RadioButton x:Name="FilterClipsRadio"
                                 Content="Clips"
                                 GroupName="DiffFilter"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"
                                 Margin="0,0,16,0"/>
                    <RadioButton x:Name="FilterEffectsRadio"
                                 Content="Effects"
                                 GroupName="DiffFilter"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"
                                 Margin="0,0,16,0"/>
                    <RadioButton x:Name="FilterAutomationRadio"
                                 Content="Automation"
                                 GroupName="DiffFilter"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"
                                 Margin="0,0,16,0"/>
                    <RadioButton x:Name="FilterParametersRadio"
                                 Content="Parameters"
                                 GroupName="DiffFilter"
                                 Foreground="#E0E0E0"
                                 Checked="FilterChanged"/>
                </StackPanel>
            </Border>

            <!-- Diff content -->
            <Border Grid.Row="1"
                    Background="#181818"
                    CornerRadius="0,0,6,6"
                    BorderBrush="#252525"
                    BorderThickness="1">
                <Grid>
                    <!-- ScrollViewer with diff content -->
                    <ScrollViewer x:Name="DiffScrollViewer"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="DiffContentPanel" Margin="8"/>
                    </ScrollViewer>

                    <!-- Empty state -->
                    <StackPanel x:Name="EmptyStatePanel"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="Select two versions to compare"
                                   FontSize="14"
                                   Foreground="#808080"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="Choose Version A and Version B, then click Compare"
                                   FontSize="11"
                                   Foreground="#5A5A5A"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- No differences state -->
                    <StackPanel x:Name="NoDifferencesPanel"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                        <TextBlock Text="No differences found"
                                   FontSize="14"
                                   Foreground="#00CC66"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,8"/>
                        <TextBlock Text="The selected versions are identical"
                                   FontSize="11"
                                   Foreground="#5A5A5A"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="4"
                Background="#181818"
                BorderBrush="#252525"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="ExportDiffButton"
                            Style="{StaticResource StandardButtonStyle}"
                            Content="Export Diff..."
                            Click="ExportDiff_Click"
                            IsEnabled="False"
                            Margin="0,0,8,0"/>
                    <Button x:Name="CopyToClipboardButton"
                            Style="{StaticResource StandardButtonStyle}"
                            Content="Copy to Clipboard"
                            Click="CopyToClipboard_Click"
                            IsEnabled="False"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RestoreVersionAButton"
                            Style="{StaticResource StandardButtonStyle}"
                            Content="Restore Version A"
                            Click="RestoreVersionA_Click"
                            IsEnabled="False"
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource StandardButtonStyle}"
                            Content="Close"
                            IsCancel="True"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
