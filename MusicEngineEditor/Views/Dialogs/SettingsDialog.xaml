<Window x:Class="MusicEngineEditor.Views.Dialogs.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Settings"
        Width="650" Height="550"
        MinWidth="600" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tab Control -->
        <TabControl Grid.Row="0"
                    Background="Transparent"
                    BorderThickness="0"
                    Padding="0"
                    Margin="10,10,10,0">

            <!-- Audio Tab -->
            <TabItem Header="Audio" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Audio Output Settings"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <!-- Output Device -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Output Device:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding AudioDevices}"
                                      SelectedItem="{Binding SelectedAudioDevice, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"/>
                        </Grid>

                        <!-- Sample Rate -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Sample Rate:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding SampleRates}"
                                      SelectedItem="{Binding SelectedSampleRate, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Mode=OneWay}"/>
                                            <Run Text=" Hz"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!-- Buffer Size -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Buffer Size:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding BufferSizes}"
                                      SelectedItem="{Binding SelectedBufferSize, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Mode=OneWay}"/>
                                            <Run Text=" samples"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <!-- Info text -->
                        <Border Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,10,0,0">
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       FontSize="11">
                                <Run FontWeight="SemiBold">Tip:</Run>
                                <Run Text=" Lower buffer sizes reduce latency but may cause audio glitches on slower systems. A buffer size of 256-512 samples is recommended for most use cases."/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- MIDI Tab -->
            <TabItem Header="MIDI" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="MIDI Device Configuration"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <!-- MIDI Input Device -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Input Device:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding MidiInputDevices}"
                                      SelectedItem="{Binding SelectedMidiInputDevice, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"/>
                        </Grid>

                        <!-- MIDI Output Device -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Output Device:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding MidiOutputDevices}"
                                      SelectedItem="{Binding SelectedMidiOutputDevice, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"/>
                        </Grid>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,10,0,20"/>

                        <TextBlock Text="MIDI Options"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <!-- Clock Sync -->
                        <CheckBox Content="Enable MIDI Clock Sync"
                                  IsChecked="{Binding EnableClockSync, Mode=TwoWay}"
                                  Margin="0,0,0,10"/>

                        <!-- MIDI Through -->
                        <CheckBox Content="Enable MIDI Through (pass input to output)"
                                  IsChecked="{Binding EnableMidiThrough, Mode=TwoWay}"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Editor Tab -->
            <TabItem Header="Editor" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Appearance"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <!-- Theme -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Theme:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding Themes}"
                                      SelectedItem="{Binding SelectedTheme, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}"/>
                        </Grid>

                        <!-- Font Size -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Font Size:" VerticalAlignment="Center"/>
                            <ComboBox Grid.Column="1"
                                      ItemsSource="{Binding FontSizes}"
                                      SelectedItem="{Binding SelectedFontSize, Mode=TwoWay}"
                                      Background="{DynamicResource EditorBackgroundBrush}"
                                      Foreground="{DynamicResource ForegroundBrush}"
                                      BorderBrush="{DynamicResource BorderBrush}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding Mode=OneWay}"/>
                                            <Run Text=" pt"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </Grid>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,10,0,20"/>

                        <TextBlock Text="Behavior"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,15"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <!-- Auto-save Interval -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Auto-save Interval:" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding AutoSaveInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource EditorBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     Padding="8,6"
                                     HorizontalContentAlignment="Right"/>
                            <TextBlock Grid.Column="2"
                                       Text="minutes (0 = disabled)"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                        </Grid>

                        <!-- Editor Options -->
                        <CheckBox Content="Show line numbers"
                                  IsChecked="{Binding ShowLineNumbers, Mode=TwoWay}"
                                  Margin="0,0,0,10"/>

                        <CheckBox Content="Highlight current line"
                                  IsChecked="{Binding HighlightCurrentLine, Mode=TwoWay}"
                                  Margin="0,0,0,10"/>

                        <CheckBox Content="Word wrap"
                                  IsChecked="{Binding WordWrap, Mode=TwoWay}"
                                  Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Paths Tab -->
            <TabItem Header="Paths" Padding="15,8">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
                    <StackPanel>
                        <!-- Default Project Location -->
                        <TextBlock Text="Default Project Location"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding DefaultProjectLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource EditorBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     Padding="8,6"
                                     Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Command="{Binding BrowseDefaultProjectLocationCommand}"
                                    Padding="15,6"/>
                        </Grid>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                        <!-- VST Plugin Paths -->
                        <TextBlock Text="VST Plugin Directories"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <Grid Margin="0,0,0,20" Height="120">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox ItemsSource="{Binding VstPluginPaths}"
                                     SelectedItem="{Binding SelectedVstPath, Mode=TwoWay}"
                                     Background="{DynamicResource EditorBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"/>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <Button Content="Add..."
                                        Command="{Binding AddVstPathCommand}"
                                        Padding="15,6"
                                        Margin="0,0,0,5"/>
                                <Button Content="Remove"
                                        Command="{Binding RemoveVstPathCommand}"
                                        Padding="15,6"/>
                            </StackPanel>
                        </Grid>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                        <!-- Sample Directories -->
                        <TextBlock Text="Sample Directories"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Margin="0,0,0,10"
                                   Foreground="{DynamicResource BrightForegroundBrush}"/>

                        <Grid Height="120">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ListBox ItemsSource="{Binding SampleDirectories}"
                                     SelectedItem="{Binding SelectedSampleDirectory, Mode=TwoWay}"
                                     Background="{DynamicResource EditorBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"/>
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <Button Content="Add..."
                                        Command="{Binding AddSampleDirectoryCommand}"
                                        Padding="15,6"
                                        Margin="0,0,0,5"/>
                                <Button Content="Remove"
                                        Command="{Binding RemoveSampleDirectoryCommand}"
                                        Padding="15,6"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Button Content="Reset to Defaults"
                        Command="{Binding ResetToDefaultsCommand}"
                        HorizontalAlignment="Left"
                        Padding="15,8"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="OK"
                            IsDefault="True"
                            Command="{Binding ApplyCommand}"
                            Padding="20,8"
                            Margin="0,0,10,0"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"/>
                    <Button Content="Cancel"
                            IsCancel="True"
                            Command="{Binding CancelCommand}"
                            Padding="20,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
