<Window x:Class="MusicEngineEditor.Views.Dialogs.RenderQueueDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Render Queue"
        Width="900" Height="650"
        MinWidth="750" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1F22"
        Foreground="#BCBEC4">

    <Window.Resources>
        <!-- Theme Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1F22"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#252628"/>
        <SolidColorBrush x:Key="EditorBackgroundBrush" Color="#2B2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#393B40"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#BCBEC4"/>
        <SolidColorBrush x:Key="BrightForegroundBrush" Color="#E8E8E8"/>
        <SolidColorBrush x:Key="SecondaryForegroundBrush" Color="#6F737A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5A7FC4"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#6AAB73"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#C75450"/>
        <SolidColorBrush x:Key="WarningBrush" Color="#D9A343"/>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource EditorBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#393B40"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="QueueItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2B2D30"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#394B6E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Queue List -->
            <Grid Grid.Column="0" Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Render Queue"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{StaticResource BrightForegroundBrush}"
                           Margin="0,0,0,10"/>

                <!-- Toolbar -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button x:Name="AddMixdownButton"
                            Content="Add Mixdown"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddMixdownButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="AddStemsButton"
                            Content="Add Stems"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="AddStemsButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="RemoveButton"
                            Content="Remove"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="RemoveButton_Click"
                            Margin="0,0,5,0"/>
                    <Button x:Name="ClearCompletedButton"
                            Content="Clear Completed"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="ClearCompletedButton_Click"
                            Margin="0,0,5,0"/>
                    <Rectangle Width="1" Fill="{StaticResource BorderBrush}" Margin="5,2"/>
                    <Button x:Name="MoveUpButton"
                            Content="Up"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="MoveUpButton_Click"
                            Margin="5,0,5,0"
                            Width="40"/>
                    <Button x:Name="MoveDownButton"
                            Content="Down"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="MoveDownButton_Click"
                            Width="50"/>
                </StackPanel>

                <!-- Queue List -->
                <Border Grid.Row="2"
                        Background="{StaticResource EditorBackgroundBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4">
                    <ListBox x:Name="QueueList"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource QueueItemStyle}"
                             SelectionChanged="QueueList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Name and Path -->
                                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource BrightForegroundBrush}"/>
                                        <TextBlock Text="{Binding OutputPath}"
                                                   FontSize="10"
                                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                                   TextTrimming="CharacterEllipsis"
                                                   MaxWidth="250"/>
                                    </StackPanel>

                                    <!-- Status Indicator -->
                                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                                        <!-- Progress Bar for Processing -->
                                        <Grid Width="80" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}, FallbackValue=Collapsed}">
                                            <ProgressBar Value="{Binding Progress}"
                                                         Height="6"
                                                         Background="{StaticResource BackgroundBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                        <!-- Status Text -->
                                        <TextBlock Text="{Binding StatusString}"
                                                   FontSize="11"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                            <Setter Property="Foreground" Value="{StaticResource SuccessBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Failed">
                                                            <Setter Property="Foreground" Value="{StaticResource ErrorBrush}"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="Cancelled">
                                                            <Setter Property="Foreground" Value="{StaticResource WarningBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>

                                    <!-- Format -->
                                    <Border Grid.Column="2"
                                            Background="{StaticResource BackgroundBrush}"
                                            CornerRadius="3"
                                            Padding="8,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding FormatString}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"
                                                   Foreground="{StaticResource AccentBrush}"/>
                                    </Border>

                                    <!-- Estimated Time -->
                                    <TextBlock Grid.Column="3"
                                               Text="{Binding EstimatedTimeString}"
                                               FontSize="11"
                                               Foreground="{StaticResource SecondaryForegroundBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>

                                    <!-- File Size -->
                                    <TextBlock Grid.Column="4"
                                               Text="{Binding FileSizeString}"
                                               FontSize="11"
                                               Foreground="{StaticResource SecondaryForegroundBrush}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Grid>

            <!-- Right Panel: Item Settings -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Item Settings"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Foreground="{StaticResource BrightForegroundBrush}"
                           Margin="0,0,0,10"/>

                <!-- Format -->
                <TextBlock Text="Format" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <ComboBox x:Name="FormatCombo"
                          Background="{StaticResource EditorBackgroundBrush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          BorderBrush="{StaticResource BorderBrush}"
                          Padding="8,6"
                          Margin="0,0,0,12"
                          SelectionChanged="FormatCombo_SelectionChanged">
                    <ComboBoxItem Content="WAV (Uncompressed)"/>
                    <ComboBoxItem Content="MP3 (Lossy)"/>
                    <ComboBoxItem Content="FLAC (Lossless)"/>
                    <ComboBoxItem Content="OGG Vorbis"/>
                    <ComboBoxItem Content="AIFF (Uncompressed)"/>
                </ComboBox>

                <!-- Bit Depth -->
                <TextBlock Text="Bit Depth" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <ComboBox x:Name="BitDepthCombo"
                          Background="{StaticResource EditorBackgroundBrush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          BorderBrush="{StaticResource BorderBrush}"
                          Padding="8,6"
                          Margin="0,0,0,12"
                          SelectionChanged="BitDepthCombo_SelectionChanged">
                    <ComboBoxItem Content="16-bit"/>
                    <ComboBoxItem Content="24-bit"/>
                    <ComboBoxItem Content="32-bit Float"/>
                </ComboBox>

                <!-- Sample Rate -->
                <TextBlock Text="Sample Rate" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                <ComboBox x:Name="SampleRateCombo"
                          Background="{StaticResource EditorBackgroundBrush}"
                          Foreground="{StaticResource ForegroundBrush}"
                          BorderBrush="{StaticResource BorderBrush}"
                          Padding="8,6"
                          Margin="0,0,0,12"
                          SelectionChanged="SampleRateCombo_SelectionChanged">
                    <ComboBoxItem Content="44100 Hz"/>
                    <ComboBoxItem Content="48000 Hz"/>
                    <ComboBoxItem Content="88200 Hz"/>
                    <ComboBoxItem Content="96000 Hz"/>
                </ComboBox>

                <!-- MP3 Bitrate (conditional) -->
                <StackPanel x:Name="Mp3BitratePanel" Visibility="Collapsed">
                    <TextBlock Text="MP3 Bitrate" FontSize="11" Foreground="{StaticResource SecondaryForegroundBrush}" Margin="0,0,0,4"/>
                    <ComboBox x:Name="Mp3BitrateCombo"
                              Background="{StaticResource EditorBackgroundBrush}"
                              Foreground="{StaticResource ForegroundBrush}"
                              BorderBrush="{StaticResource BorderBrush}"
                              Padding="8,6"
                              Margin="0,0,0,12"
                              SelectionChanged="Mp3BitrateCombo_SelectionChanged">
                        <ComboBoxItem Content="128 kbps"/>
                        <ComboBoxItem Content="192 kbps"/>
                        <ComboBoxItem Content="256 kbps"/>
                        <ComboBoxItem Content="320 kbps"/>
                    </ComboBox>
                </StackPanel>

                <Separator Background="{StaticResource BorderBrush}" Margin="0,5,0,15"/>

                <!-- Options -->
                <CheckBox x:Name="NormalizeCheckbox"
                          Content="Normalize output"
                          Foreground="{StaticResource ForegroundBrush}"
                          Margin="0,0,0,8"
                          Checked="NormalizeCheckbox_Changed"
                          Unchecked="NormalizeCheckbox_Changed"/>

                <CheckBox x:Name="DitherCheckbox"
                          Content="Apply dithering"
                          Foreground="{StaticResource ForegroundBrush}"
                          IsChecked="True"
                          Checked="DitherCheckbox_Changed"
                          Unchecked="DitherCheckbox_Changed"/>

                <Separator Background="{StaticResource BorderBrush}" Margin="0,15,0,15"/>

                <!-- Apply to All -->
                <Button x:Name="ApplyToAllButton"
                        Content="Apply to All Items"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="ApplyToAllButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Progress Section -->
        <Border Grid.Row="1"
                Background="{StaticResource PanelBackgroundBrush}"
                Margin="20,0"
                Padding="15"
                CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Grid Margin="0,0,0,8">
                        <TextBlock x:Name="CurrentItemText"
                                   Text="Ready to render"
                                   FontWeight="SemiBold"/>
                        <TextBlock HorizontalAlignment="Right"
                                   Foreground="{StaticResource SecondaryForegroundBrush}">
                            <Run x:Name="CompletedCountRun" Text="0"/>
                            <Run Text="/"/>
                            <Run x:Name="TotalCountRun" Text="0"/>
                            <Run Text="items"/>
                        </TextBlock>
                    </Grid>

                    <ProgressBar x:Name="OverallProgressBar"
                                 Value="0"
                                 Height="8"
                                 Margin="0,0,0,8"
                                 Background="{StaticResource BackgroundBrush}"
                                 Foreground="{StaticResource AccentBrush}"/>

                    <Grid>
                        <TextBlock x:Name="ProgressText"
                                   Text="0%"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"/>
                        <TextBlock x:Name="EstimatedTimeText"
                                   Text="Estimated time: --:--"
                                   FontSize="11"
                                   Foreground="{StaticResource SecondaryForegroundBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                    <Button x:Name="StartButton"
                            Content="Start"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Click="StartButton_Click"
                            Padding="20,8"
                            Margin="0,0,8,0"/>
                    <Button x:Name="PauseButton"
                            Content="Pause"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="PauseButton_Click"
                            Padding="15,8"
                            Margin="0,0,8,0"
                            IsEnabled="False"/>
                    <Button x:Name="CancelButton"
                            Content="Cancel"
                            Style="{StaticResource ActionButtonStyle}"
                            Click="CancelButton_Click"
                            Padding="15,8"
                            IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="2"
                Background="{StaticResource PanelBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Button x:Name="OpenFolderButton"
                        Content="Open Output Folder"
                        Style="{StaticResource ActionButtonStyle}"
                        Click="OpenFolderButton_Click"
                        HorizontalAlignment="Left"
                        Padding="15,8"/>

                <Button Content="Close"
                        Style="{StaticResource ActionButtonStyle}"
                        IsCancel="True"
                        HorizontalAlignment="Right"
                        Padding="20,8"
                        Click="CloseButton_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
