<Window x:Class="MusicEngineEditor.Views.Dialogs.ProjectSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Settings"
        Width="500" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Project Name -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Project Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                 x:Name="ProjectNameBox"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,0,10"/>

        <!-- Default Namespace -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Namespace:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                 x:Name="NamespaceBox"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,0,10"/>

        <!-- Output Path -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Output Path:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 x:Name="OutputPathBox"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,10,10"/>
        <Button Grid.Row="2" Grid.Column="2" Content="Browse..."
                Click="BrowseButton_Click"
                Padding="15,6"
                Margin="0,0,0,10"/>

        <!-- Target Framework -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Target Framework:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"
                  x:Name="TargetFrameworkCombo"
                  Background="{DynamicResource EditorBackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Padding="8,4"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="net8.0" IsSelected="True"/>
            <ComboBoxItem Content="net7.0"/>
            <ComboBoxItem Content="net6.0"/>
            <ComboBoxItem Content="netstandard2.1"/>
            <ComboBoxItem Content="netstandard2.0"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    IsDefault="True"
                    Click="OkButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
