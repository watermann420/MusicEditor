<Window x:Class="MusicEngineEditor.Views.Dialogs.QuantizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Quantize Notes"
        Width="380" Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <!-- Radio Button Style -->
        <Style x:Key="GridValueRadioButton" TargetType="RadioButton">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="QuantizeComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource EditorBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="QuantizeCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,6"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Quantize Settings"
                   FontSize="16"
                   FontWeight="SemiBold"
                   Margin="0,0,0,16"/>

        <!-- Grid Value Selection -->
        <GroupBox Grid.Row="1"
                  Header="Grid Value"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  Padding="10"
                  Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <RadioButton Grid.Row="0" Grid.Column="0"
                             x:Name="Radio1_4"
                             Content="1/4 (Quarter)"
                             Tag="1.0"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>

                <RadioButton Grid.Row="0" Grid.Column="1"
                             x:Name="Radio1_8"
                             Content="1/8 (Eighth)"
                             Tag="0.5"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>

                <RadioButton Grid.Row="1" Grid.Column="0"
                             x:Name="Radio1_16"
                             Content="1/16 (Sixteenth)"
                             Tag="0.25"
                             IsChecked="True"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>

                <RadioButton Grid.Row="1" Grid.Column="1"
                             x:Name="Radio1_32"
                             Content="1/32 (32nd)"
                             Tag="0.125"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>

                <RadioButton Grid.Row="2" Grid.Column="0"
                             x:Name="Radio1_8T"
                             Content="1/8T (Triplet)"
                             Tag="0.333333"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>

                <RadioButton Grid.Row="2" Grid.Column="1"
                             x:Name="Radio1_16T"
                             Content="1/16T (Triplet)"
                             Tag="0.166667"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="GridValue"/>
            </Grid>
        </GroupBox>

        <!-- Quantize Mode -->
        <GroupBox Grid.Row="2"
                  Header="Quantize Mode"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  Padding="10"
                  Margin="0,0,0,12">
            <StackPanel>
                <RadioButton x:Name="ModeStartAndEnd"
                             Content="Start and End (Full quantize)"
                             IsChecked="True"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="QuantizeMode"/>
                <RadioButton x:Name="ModeStartOnly"
                             Content="Start Only (Preserve duration)"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="QuantizeMode"/>
                <RadioButton x:Name="ModeEndOnly"
                             Content="End Only (Adjust duration)"
                             Style="{StaticResource GridValueRadioButton}"
                             GroupName="QuantizeMode"/>
            </StackPanel>
        </GroupBox>

        <!-- Strength Slider -->
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Strength:"
                       VerticalAlignment="Center"
                       Margin="0,0,12,0"/>

            <Slider Grid.Column="1"
                    x:Name="StrengthSlider"
                    Minimum="0"
                    Maximum="100"
                    Value="100"
                    TickFrequency="25"
                    IsSnapToTickEnabled="False"
                    VerticalAlignment="Center"/>

            <TextBlock Grid.Column="2"
                       Text="{Binding ElementName=StrengthSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>

        <!-- Buttons -->
        <StackPanel Grid.Row="5"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Quantize"
                    IsDefault="True"
                    Click="QuantizeButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Click="CancelButton_Click"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
