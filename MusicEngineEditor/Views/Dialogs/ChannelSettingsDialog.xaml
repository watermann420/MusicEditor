<Window x:Class="MusicEngineEditor.Views.Dialogs.ChannelSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Channel Settings"
        Width="600" Height="700"
        MinWidth="500" MinHeight="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#1E1F22"
        Foreground="#BCBEC4">

    <Window.Resources>
        <!-- Dark theme colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1E1F22"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#2B2D30"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#393B40"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#BCBEC4"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#6F737A"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#4A9EFF"/>

        <!-- Section style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MinWidth" Value="50"/>
        </Style>

        <!-- Toggle button style for phase/mono -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3C40"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#4A9EFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Rectangle x:Name="ChannelColorIndicator"
                               Width="4"
                               Height="24"
                               Fill="{StaticResource AccentBrush}"
                               RadiusX="2"
                               RadiusY="2"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="ChannelNameText"
                               Text="Channel Name"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Close button -->
                <Button Content="X"
                        HorizontalAlignment="Right"
                        Width="28"
                        Height="28"
                        FontWeight="Bold"
                        Click="OnCloseClick"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Padding="16">
            <StackPanel>

                <!-- INPUT SECTION -->
                <Border Background="{StaticResource PanelBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="INPUT" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Input Gain" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="InputGainSlider"
                                    Grid.Column="1"
                                    Minimum="-24"
                                    Maximum="24"
                                    Value="0"
                                    VerticalAlignment="Center"
                                    Margin="0,0,8,0"
                                    ValueChanged="OnInputGainChanged"/>
                            <TextBlock x:Name="InputGainText"
                                       Grid.Column="2"
                                       Text="0.0 dB"
                                       Style="{StaticResource ValueStyle}"/>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                            <ToggleButton x:Name="PhaseInvertButton"
                                          Content="Phase"
                                          Style="{StaticResource ToggleButtonStyle}"
                                          Width="80"
                                          Margin="0,0,8,0"
                                          ToolTip="Invert Phase"
                                          Click="OnPhaseInvertChanged"/>

                            <ToggleButton x:Name="MonoButton"
                                          Content="Mono"
                                          Style="{StaticResource ToggleButtonStyle}"
                                          Width="80"
                                          ToolTip="Sum to Mono"
                                          Click="OnMonoChanged"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- EQ SECTION -->
                <Border Background="{StaticResource PanelBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="EQ" Style="{StaticResource SectionHeaderStyle}"/>
                            <ToggleButton x:Name="EqBypassButton"
                                          Content="Bypass"
                                          HorizontalAlignment="Right"
                                          Style="{StaticResource ToggleButtonStyle}"
                                          Width="70"
                                          Margin="0,-4,0,0"
                                          Click="OnEqBypassChanged"/>
                        </Grid>

                        <!-- EQ Curve Display -->
                        <Border Background="#1A1B1E"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Height="120"
                                Margin="0,8,0,12">
                            <Canvas x:Name="EqCurveCanvas" ClipToBounds="True"/>
                        </Border>

                        <!-- EQ Bands -->
                        <ItemsControl x:Name="EqBandsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}"
                                                   Style="{StaticResource LabelStyle}"/>
                                        <Slider Grid.Column="1"
                                                Value="{Binding Frequency, Mode=TwoWay}"
                                                Minimum="20"
                                                Maximum="20000"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding FrequencyText}"
                                                   Style="{StaticResource ValueStyle}"/>
                                        <Slider Grid.Column="3"
                                                Value="{Binding Gain, Mode=TwoWay}"
                                                Minimum="-18"
                                                Maximum="18"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="4"
                                                   Text="{Binding GainText}"
                                                   Style="{StaticResource ValueStyle}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- DYNAMICS SECTION -->
                <Border Background="{StaticResource PanelBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="DYNAMICS" Style="{StaticResource SectionHeaderStyle}"/>
                            <ToggleButton x:Name="DynamicsBypassButton"
                                          Content="Bypass"
                                          HorizontalAlignment="Right"
                                          Style="{StaticResource ToggleButtonStyle}"
                                          Width="70"
                                          Margin="0,-4,0,0"
                                          Click="OnDynamicsBypassChanged"/>
                        </Grid>

                        <!-- Compressor Controls -->
                        <Grid Margin="0,8,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <!-- Threshold -->
                            <TextBlock Grid.Row="0" Text="Threshold" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="ThresholdSlider"
                                    Grid.Row="0" Grid.Column="1"
                                    Minimum="-60"
                                    Maximum="0"
                                    Value="-20"
                                    VerticalAlignment="Center"
                                    Margin="0,4"/>
                            <TextBlock x:Name="ThresholdText"
                                       Grid.Row="0" Grid.Column="2"
                                       Text="-20 dB"
                                       Style="{StaticResource ValueStyle}"/>

                            <!-- Ratio -->
                            <TextBlock Grid.Row="1" Text="Ratio" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="RatioSlider"
                                    Grid.Row="1" Grid.Column="1"
                                    Minimum="1"
                                    Maximum="20"
                                    Value="4"
                                    VerticalAlignment="Center"
                                    Margin="0,4"/>
                            <TextBlock x:Name="RatioText"
                                       Grid.Row="1" Grid.Column="2"
                                       Text="4:1"
                                       Style="{StaticResource ValueStyle}"/>

                            <!-- Attack -->
                            <TextBlock Grid.Row="2" Text="Attack" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="AttackSlider"
                                    Grid.Row="2" Grid.Column="1"
                                    Minimum="0.1"
                                    Maximum="100"
                                    Value="10"
                                    VerticalAlignment="Center"
                                    Margin="0,4"/>
                            <TextBlock x:Name="AttackText"
                                       Grid.Row="2" Grid.Column="2"
                                       Text="10 ms"
                                       Style="{StaticResource ValueStyle}"/>

                            <!-- Release -->
                            <TextBlock Grid.Row="3" Text="Release" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="ReleaseSlider"
                                    Grid.Row="3" Grid.Column="1"
                                    Minimum="10"
                                    Maximum="1000"
                                    Value="100"
                                    VerticalAlignment="Center"
                                    Margin="0,4"/>
                            <TextBlock x:Name="ReleaseText"
                                       Grid.Row="3" Grid.Column="2"
                                       Text="100 ms"
                                       Style="{StaticResource ValueStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SENDS SECTION -->
                <Border Background="{StaticResource PanelBrush}"
                        CornerRadius="6"
                        Padding="16"
                        Margin="0,0,0,12">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="SENDS" Style="{StaticResource SectionHeaderStyle}"/>
                            <Button x:Name="AddSendButton"
                                    Content="+ Add"
                                    HorizontalAlignment="Right"
                                    Padding="12,4"
                                    FontSize="10"
                                    Click="OnAddSendClick"/>
                        </Grid>

                        <ItemsControl x:Name="SendsList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding TargetName}"
                                                   Style="{StaticResource LabelStyle}"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <Slider Grid.Column="1"
                                                Value="{Binding Level, Mode=TwoWay}"
                                                Minimum="0"
                                                Maximum="1"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="{Binding LevelText}"
                                                   Style="{StaticResource ValueStyle}"/>
                                        <Button Grid.Column="3"
                                                Content="X"
                                                Width="24"
                                                Height="24"
                                                Margin="8,0,0,0"
                                                Click="OnRemoveSendClick"
                                                Tag="{Binding}"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock x:Name="NoSendsText"
                                   Text="No sends configured"
                                   Style="{StaticResource LabelStyle}"
                                   HorizontalAlignment="Center"
                                   Margin="0,8"
                                   Visibility="Collapsed"/>
                    </StackPanel>
                </Border>

                <!-- OUTPUT SECTION -->
                <Border Background="{StaticResource PanelBrush}"
                        CornerRadius="6"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="OUTPUT" Style="{StaticResource SectionHeaderStyle}"/>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Output Bus" Style="{StaticResource LabelStyle}"/>
                            <ComboBox x:Name="OutputBusSelector"
                                      Grid.Column="1"
                                      Background="#3A3C40"
                                      Foreground="{StaticResource TextPrimaryBrush}"
                                      BorderBrush="{StaticResource BorderBrush}"
                                      SelectionChanged="OnOutputBusChanged">
                                <ComboBoxItem Content="Master" IsSelected="True"/>
                            </ComboBox>
                        </Grid>

                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Volume" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="VolumeSlider"
                                    Grid.Column="1"
                                    Minimum="0"
                                    Maximum="1.5"
                                    Value="0.8"
                                    VerticalAlignment="Center"
                                    ValueChanged="OnVolumeChanged"/>
                            <TextBlock x:Name="VolumeText"
                                       Grid.Column="2"
                                       Text="-2.0 dB"
                                       Style="{StaticResource ValueStyle}"/>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="60"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Pan" Style="{StaticResource LabelStyle}"/>
                            <Slider x:Name="PanSlider"
                                    Grid.Column="1"
                                    Minimum="-1"
                                    Maximum="1"
                                    Value="0"
                                    VerticalAlignment="Center"
                                    ValueChanged="OnPanChanged"/>
                            <TextBlock x:Name="PanText"
                                       Grid.Column="2"
                                       Text="C"
                                       Style="{StaticResource ValueStyle}"/>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Button Content="Reset to Default"
                        HorizontalAlignment="Left"
                        Padding="16,8"
                        Click="OnResetClick"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Apply"
                            Padding="20,8"
                            Margin="0,0,8,0"
                            Click="OnApplyClick"/>
                    <Button Content="Close"
                            Padding="20,8"
                            IsCancel="True"
                            Click="OnCloseClick"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
