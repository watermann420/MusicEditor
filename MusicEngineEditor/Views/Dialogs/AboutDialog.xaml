<Window x:Class="MusicEngineEditor.Views.Dialogs.AboutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About MusicEngine Editor"
        Width="400" Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- App Name -->
        <TextBlock Grid.Row="0"
                   Text="MusicEngine Editor"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- Version -->
        <TextBlock Grid.Row="1"
                   Text="Version 1.0.0"
                   FontSize="14"
                   HorizontalAlignment="Center"
                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                   Margin="0,0,0,15"/>

        <!-- Copyright -->
        <TextBlock Grid.Row="2"
                   Text="Copyright 2026 MusicEngine"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <!-- License Info -->
        <Border Grid.Row="3"
                Background="{DynamicResource EditorBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                Padding="15"
                Margin="0,5,0,0">
            <TextBlock TextWrapping="Wrap"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryForegroundBrush}">
                <Run Text="This software is provided under the MIT License."/>
                <LineBreak/><LineBreak/>
                <Run Text="Permission is hereby granted, free of charge, to any person obtaining a copy of this software and associated documentation files, to deal in the Software without restriction."/>
            </TextBlock>
        </Border>

        <!-- OK Button -->
        <Button Grid.Row="5"
                Content="OK"
                IsDefault="True"
                IsCancel="True"
                Click="OkButton_Click"
                HorizontalAlignment="Center"
                Padding="30,8"
                Background="{DynamicResource AccentBrush}"
                Foreground="White"/>
    </Grid>
</Window>
