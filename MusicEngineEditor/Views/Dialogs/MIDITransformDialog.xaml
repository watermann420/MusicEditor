<Window x:Class="MusicEngineEditor.Views.Dialogs.MIDITransformDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MIDI Transform"
        Width="450" Height="580"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#0D0D0D"
        Foreground="#E0E0E0">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="AccentHoverBrush" Color="#5A7FC4"/>

        <!-- GroupBox Style -->
        <Style x:Key="TransformGroupBox" TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="TransformSlider" TargetType="Slider">
            <Setter Property="Minimum" Value="-127"/>
            <Setter Property="Maximum" Value="127"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ValueTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="TransformCheckBox" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="DialogButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="20,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource DialogButton}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="MIDI Transform"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#DFE1E5"/>
            <TextBlock Text="Batch transform selected MIDI notes"
                       FontSize="12"
                       Foreground="{StaticResource SecondaryBrush}"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Transform Options -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Transpose -->
                <GroupBox Header="Transpose" Style="{StaticResource TransformGroupBox}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Slider x:Name="TransposeSlider"
                                Grid.Row="0" Grid.Column="0"
                                Minimum="-48" Maximum="48"
                                Value="0"
                                TickFrequency="12"
                                IsSnapToTickEnabled="False"
                                VerticalAlignment="Center"/>
                        <TextBox x:Name="TransposeValue"
                                 Grid.Row="0" Grid.Column="1"
                                 Style="{StaticResource ValueTextBox}"
                                 Text="{Binding ElementName=TransposeSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                 Margin="8,0,0,0"/>

                        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,0">
                            <Button Content="-12" Click="TransposeOctaveDown_Click" Style="{StaticResource DialogButton}" Padding="8,4" Margin="0,0,4,0"/>
                            <Button Content="-1" Click="TransposeSemitoneDown_Click" Style="{StaticResource DialogButton}" Padding="8,4" Margin="0,0,4,0"/>
                            <Button Content="0" Click="TransposeReset_Click" Style="{StaticResource DialogButton}" Padding="8,4" Margin="0,0,4,0"/>
                            <Button Content="+1" Click="TransposeSemitoneUp_Click" Style="{StaticResource DialogButton}" Padding="8,4" Margin="0,0,4,0"/>
                            <Button Content="+12" Click="TransposeOctaveUp_Click" Style="{StaticResource DialogButton}" Padding="8,4"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!-- Velocity -->
                <GroupBox Header="Velocity" Style="{StaticResource TransformGroupBox}">
                    <StackPanel>
                        <!-- Scale -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Scale:" VerticalAlignment="Center"/>
                            <Slider x:Name="VelocityScaleSlider"
                                    Grid.Column="1"
                                    Minimum="0" Maximum="200"
                                    Value="100"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ElementName=VelocityScaleSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                       Width="50"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>

                        <!-- Offset -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Offset:" VerticalAlignment="Center"/>
                            <Slider x:Name="VelocityOffsetSlider"
                                    Grid.Column="1"
                                    Minimum="-127" Maximum="127"
                                    Value="0"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ElementName=VelocityOffsetSlider, Path=Value, StringFormat='{}{0:F0}'}"
                                       Width="50"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>

                        <CheckBox x:Name="ClampVelocityCheck"
                                  Content="Clamp to 1-127 range"
                                  IsChecked="True"
                                  Style="{StaticResource TransformCheckBox}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Length -->
                <GroupBox Header="Length" Style="{StaticResource TransformGroupBox}">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Scale:" VerticalAlignment="Center"/>
                            <Slider x:Name="LengthScaleSlider"
                                    Grid.Column="1"
                                    Minimum="10" Maximum="400"
                                    Value="100"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2"
                                       Text="{Binding ElementName=LengthScaleSlider, Path=Value, StringFormat='{}{0:F0}%'}"
                                       Width="50"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>

                        <CheckBox x:Name="PreserveLegato"
                                  Content="Preserve legato (extend to next note)"
                                  Style="{StaticResource TransformCheckBox}"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </GroupBox>

                <!-- Time Shift -->
                <GroupBox Header="Time Shift" Style="{StaticResource TransformGroupBox}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Beats:" VerticalAlignment="Center"/>
                        <Slider x:Name="TimeShiftSlider"
                                Grid.Column="1"
                                Minimum="-4" Maximum="4"
                                Value="0"
                                TickFrequency="0.25"
                                IsSnapToTickEnabled="True"
                                VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="2"
                                   Text="{Binding ElementName=TimeShiftSlider, Path=Value, StringFormat='{}{0:F2}'}"
                                   Width="50"
                                   TextAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="8,0,0,0"/>
                    </Grid>
                </GroupBox>

                <!-- Randomization -->
                <GroupBox Header="Randomization" Style="{StaticResource TransformGroupBox}">
                    <StackPanel>
                        <CheckBox x:Name="RandomizeEnabled"
                                  Content="Enable randomization"
                                  Style="{StaticResource TransformCheckBox}"/>

                        <Grid Margin="0,8,0,0" IsEnabled="{Binding ElementName=RandomizeEnabled, Path=IsChecked}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Velocity Range -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Velocity +/-:" VerticalAlignment="Center"/>
                            <Slider x:Name="RandomVelocitySlider"
                                    Grid.Row="0" Grid.Column="1"
                                    Minimum="0" Maximum="30"
                                    Value="10"
                                    VerticalAlignment="Center"/>
                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       Text="{Binding ElementName=RandomVelocitySlider, Path=Value, StringFormat='{}{0:F0}'}"
                                       Width="40"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>

                            <!-- Timing Range -->
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Timing +/-:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                            <Slider x:Name="RandomTimingSlider"
                                    Grid.Row="1" Grid.Column="1"
                                    Minimum="0" Maximum="0.1"
                                    Value="0.02"
                                    VerticalAlignment="Center"
                                    Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2"
                                       Text="{Binding ElementName=RandomTimingSlider, Path=Value, StringFormat='{}{0:F3}'}"
                                       Width="40"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,8,0,0"/>

                            <!-- Length Range -->
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Length +/-:" VerticalAlignment="Center" Margin="0,8,0,0"/>
                            <Slider x:Name="RandomLengthSlider"
                                    Grid.Row="2" Grid.Column="1"
                                    Minimum="0" Maximum="0.1"
                                    Value="0"
                                    VerticalAlignment="Center"
                                    Margin="0,8,0,0"/>
                            <TextBlock Grid.Row="2" Grid.Column="2"
                                       Text="{Binding ElementName=RandomLengthSlider, Path=Value, StringFormat='{}{0:F3}'}"
                                       Width="40"
                                       TextAlignment="Right"
                                       VerticalAlignment="Center"
                                       Margin="8,8,0,0"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Preview"
                    Style="{StaticResource DialogButton}"
                    Click="Preview_Click"
                    Margin="0,0,8,0"/>
            <Button Content="Apply"
                    Style="{StaticResource PrimaryButton}"
                    IsDefault="True"
                    Click="Apply_Click"
                    Margin="0,0,8,0"/>
            <Button Content="Cancel"
                    Style="{StaticResource DialogButton}"
                    IsCancel="True"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
