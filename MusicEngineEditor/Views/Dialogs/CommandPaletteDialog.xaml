<Window x:Class="MusicEngineEditor.Views.Dialogs.CommandPaletteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Command Palette"
        Width="500" Height="350"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        KeyDown="Window_KeyDown"
        Deactivated="Window_Deactivated">

    <Window.Resources>
        <SolidColorBrush x:Key="PaletteBackgroundBrush" Color="#181818"/>
        <SolidColorBrush x:Key="PaletteBorderBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="SearchBoxBackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="ItemHoverBrush" Color="#252525"/>
        <SolidColorBrush x:Key="ItemSelectedBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#808080"/>
        <SolidColorBrush x:Key="ShortcutBrush" Color="#9E9E9E"/>

        <Style x:Key="CommandListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ItemHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ItemSelectedBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource PaletteBackgroundBrush}"
            BorderBrush="{StaticResource PaletteBorderBrush}"
            BorderThickness="2"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20"
                              ShadowDepth="5"
                              Opacity="0.5"
                              Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Search Box -->
            <Border Grid.Row="0"
                    Background="{StaticResource SearchBoxBackgroundBrush}"
                    CornerRadius="8,8,0,0"
                    Padding="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Icon -->
                    <TextBlock Grid.Column="0"
                               Text=">"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource PaletteBorderBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>

                    <!-- Search Input -->
                    <TextBox x:Name="SearchBox"
                             Grid.Column="1"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="{StaticResource TextPrimaryBrush}"
                             FontSize="14"
                             VerticalContentAlignment="Center"
                             TextChanged="SearchBox_TextChanged">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Placeholder Text -->
                    <TextBlock x:Name="PlaceholderText"
                               Grid.Column="1"
                               Text="Type a command..."
                               FontSize="14"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               VerticalAlignment="Center"
                               IsHitTestVisible="False"
                               Visibility="Visible"/>
                </Grid>
            </Border>

            <!-- Command List -->
            <ListBox x:Name="CommandList"
                     Grid.Row="1"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemContainerStyle="{StaticResource CommandListBoxItemStyle}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     MouseDoubleClick="CommandList_MouseDoubleClick"
                     SelectionChanged="CommandList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Category Tag -->
                            <Border Grid.Column="0"
                                    Background="#2A2A2A"
                                    CornerRadius="3"
                                    Padding="6,2"
                                    Margin="0,0,8,0"
                                    VerticalAlignment="Center">
                                <TextBlock Text="{Binding Category}"
                                           FontSize="10"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Border>

                            <!-- Command Name -->
                            <TextBlock Grid.Column="1"
                                       Text="{Binding Name}"
                                       FontSize="13"
                                       VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>

                            <!-- Shortcut -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding Shortcut}"
                                       FontSize="11"
                                       Foreground="{StaticResource ShortcutBrush}"
                                       VerticalAlignment="Center"
                                       Margin="8,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Status Bar -->
            <Border Grid.Row="2"
                    Background="#252629"
                    CornerRadius="0,0,8,8"
                    Padding="12,6">
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="StatusText"
                               Text="Type to search commands"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Text=" - "
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="8,0"/>
                    <TextBlock Text="Up/Down to navigate, Enter to execute, Esc to close"
                               FontSize="11"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
