<Window x:Class="MusicEngineEditor.Views.Dialogs.NewProjectDialogEnhanced"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="New Project"
        Width="900" Height="650"
        MinWidth="800" MinHeight="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>

        <!-- String to Color Converter -->
        <local:StringToColorConverter x:Key="StringToColorConverter"
                                      xmlns:local="clr-namespace:MusicEngineEditor.Views.Dialogs"/>

        <!-- Template Card Style -->
        <Style x:Key="TemplateCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- Category Button Style -->
        <Style x:Key="CategoryButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="IsChecked" Value="False"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Border" Property="Background" Value="#3C3F41"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Main Content -->
        <Grid Grid.Row="0" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" MinWidth="160"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Categories -->
            <Border Grid.Column="0"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Search Box -->
                    <Border DockPanel.Dock="Top" Padding="8">
                        <TextBox x:Name="SearchBox"
                                 Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="8,6"
                                 ToolTip="Search templates...">
                            <TextBox.Style>
                                <Style TargetType="TextBox">
                                    <Style.Triggers>
                                        <Trigger Property="Text" Value="">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <VisualBrush Stretch="None" AlignmentX="Left">
                                                        <VisualBrush.Visual>
                                                            <TextBlock Text="  Search templates..."
                                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                                       FontSize="12"/>
                                                        </VisualBrush.Visual>
                                                    </VisualBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBox.Style>
                        </TextBox>
                    </Border>

                    <!-- Categories List -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="8,0,8,8">
                            <TextBlock Text="CATEGORIES"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="8,8,0,8"/>

                            <RadioButton Content="All Templates"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsAllCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>
                            <RadioButton Content="Empty"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsEmptyCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>
                            <RadioButton Content="Electronic"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsElectronicCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>
                            <RadioButton Content="Band/Rock"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsBandCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>
                            <RadioButton Content="Orchestral"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsOrchestralCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>
                            <RadioButton Content="Custom"
                                         Style="{StaticResource CategoryButtonStyle}"
                                         IsChecked="{Binding IsCustomCategorySelected, Mode=TwoWay}"
                                         GroupName="Category"/>

                            <Separator Background="{DynamicResource BorderBrush}" Margin="0,12"/>

                            <TextBlock Text="RECENT"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       Margin="8,0,0,8"/>

                            <ItemsControl ItemsSource="{Binding RecentTemplates}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="Transparent"
                                                Padding="8,6"
                                                CornerRadius="4"
                                                Cursor="Hand"
                                                MouseLeftButtonUp="RecentTemplate_Click">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#3C3F41"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding TemplateName}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource ForegroundBrush}"
                                                       TextTrimming="CharacterEllipsis"/>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>

            <!-- Center Panel: Template Grid -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="Choose a Template"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock Text="Select a template to get started with your new project"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Template Gallery -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredTemplates}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource TemplateCardStyle}"
                                        Width="180" Height="160"
                                        MouseLeftButtonUp="TemplateCard_Click"
                                        Tag="{Binding}">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftDoubleClick"
                                                      Command="{Binding DataContext.SelectTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      CommandParameter="{Binding}"/>
                                    </Border.InputBindings>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Thumbnail / Icon -->
                                        <Border Grid.Row="0"
                                                Background="{DynamicResource BackgroundBrush}"
                                                CornerRadius="4"
                                                Margin="0,0,0,8">
                                            <TextBlock Text="{Binding CategoryIcon}"
                                                       FontSize="32"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                        </Border>

                                        <!-- Template Name -->
                                        <TextBlock Grid.Row="1"
                                                   Text="{Binding TemplateName}"
                                                   FontWeight="SemiBold"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   ToolTip="{Binding TemplateName}"/>

                                        <!-- Track Count -->
                                        <TextBlock Grid.Row="2"
                                                   Text="{Binding Summary}"
                                                   FontSize="10"
                                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                   Margin="0,2,0,0"/>

                                        <!-- Category Badge -->
                                        <Border Grid.Row="3"
                                                Background="{DynamicResource AccentBrush}"
                                                CornerRadius="8"
                                                Padding="6,2"
                                                HorizontalAlignment="Left"
                                                Margin="0,6,0,0">
                                            <TextBlock Text="{Binding CategoryName}"
                                                       FontSize="9"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Right Panel: Project Settings -->
            <Border Grid.Column="2"
                    Background="{DynamicResource PanelBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1,0,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="16">
                        <!-- Template Preview Header -->
                        <TextBlock Text="PROJECT SETTINGS"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,16"/>

                        <!-- Selected Template Info -->
                        <Border Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,16"
                                Visibility="{Binding HasSelectedTemplate, Converter={StaticResource BoolToVisConverter}}">
                            <StackPanel>
                                <TextBlock Text="{Binding SelectedTemplate.TemplateName}"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>
                                <TextBlock Text="{Binding SelectedTemplate.Description}"
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           TextWrapping="Wrap"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Track Preview -->
                        <TextBlock Text="TRACKS"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"
                                   Visibility="{Binding HasSelectedTemplate, Converter={StaticResource BoolToVisConverter}}"/>

                        <Border Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="6"
                                MaxHeight="120"
                                Margin="0,0,0,16"
                                Visibility="{Binding HasSelectedTemplate, Converter={StaticResource BoolToVisConverter}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ItemsControl ItemsSource="{Binding SelectedTemplate.Tracks}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Padding="8,4">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border Width="12" Height="12"
                                                            CornerRadius="2"
                                                            Margin="0,0,8,0">
                                                        <Border.Background>
                                                            <SolidColorBrush Color="{Binding Color, Converter={StaticResource StringToColorConverter}}"/>
                                                        </Border.Background>
                                                    </Border>
                                                    <TextBlock Text="{Binding Name}"
                                                               FontSize="11"
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Border>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,16"/>

                        <!-- Project Name -->
                        <TextBlock Text="Project Name"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="ProjectNameBox"
                                 Text="{Binding ProjectName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="10,8"
                                 FontSize="12"
                                 Margin="0,0,0,12"/>

                        <!-- Project Location -->
                        <TextBlock Text="Location"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Text="{Binding ProjectLocation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Background="{DynamicResource EditorBackgroundBrush}"
                                     Foreground="{DynamicResource ForegroundBrush}"
                                     BorderBrush="{DynamicResource BorderBrush}"
                                     Padding="10,8"
                                     FontSize="11"/>
                            <Button Grid.Column="1"
                                    Content="..."
                                    Click="BrowseButton_Click"
                                    Padding="12,8"
                                    Margin="4,0,0,0"/>
                        </Grid>

                        <!-- Namespace -->
                        <TextBlock Text="Namespace"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox Text="{Binding Namespace, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Background="{DynamicResource EditorBackgroundBrush}"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 BorderBrush="{DynamicResource BorderBrush}"
                                 Padding="10,8"
                                 FontSize="12"
                                 Margin="0,0,0,16"/>

                        <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,16"/>

                        <!-- Project Preview Path -->
                        <TextBlock Text="PROJECT PATH"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>
                        <Border Background="{DynamicResource BackgroundBrush}"
                                CornerRadius="4"
                                Padding="10,8">
                            <TextBlock Text="{Binding FullProjectPath}"
                                       FontSize="10"
                                       FontFamily="Consolas"
                                       Foreground="{DynamicResource ForegroundBrush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Create Empty Project"
                            Click="CreateEmpty_Click"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Padding="15,8"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Create Project"
                            Click="CreateButton_Click"
                            IsDefault="True"
                            Padding="20,8"
                            Margin="0,0,10,0"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"
                            IsEnabled="{Binding CanCreate}"/>
                    <Button Content="Cancel"
                            IsCancel="True"
                            Padding="20,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
