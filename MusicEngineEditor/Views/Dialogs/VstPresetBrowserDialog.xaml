<Window x:Class="MusicEngineEditor.Views.Dialogs.VstPresetBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:MusicEngineEditor.Converters"
        mc:Ignorable="d"
        Title="Preset Browser"
        Width="650" Height="550"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <!-- Preset list item style -->
        <Style x:Key="PresetListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category badge colors -->
        <SolidColorBrush x:Key="FactoryBadgeBrush" Color="#00FF88"/>
        <SolidColorBrush x:Key="UserBadgeBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="PluginBadgeBrush" Color="#9C7CE8"/>
    </Window.Resources>

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel>
                    <TextBlock x:Name="PluginNameHeader"
                               Text="Plugin Presets"
                               FontWeight="SemiBold"
                               FontSize="16"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock Text="{Binding CurrentPresetName, StringFormat='Current: {0}'}"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Refresh"
                        Command="{Binding RefreshPresetsCommand}"
                        Style="{DynamicResource ToolbarButtonStyle}"
                        Padding="12,6"/>
            </Grid>
        </Border>

        <!-- Search and Filter Bar -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                Padding="16,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Grid.Column="0"
                        Background="#141414"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,6"
                        Margin="0,0,10,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Search..."
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Visibility="{Binding SearchText, Converter={StaticResource StringToVisibilityConverter}, ConverterParameter=inverse}"/>

                        <TextBox Grid.Column="0" Grid.ColumnSpan="2"
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="{DynamicResource ForegroundBrush}"
                                 CaretBrush="{DynamicResource ForegroundBrush}"
                                 FontSize="12"
                                 VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Category Filter -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Categories}"
                          SelectedItem="{Binding SelectedCategory}"
                          Width="120"
                          Margin="0,0,10,0"/>

                <!-- Factory/User Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <CheckBox Content="Factory"
                              IsChecked="{Binding ShowFactoryPresets}"
                              Margin="0,0,10,0"/>
                    <CheckBox Content="User"
                              IsChecked="{Binding ShowUserPresets}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Preset List -->
        <ListBox Grid.Row="2"
                 ItemsSource="{Binding FilteredPresets}"
                 SelectedItem="{Binding SelectedPreset}"
                 ItemContainerStyle="{StaticResource PresetListItemStyle}"
                 Background="Transparent"
                 BorderThickness="0"
                 Padding="8"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Name}"
                                       FontSize="13"
                                       FontWeight="Medium"
                                       TextTrimming="CharacterEllipsis"/>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <!-- Type Badge -->
                                <Border CornerRadius="3"
                                        Padding="6,2"
                                        Margin="0,0,6,0">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="{StaticResource PluginBadgeBrush}"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFactoryPreset}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource FactoryBadgeBrush}"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding IsUserPreset}" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource UserBadgeBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding TypeDisplay}"
                                               FontSize="10"
                                               FontWeight="SemiBold"
                                               Foreground="White"/>
                                </Border>

                                <!-- Category -->
                                <TextBlock Text="{Binding Category}"
                                           FontSize="11"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           VerticalAlignment="Center"
                                           Visibility="{Binding Category, Converter={StaticResource StringToVisibilityConverter}}"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- File indicator -->
                        <TextBlock Grid.Column="1"
                                   Text="File"
                                   FontSize="10"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding IsFilePreset, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Save New Preset Section -->
        <Border Grid.Row="3"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Save as:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>

                <TextBox Grid.Column="1"
                         Text="{Binding NewPresetName, UpdateSourceTrigger=PropertyChanged}"
                         Background="{DynamicResource InputBackgroundBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         Foreground="{DynamicResource ForegroundBrush}"
                         Padding="8,6"
                         VerticalContentAlignment="Center"/>

                <Button Grid.Column="2"
                        Content="Save"
                        Command="{Binding SavePresetCommand}"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Padding="16,6"
                        Margin="10,0,0,0"/>

                <Button Grid.Column="3"
                        Content="Open Folder"
                        Command="{Binding OpenPresetsFolderCommand}"
                        Style="{DynamicResource ToolbarButtonStyle}"
                        Padding="12,6"
                        Margin="10,0,0,0"
                        ToolTip="Open user presets folder"/>
            </Grid>
        </Border>

        <!-- Footer with action buttons -->
        <Border Grid.Row="4"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Delete button (for user presets) -->
                <Button Grid.Column="0"
                        Content="Delete"
                        Command="{Binding DeletePresetCommand}"
                        Style="{DynamicResource ToolbarButtonStyle}"
                        Foreground="#FF4757"
                        Padding="12,6"
                        ToolTip="Delete selected user preset"/>

                <!-- Status message -->
                <TextBlock Grid.Column="1"
                           Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           FontSize="12"/>

                <!-- Action buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Preview"
                            Command="{Binding PreviewPresetCommand}"
                            Style="{DynamicResource ToolbarButtonStyle}"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            ToolTip="Preview preset without closing dialog"/>
                    <Button Content="Load"
                            x:Name="LoadButton"
                            Click="LoadButton_Click"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Padding="20,6"
                            Margin="0,0,8,0"
                            IsDefault="True"/>
                    <Button Content="Cancel"
                            Click="CancelButton_Click"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Padding="16,6"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
