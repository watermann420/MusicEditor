<Window x:Class="MusicEngineEditor.Views.Dialogs.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Export Audio"
        Width="700" Height="650"
        MinWidth="600" MinHeight="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel>
                <!-- File Selection Section -->
                <TextBlock Text="Source File"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="{Binding InputPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource EditorBackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Padding="8,6"
                             IsReadOnly="True"/>
                    <Button Grid.Column="1"
                            Content="Browse..."
                            Command="{Binding BrowseInputCommand}"
                            Padding="15,6"
                            Margin="10,0,0,0"/>
                </Grid>

                <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                <!-- Preset Selection -->
                <TextBlock Text="Export Preset"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Preset:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Presets}"
                              SelectedItem="{Binding SelectedPreset, Mode=TwoWay}"
                              DisplayMemberPath="Name"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"/>
                </Grid>

                <!-- Preset Description -->
                <Border Background="{DynamicResource PanelBackgroundBrush}"
                        CornerRadius="4"
                        Padding="12"
                        Margin="0,0,0,20"
                        Visibility="{Binding IsCustomPreset, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding SelectedPreset.Description}"
                               TextWrapping="Wrap"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="11"/>
                </Border>

                <Separator Background="{DynamicResource BorderBrush}" Margin="0,0,0,20"/>

                <!-- Format Settings -->
                <TextBlock Text="Format Settings"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,15"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Format:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding Formats}"
                              SelectedItem="{Binding SelectedFormat, Mode=TwoWay}"
                              IsEnabled="{Binding IsCustomPreset}"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              Margin="0,0,20,0"/>

                    <TextBlock Grid.Column="2" Text="Bit Rate:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Column="3"
                              ItemsSource="{Binding BitRates}"
                              SelectedItem="{Binding SelectedBitRate, Mode=TwoWay}"
                              IsEnabled="{Binding IsCustomPreset}"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Mode=OneWay}"/>
                                    <Run Text=" kbps"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="1" Text="Sample Rate:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="1"
                              ItemsSource="{Binding SampleRates}"
                              SelectedItem="{Binding SelectedSampleRate, Mode=TwoWay}"
                              IsEnabled="{Binding IsCustomPreset}"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              Margin="0,10,20,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Mode=OneWay}"/>
                                    <Run Text=" Hz"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>

                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Bit Depth:" VerticalAlignment="Center" Margin="0,10,0,0"/>
                    <ComboBox Grid.Row="1" Grid.Column="3"
                              ItemsSource="{Binding BitDepths}"
                              SelectedItem="{Binding SelectedBitDepth, Mode=TwoWay}"
                              IsEnabled="{Binding IsCustomPreset}"
                              Background="{DynamicResource EditorBackgroundBrush}"
                              Foreground="{DynamicResource ForegroundBrush}"
                              BorderBrush="{DynamicResource BorderBrush}"
                              Margin="0,10,0,0">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock>
                                    <Run Text="{Binding Mode=OneWay}"/>
                                    <Run Text="-bit"/>
                                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Grid>

                <Separator Background="{DynamicResource BorderBrush}" Margin="0,15,0,20"/>

                <!-- Loudness Settings -->
                <TextBlock Text="Loudness Normalization"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,15"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <CheckBox Content="Enable loudness normalization"
                          IsChecked="{Binding NormalizeLoudness, Mode=TwoWay}"
                          Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,10" IsEnabled="{Binding NormalizeLoudness}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Target LUFS:" VerticalAlignment="Center"/>
                    <Slider Grid.Column="1"
                            Value="{Binding TargetLufs, Mode=TwoWay}"
                            Minimum="-24"
                            Maximum="-6"
                            TickFrequency="1"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right">
                        <Run Text="{Binding TargetLufs, StringFormat={}{0:F0}}"/>
                        <Run Text=" LUFS"/>
                    </TextBlock>

                    <TextBlock Grid.Row="1" Text="Max True Peak:" VerticalAlignment="Center" Margin="0,15,0,0"/>
                    <Slider Grid.Row="1" Grid.Column="1"
                            Value="{Binding MaxTruePeak, Mode=TwoWay}"
                            Minimum="-3"
                            Maximum="0"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            VerticalAlignment="Center"
                            Margin="0,15,10,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="2"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Margin="0,15,0,0">
                        <Run Text="{Binding MaxTruePeak, StringFormat={}{0:F1}}"/>
                        <Run Text=" dBTP"/>
                    </TextBlock>
                </Grid>

                <Separator Background="{DynamicResource BorderBrush}" Margin="0,15,0,20"/>

                <!-- Output Settings -->
                <TextBlock Text="Output"
                           FontWeight="SemiBold"
                           FontSize="14"
                           Margin="0,0,0,10"
                           Foreground="{DynamicResource BrightForegroundBrush}"/>

                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Directory:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding OutputPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource EditorBackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Padding="8,6"/>
                    <Button Grid.Column="2"
                            Content="Browse..."
                            Command="{Binding BrowseOutputCommand}"
                            Padding="15,6"
                            Margin="10,0,0,0"/>
                </Grid>

                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Filename:" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1"
                             Text="{Binding OutputFileName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Background="{DynamicResource EditorBackgroundBrush}"
                             Foreground="{DynamicResource ForegroundBrush}"
                             BorderBrush="{DynamicResource BorderBrush}"
                             Padding="8,6"/>
                </Grid>

                <!-- Progress Section -->
                <Border Background="{DynamicResource PanelBackgroundBrush}"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="{Binding ProgressText}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <ProgressBar Value="{Binding Progress}"
                                     Height="6"
                                     Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel>
                                <TextBlock Text="Source"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                <TextBlock Text="{Binding SourceLoudnessText}"
                                           FontWeight="SemiBold"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock Text="Gain Applied"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding GainAppliedText}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                                <TextBlock Text="Output"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding OutputLoudnessText}"
                                           FontWeight="SemiBold"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Button Panel -->
        <Border Grid.Row="1"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <Grid>
                <Button Content="Open Output Folder"
                        Command="{Binding OpenOutputFolderCommand}"
                        HorizontalAlignment="Left"
                        Padding="15,8"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Export"
                            Command="{Binding ExportCommand}"
                            IsEnabled="{Binding CanExport}"
                            Padding="20,8"
                            Margin="0,0,10,0"
                            Background="{DynamicResource AccentBrush}"
                            Foreground="White"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelExportCommand}"
                            IsCancel="True"
                            Padding="20,8"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"
                                                    xmlns:local="clr-namespace:MusicEngineEditor.Views.Dialogs"/>
    </Window.Resources>
</Window>
