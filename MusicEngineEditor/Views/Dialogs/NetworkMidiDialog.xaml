<Window x:Class="MusicEngineEditor.Views.Dialogs.NetworkMidiDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Network MIDI"
        Width="650" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Session Item Style -->
        <Style x:Key="SessionItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{DynamicResource PanelBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Peer Item Style -->
        <Style x:Key="PeerItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="Network MIDI"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock Text="Share MIDI over the network (RTP-MIDI)"
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"/>
                </StackPanel>

                <!-- Connection Status -->
                <Border Grid.Column="1"
                        x:Name="ConnectionStatusBorder"
                        CornerRadius="12"
                        Padding="12,6"
                        Background="#3D2D2D"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse x:Name="ConnectionIndicator"
                                 Width="8" Height="8"
                                 Fill="#F75464"
                                 Margin="0,0,8,0"/>
                        <TextBlock x:Name="ConnectionStatus"
                                   Text="Not Connected"
                                   FontSize="12"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <!-- Not Connected View -->
            <Grid x:Name="NotConnectedView">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="220"/>
                </Grid.ColumnDefinitions>

                <!-- Session Browser -->
                <Border Grid.Column="0" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Section Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Discovered Sessions"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource BrightForegroundBrush}"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Content="Refresh"
                                    Style="{DynamicResource ToolbarButtonStyle}"
                                    Click="RefreshSessions_Click"/>
                        </Grid>

                        <!-- Scanning Indicator -->
                        <Border Grid.Row="1"
                                x:Name="ScanningPanel"
                                Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,0,0,12"
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <ProgressBar IsIndeterminate="True"
                                             Width="100"
                                             Height="4"
                                             Margin="0,0,12,0"/>
                                <TextBlock Text="Scanning for sessions..."
                                           FontSize="12"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Session List -->
                        <ListBox Grid.Row="2"
                                 x:Name="SessionList"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ItemContainerStyle="{StaticResource SessionItemStyle}"
                                 SelectionChanged="SessionList_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}"
                                                       FontSize="13"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource BrightForegroundBrush}"/>
                                            <TextBlock Text="{Binding Host}"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Latency -->
                                        <StackPanel Grid.Column="1"
                                                    Orientation="Horizontal"
                                                    Margin="12,0">
                                            <TextBlock Text="{Binding Latency}"
                                                       FontSize="11"
                                                       Foreground="{Binding LatencyBrush}"
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text=" ms"
                                                       FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>

                                        <!-- Peer Count -->
                                        <Border Grid.Column="2"
                                                Background="{DynamicResource AccentBrush}"
                                                CornerRadius="10"
                                                Padding="8,4">
                                            <TextBlock Text="{Binding PeerCount}"
                                                       FontSize="10"
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!-- Empty State -->
                        <StackPanel Grid.Row="2"
                                    x:Name="EmptyState"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed">
                            <TextBlock Text="&#x1F50C;"
                                       FontSize="36"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="No sessions found"
                                       FontSize="14"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,8,0,0"/>
                            <TextBlock Text="Create a new session or try refreshing"
                                       FontSize="12"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Action Panel -->
                <Border Grid.Column="1"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1,0,0,0"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="Create Session"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   Margin="0,0,0,12"/>

                        <TextBlock Text="Session Name"
                                   FontSize="11"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4"/>
                        <TextBox x:Name="SessionNameInput"
                                 Style="{DynamicResource InputTextBoxStyle}"
                                 Text="My MIDI Session"
                                 Margin="0,0,0,12"/>

                        <Button Content="Create Session"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Click="CreateSession_Click"
                                HorizontalAlignment="Stretch"/>

                        <Separator Margin="0,24,0,16"/>

                        <TextBlock Text="Join Selected"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   Margin="0,0,0,12"/>

                        <Button x:Name="JoinButton"
                                Content="Join Session"
                                Style="{DynamicResource SecondaryButtonStyle}"
                                Click="JoinSession_Click"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Connected View -->
            <Grid x:Name="ConnectedView" Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>

                <!-- Peer List and Routing -->
                <Border Grid.Column="0" Padding="16">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Session Info -->
                        <Border Grid.Row="0"
                                Background="{DynamicResource PanelBackgroundBrush}"
                                CornerRadius="4"
                                Padding="12"
                                Margin="0,0,0,12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="SessionNameDisplay"
                                               Text="My MIDI Session"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                                    <TextBlock x:Name="SessionHostDisplay"
                                               Text="Hosted by: You"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                                               Margin="0,4,0,0"/>
                                </StackPanel>

                                <Button Grid.Column="1"
                                        Content="Leave"
                                        Style="{DynamicResource SecondaryButtonStyle}"
                                        Foreground="{DynamicResource ErrorBrush}"
                                        Click="LeaveSession_Click"/>
                            </Grid>
                        </Border>

                        <!-- Connected Peers -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0"
                                       Text="Connected Peers"
                                       FontSize="12"
                                       FontWeight="SemiBold"
                                       Foreground="{DynamicResource BrightForegroundBrush}"
                                       Margin="0,0,0,8"/>

                            <ListBox Grid.Row="1"
                                     x:Name="PeerList"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     ItemContainerStyle="{StaticResource PeerItemStyle}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Status Indicator -->
                                            <Ellipse Grid.Column="0"
                                                     Width="8" Height="8"
                                                     Fill="{Binding StatusBrush}"
                                                     Margin="0,0,10,0"
                                                     VerticalAlignment="Center"/>

                                            <!-- Peer Info -->
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}"
                                                           FontSize="12"
                                                           Foreground="{DynamicResource ForegroundBrush}"/>
                                                <TextBlock Text="{Binding IpAddress}"
                                                           FontSize="10"
                                                           Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                            </StackPanel>

                                            <!-- Latency -->
                                            <TextBlock Grid.Column="2"
                                                       Text="{Binding LatencyDisplay}"
                                                       FontSize="11"
                                                       Foreground="{Binding LatencyBrush}"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Border>

                <!-- MIDI Routing Options -->
                <Border Grid.Column="1"
                        Background="{DynamicResource PanelBackgroundBrush}"
                        BorderBrush="{DynamicResource BorderBrush}"
                        BorderThickness="1,0,0,0"
                        Padding="16">
                    <StackPanel>
                        <TextBlock Text="MIDI Routing"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   Margin="0,0,0,16"/>

                        <TextBlock Text="Channels to Share"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>

                        <CheckBox Content="All Channels"
                                  x:Name="AllChannelsCheck"
                                  IsChecked="True"
                                  Click="AllChannelsCheck_Click"
                                  Margin="0,0,0,8"/>

                        <Border Background="#1E1F22"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,0,0,16">
                            <StackPanel x:Name="ChannelCheckboxes">
                                <!-- Individual channel checkboxes will be populated programmatically -->
                            </StackPanel>
                        </Border>

                        <Separator Margin="0,0,0,16"/>

                        <TextBlock Text="Options"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>

                        <CheckBox Content="Send Clock"
                                  x:Name="SendClockCheck"
                                  IsChecked="True"
                                  Margin="0,0,0,6"/>

                        <CheckBox Content="Receive Clock"
                                  x:Name="ReceiveClockCheck"
                                  IsChecked="True"
                                  Margin="0,0,0,6"/>

                        <CheckBox Content="Send Program Changes"
                                  x:Name="SendProgramCheck"
                                  IsChecked="True"
                                  Margin="0,0,0,6"/>

                        <Separator Margin="0,16,0,16"/>

                        <TextBlock Text="Latency Compensation"
                                   FontSize="12"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,8"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>

                            <Slider x:Name="LatencySlider"
                                    Grid.Column="0"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="20"
                                    VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding Value, ElementName=LatencySlider, StringFormat='{}{0:0} ms'}"
                                       FontSize="11"
                                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="StatusText"
                           Text="Ready"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="Close"
                        Style="{DynamicResource SecondaryButtonStyle}"
                        Click="CloseButton_Click"
                        IsCancel="True"/>
            </Grid>
        </Border>
    </Grid>
</Window>
