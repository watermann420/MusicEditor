<Window x:Class="MusicEngineEditor.Views.Dialogs.ImportAudioDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Import Audio"
        Width="500" Height="260"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- File Path -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="File Path:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 x:Name="FilePathBox"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,10,10"/>
        <Button Grid.Row="0" Grid.Column="2" Content="Browse..."
                Click="BrowseButton_Click"
                Padding="15,6"
                Margin="0,0,0,10"/>

        <!-- Sample Name -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Sample Name:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
                 x:Name="SampleNameBox"
                 Background="{DynamicResource EditorBackgroundBrush}"
                 Foreground="{DynamicResource ForegroundBrush}"
                 BorderBrush="{DynamicResource BorderBrush}"
                 Padding="8,6"
                 Margin="0,0,0,10"/>

        <!-- Category -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Category:" VerticalAlignment="Center" Margin="0,0,10,10"/>
        <ComboBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                  x:Name="CategoryCombo"
                  Background="{DynamicResource EditorBackgroundBrush}"
                  Foreground="{DynamicResource ForegroundBrush}"
                  BorderBrush="{DynamicResource BorderBrush}"
                  Padding="8,4"
                  Margin="0,0,0,10">
            <ComboBoxItem Content="Drums" IsSelected="True"/>
            <ComboBoxItem Content="Bass"/>
            <ComboBoxItem Content="Leads"/>
            <ComboBoxItem Content="FX"/>
            <ComboBoxItem Content="Other"/>
        </ComboBox>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="OK"
                    IsDefault="True"
                    Click="OkButton_Click"
                    Padding="20,8"
                    Margin="0,0,10,0"
                    Background="{DynamicResource AccentBrush}"
                    Foreground="White"/>
            <Button Content="Cancel"
                    IsCancel="True"
                    Padding="20,8"/>
        </StackPanel>
    </Grid>
</Window>
