<Window x:Class="MusicEngineEditor.Views.Dialogs.PluginPresetBrowserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Plugin Preset Browser"
        Width="900" Height="650"
        MinWidth="700" MinHeight="500"
        WindowStartupLocation="CenterOwner"
        Background="#1E1F22"
        Foreground="#BCBEC4">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Plugin List Item Style -->
        <Style x:Key="PluginListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#BCBEC4"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4B6EAF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Preset List Item Style -->
        <Style x:Key="PresetListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#BCBEC4"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#4B6EAF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Badge Colors -->
        <SolidColorBrush x:Key="FactoryBadge" Color="#6AAB73"/>
        <SolidColorBrush x:Key="UserBadge" Color="#4B6EAF"/>
        <SolidColorBrush x:Key="FavoriteBadge" Color="#E8A73C"/>

        <!-- Category Tag Style -->
        <Style x:Key="CategoryTagStyle" TargetType="Border">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" MinWidth="180"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="3"
                Background="#2B2D30"
                BorderBrush="#3C3F41"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Plugin Preset Browser"
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="PresetCountText"
                               Text=" - 0 presets"
                               FontSize="12"
                               Foreground="#808080"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Search Box -->
                <Border Grid.Column="1"
                        Background="#252628"
                        BorderBrush="#3C3F41"
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="8,4"
                        Width="300">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Path Data="M 6,0 A 6,6 0 1 1 5.99,0 M 10,10 L 14,14"
                              Stroke="#6E6E6E"
                              StrokeThickness="1.5"
                              Width="16" Height="16"
                              Margin="0,0,8,0"
                              VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchBox"
                                 Grid.Column="1"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#BCBEC4"
                                 CaretBrush="#BCBEC4"
                                 FontSize="12"
                                 VerticalAlignment="Center"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Left Panel - Plugin List -->
        <Border Grid.Row="1" Grid.Column="0"
                Background="#2B2D30"
                BorderBrush="#3C3F41"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Plugin List Header -->
                <Border Grid.Row="0"
                        BorderBrush="#3C3F41"
                        BorderThickness="0,0,0,1"
                        Padding="12,8">
                    <Grid>
                        <TextBlock Text="Plugins"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="#808080"/>
                        <TextBlock x:Name="PluginCountText"
                                   Text="0"
                                   HorizontalAlignment="Right"
                                   FontSize="11"
                                   Foreground="#606060"/>
                    </Grid>
                </Border>

                <!-- Plugin List -->
                <ListBox x:Name="PluginListBox"
                         Grid.Row="1"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="8"
                         ItemContainerStyle="{StaticResource PluginListItemStyle}"
                         SelectionChanged="PluginListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel>
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Medium"
                                               FontSize="12"/>
                                    <TextBlock Text="{Binding Vendor}"
                                               FontSize="10"
                                               Foreground="#808080"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1"
                                           Text="{Binding PresetCount}"
                                           FontSize="10"
                                           Foreground="#606060"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <GridSplitter Grid.Row="1" Grid.Column="1"
                      Width="4"
                      Background="#2B2D30"
                      HorizontalAlignment="Center"/>

        <!-- Right Panel - Presets -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Filter Bar -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="#3C3F41"
                    BorderThickness="0,0,0,1"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Category Filter -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Show:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="#808080"
                                   FontSize="11"/>
                        <ComboBox x:Name="CategoryFilter"
                                  Width="120"
                                  Background="#333337"
                                  Foreground="#BCBEC4"
                                  BorderBrush="#3C3F41"
                                  SelectionChanged="CategoryFilter_SelectionChanged">
                            <ComboBoxItem Content="All" IsSelected="True"/>
                            <ComboBoxItem Content="Favorites"/>
                            <ComboBoxItem Content="Factory"/>
                            <ComboBoxItem Content="User"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Tags -->
                    <ItemsControl Grid.Column="1"
                                  x:Name="TagsPanel"
                                  Margin="16,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton Content="{Binding}"
                                              Background="#333337"
                                              Foreground="#A0A0A0"
                                              BorderThickness="0"
                                              Padding="8,4"
                                              Margin="2"
                                              Click="TagButton_Click">
                                    <ToggleButton.Style>
                                        <Style TargetType="ToggleButton">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ToggleButton">
                                                        <Border x:Name="border"
                                                                Background="{TemplateBinding Background}"
                                                                CornerRadius="3"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsChecked" Value="True">
                                                                <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                                                                <Setter Property="Foreground" Value="White"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ToggleButton.Style>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Sort -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Sort:"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"
                                   Foreground="#808080"
                                   FontSize="11"/>
                        <ComboBox x:Name="SortCombo"
                                  Width="100"
                                  Background="#333337"
                                  Foreground="#BCBEC4"
                                  BorderBrush="#3C3F41"
                                  SelectionChanged="SortCombo_SelectionChanged">
                            <ComboBoxItem Content="Name" IsSelected="True"/>
                            <ComboBoxItem Content="Date"/>
                            <ComboBoxItem Content="Category"/>
                        </ComboBox>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Preset List -->
            <ListBox x:Name="PresetListBox"
                     Grid.Row="1"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="8"
                     ItemContainerStyle="{StaticResource PresetListItemStyle}"
                     SelectionChanged="PresetListBox_SelectionChanged"
                     MouseDoubleClick="PresetListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Favorite Star -->
                            <Button Grid.Column="0"
                                    Content="{Binding FavoriteIcon}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="{Binding FavoriteColor}"
                                    FontSize="14"
                                    Padding="4"
                                    Margin="0,0,8,0"
                                    Cursor="Hand"
                                    Click="FavoriteButton_Click"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}"
                                           FontWeight="Medium"
                                           FontSize="12"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <!-- Type Badge -->
                                    <Border Style="{StaticResource CategoryTagStyle}"
                                            Background="{Binding TypeBadgeBrush}">
                                        <TextBlock Text="{Binding TypeDisplay}"
                                                   FontSize="10"
                                                   Foreground="White"/>
                                    </Border>

                                    <!-- Category -->
                                    <Border Style="{StaticResource CategoryTagStyle}"
                                            Visibility="{Binding HasCategory, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <TextBlock Text="{Binding Category}"
                                                   FontSize="10"
                                                   Foreground="#A0A0A0"/>
                                    </Border>

                                    <!-- Tags -->
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource CategoryTagStyle}">
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="10"
                                                               Foreground="#808080"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </StackPanel>

                            <!-- Plugin Name -->
                            <TextBlock Grid.Column="2"
                                       Text="{Binding PluginName}"
                                       FontSize="10"
                                       Foreground="#606060"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Grid.ColumnSpan="3"
                Background="#2B2D30"
                BorderBrush="#3C3F41"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Preset Info -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock x:Name="SelectedPresetInfo"
                               Text="No preset selected"
                               Foreground="#808080"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <CheckBox x:Name="PreviewCheckBox"
                              Content="Auto-Preview"
                              Foreground="#BCBEC4"
                              VerticalAlignment="Center"
                              Margin="0,0,16,0"/>
                    <Button Content="Preview"
                            Background="#333337"
                            Foreground="#BCBEC4"
                            BorderThickness="0"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            Click="PreviewButton_Click"/>
                    <Button Content="Load Preset"
                            Background="#4B6EAF"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="20,8"
                            Margin="0,0,8,0"
                            Click="LoadPresetButton_Click"/>
                    <Button Content="Cancel"
                            Background="#333337"
                            Foreground="#BCBEC4"
                            BorderThickness="0"
                            Padding="16,8"
                            IsCancel="True"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
