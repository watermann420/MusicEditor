<Window x:Class="MusicEngineEditor.Views.Dialogs.RecoveryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Project Recovery"
        Width="700" Height="500"
        MinWidth="500" MinHeight="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource ForegroundBrush}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Crash Recovery Badge Brush -->
        <SolidColorBrush x:Key="CrashRecoveryBadgeBrush" Color="#E07040"/>

        <!-- Auto-save Item Style -->
        <Style x:Key="AutoSaveItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd"
                                Background="{DynamicResource PanelBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="6">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Warning Icon -->
                <Border Grid.Column="0"
                        Width="48" Height="48"
                        Background="#3D3B30"
                        CornerRadius="24"
                        Margin="0,0,16,0">
                    <TextBlock Text="!"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="{DynamicResource WarningBrush}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!-- Title and Description -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="Project Recovery"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"/>
                    <TextBlock x:Name="HeaderDescription"
                               Text="MusicEngine Editor did not close properly. Recovery data is available."
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               Margin="0,4,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content: Auto-save List -->
        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Info Bar -->
            <Border Grid.Row="0"
                    Background="#2D3035"
                    CornerRadius="4"
                    Padding="12,8"
                    Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="i"
                               FontSize="14"
                               FontWeight="Bold"
                               Foreground="{DynamicResource InfoBrush}"
                               Background="#1E3A5F"
                               Width="20" Height="20"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1"
                               Text="Select an auto-save file to recover. The recovered project will be opened with unsaved changes."
                               FontSize="12"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               VerticalAlignment="Center"
                               TextWrapping="Wrap"/>
                </Grid>
            </Border>

            <!-- Auto-save List -->
            <ListBox Grid.Row="1"
                     x:Name="AutoSaveList"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemContainerStyle="{StaticResource AutoSaveItemStyle}"
                     VirtualizingPanel.IsVirtualizing="True"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     SelectionChanged="AutoSaveList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="48"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Project Icon with Crash Indicator -->
                            <Grid Grid.Column="0" Width="40" Height="40" Margin="0,0,12,0">
                                <Border Width="40" Height="40"
                                        Background="#393B40"
                                        CornerRadius="4">
                                    <TextBlock Text="P"
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{DynamicResource AccentBrush}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <!-- Crash Recovery Indicator -->
                                <Border Width="16" Height="16"
                                        Background="{StaticResource CrashRecoveryBadgeBrush}"
                                        CornerRadius="8"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Margin="0,-4,-4,0"
                                        Visibility="{Binding IsCrashRecovery, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="!"
                                               FontSize="10"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>

                            <!-- Project Info -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ProjectName}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource BrightForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock Text="{Binding SaveTime, StringFormat='{}{0:MMM d, yyyy HH:mm:ss}'}"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                    <TextBlock Text=" - "
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                    <TextBlock Text="{Binding FileSizeDisplay}"
                                               FontSize="11"
                                               Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                                </StackPanel>
                                <TextBlock Text="{Binding OriginalPath}"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="0,2,0,0"
                                           MaxWidth="400"/>
                            </StackPanel>

                            <!-- Time Ago Badge -->
                            <Border Grid.Column="2"
                                    CornerRadius="3"
                                    Padding="8,4"
                                    Margin="8,0"
                                    VerticalAlignment="Center"
                                    Background="#3C3F41">
                                <TextBlock Text="{Binding TimeAgo}"
                                           FontSize="10"
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"/>
                            </Border>

                            <!-- Delete Button -->
                            <Button Grid.Column="3"
                                    Content="X"
                                    Width="24" Height="24"
                                    FontSize="10"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center"
                                    ToolTip="Delete this auto-save"
                                    Click="DeleteAutoSave_Click"
                                    Tag="{Binding FilePath}">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="12">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#5C3535"/>
                                                            <Setter Property="Foreground" Value="{DynamicResource ErrorBrush}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel x:Name="EmptyState"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="Collapsed">
                <TextBlock Text="No auto-save files found"
                           FontSize="16"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Auto-save files will appear here if the application closes unexpectedly."
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           MaxWidth="300"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2"
                Background="{DynamicResource PanelBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side Actions -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button x:Name="DeleteAllButton"
                            Content="Delete All"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Click="DeleteAllButton_Click"
                            Foreground="{DynamicResource ErrorBrush}"
                            ToolTip="Delete all auto-save files"/>
                </StackPanel>

                <!-- Status -->
                <TextBlock Grid.Column="1"
                           x:Name="StatusText"
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>

                <!-- Right Side Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button x:Name="RecoverButton"
                            Content="Recover Selected"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Click="RecoverButton_Click"
                            IsEnabled="False"
                            Margin="0,0,8,0"/>
                    <Button Content="Skip Recovery"
                            Style="{DynamicResource SecondaryButtonStyle}"
                            Click="SkipButton_Click"
                            IsCancel="True"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
