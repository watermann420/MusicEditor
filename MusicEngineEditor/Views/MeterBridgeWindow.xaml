<Window x:Class="MusicEngineEditor.Views.MeterBridgeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
        mc:Ignorable="d"
        Title="Meter Bridge"
        Width="800" Height="200"
        MinWidth="400" MinHeight="100"
        WindowStartupLocation="CenterOwner"
        Background="#0D0D0D"
        Foreground="#E0E0E0"
        ShowInTaskbar="True"
        Topmost="{Binding ElementName=AlwaysOnTopCheck, Path=IsChecked}"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="HeaderColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextColor">#E0E0E0</Color>
        <Color x:Key="SecondaryTextColor">#808080</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource SecondaryTextColor}"/>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- ComboBox Style -->
        <Style x:Key="MeterTypeComboStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <!-- CheckBox Style -->
        <Style x:Key="OptionCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="ScaleSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="0.5"/>
            <Setter Property="Maximum" Value="2.0"/>
            <Setter Property="Value" Value="1.0"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource HeaderBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Meter Type:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <ComboBox x:Name="MeterTypeCombo"
                              Style="{StaticResource MeterTypeComboStyle}"
                              Width="100"
                              SelectionChanged="MeterTypeCombo_SelectionChanged"
                              ToolTip="Select meter display type">
                        <ComboBoxItem Content="Peak" IsSelected="True"/>
                        <ComboBoxItem Content="RMS"/>
                        <ComboBoxItem Content="LUFS"/>
                        <ComboBoxItem Content="Peak + RMS"/>
                    </ComboBox>

                    <Border Width="1"
                            Background="{StaticResource BorderBrush}"
                            Margin="12,2"/>

                    <TextBlock Text="Scale:"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <Slider x:Name="ScaleSlider"
                            Style="{StaticResource ScaleSliderStyle}"
                            ValueChanged="ScaleSlider_ValueChanged"
                            ToolTip="Meter display scale"/>
                    <TextBlock x:Name="ScaleText"
                               Text="100%"
                               Foreground="{StaticResource SecondaryTextBrush}"
                               VerticalAlignment="Center"
                               Width="40"
                               Margin="6,0,0,0"/>
                </StackPanel>

                <!-- Center - title -->
                <TextBlock Grid.Column="1"
                           Text="Meter Bridge"
                           FontWeight="SemiBold"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Right controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <CheckBox x:Name="ShowLabelsCheck"
                              Style="{StaticResource OptionCheckBoxStyle}"
                              Content="Labels"
                              IsChecked="True"
                              Checked="ShowLabelsCheck_Changed"
                              Unchecked="ShowLabelsCheck_Changed"
                              Margin="0,0,12,0"/>
                    <CheckBox x:Name="ShowPeakHoldCheck"
                              Style="{StaticResource OptionCheckBoxStyle}"
                              Content="Peak Hold"
                              IsChecked="True"
                              Checked="ShowPeakHoldCheck_Changed"
                              Unchecked="ShowPeakHoldCheck_Changed"
                              Margin="0,0,12,0"/>
                    <CheckBox x:Name="AlwaysOnTopCheck"
                              Style="{StaticResource OptionCheckBoxStyle}"
                              Content="Always on Top"
                              Margin="0,0,12,0"/>
                    <Button x:Name="ResetPeaksButton"
                            Content="Reset Peaks"
                            Padding="8,3"
                            Background="#3A3A3A"
                            Foreground="#CCCCCC"
                            BorderBrush="#5A5A5A"
                            Click="ResetPeaksButton_Click"
                            ToolTip="Reset all peak indicators"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Meters Container -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundBrush}"
                Padding="8">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="MetersContainer">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#1A1A1A"
                                    CornerRadius="3"
                                    BorderBrush="#3A3A3A"
                                    BorderThickness="1"
                                    Margin="2"
                                    Padding="4">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Track name label -->
                                    <TextBlock Grid.Row="0"
                                               Text="{Binding TrackName}"
                                               Foreground="{StaticResource SecondaryTextBrush}"
                                               FontSize="9"
                                               HorizontalAlignment="Center"
                                               TextTrimming="CharacterEllipsis"
                                               MaxWidth="60"
                                               Margin="0,0,0,4"
                                               Visibility="{Binding ShowLabel, Converter={StaticResource BoolToVisibilityConverter}}"/>

                                    <!-- Level Meter -->
                                    <controls:LevelMeter Grid.Row="1"
                                                         LeftLevel="{Binding LeftLevel}"
                                                         RightLevel="{Binding RightLevel}"
                                                         ShowPeakHold="{Binding ShowPeakHold}"
                                                         ShowScale="False"
                                                         ShowChannelLabels="False"
                                                         Width="{Binding MeterWidth}"
                                                         MinHeight="60"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
