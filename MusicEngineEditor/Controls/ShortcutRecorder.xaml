<UserControl x:Class="MusicEngineEditor.Controls.ShortcutRecorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="36" d:DesignWidth="250"
             Focusable="True"
             FocusVisualStyle="{x:Null}">

    <UserControl.Resources>
        <!-- Recording indicator animation -->
        <Storyboard x:Key="RecordingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="RecordingIndicator"
                           Storyboard.TargetProperty="Opacity"
                           From="1" To="0.3" Duration="0:0:0.6"
                           AutoReverse="True"/>
        </Storyboard>
    </UserControl.Resources>

    <Border x:Name="MainBorder"
            Background="{DynamicResource EditorBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8,4"
            Cursor="Hand"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Recording indicator -->
            <Ellipse x:Name="RecordingIndicator"
                     Grid.Column="0"
                     Width="8" Height="8"
                     Fill="#E06C75"
                     Margin="0,0,8,0"
                     Visibility="Collapsed"
                     VerticalAlignment="Center"/>

            <!-- Shortcut text display -->
            <TextBlock x:Name="ShortcutText"
                       Grid.Column="1"
                       Text="Click to record shortcut"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       VerticalAlignment="Center"
                       FontSize="13"
                       FontFamily="Segoe UI, sans-serif"/>

            <!-- Clear button -->
            <Button x:Name="ClearButton"
                    Grid.Column="2"
                    Content="&#10005;"
                    FontSize="10"
                    Width="20" Height="20"
                    Margin="8,0,0,0"
                    Padding="0"
                    VerticalAlignment="Center"
                    ToolTip="Clear shortcut"
                    Click="ClearButton_Click"
                    Visibility="Collapsed">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="3">
                                        <ContentPresenter HorizontalAlignment="Center"
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#252525"/>
                                            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#E06C75"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
        </Grid>
    </Border>
</UserControl>
