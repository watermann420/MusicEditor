<UserControl x:Class="MusicEngineEditor.Controls.MidiCCLane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MusicEngineEditor.ViewModels"
             xmlns:models="clr-namespace:MusicEngineEditor.Models"
             mc:Ignorable="d"
             d:DesignHeight="80" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type=vm:MidiCCLaneViewModel}"
             Background="#1A1A1A"
             ClipToBounds="True"
             Focusable="True"
             MinHeight="40">

    <UserControl.Resources>
        <!-- Colors for the CC Lane -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="BarLineBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="CCPointBrush" Color="#FF9500"/>
        <SolidColorBrush x:Key="CCPointSelectedBrush" Color="#FFBB55"/>
        <SolidColorBrush x:Key="CCPointHoverBrush" Color="#FFB030"/>
        <SolidColorBrush x:Key="CCLineBrush" Color="#FF9500"/>
        <SolidColorBrush x:Key="CCFillBrush" Color="#40FF9500"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#808080"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#252629"/>
        <SolidColorBrush x:Key="ComboBoxBackgroundBrush" Color="#181818"/>
        <SolidColorBrush x:Key="ButtonHoverBrush" Color="#252525"/>

        <!-- Gradient for CC points -->
        <RadialGradientBrush x:Key="CCPointGradient" GradientOrigin="0.3,0.3">
            <GradientStop Color="#FFBB55" Offset="0"/>
            <GradientStop Color="#FF9500" Offset="1"/>
        </RadialGradientBrush>

        <RadialGradientBrush x:Key="CCPointSelectedGradient" GradientOrigin="0.3,0.3">
            <GradientStop Color="#FFDD99" Offset="0"/>
            <GradientStop Color="#FFBB55" Offset="1"/>
        </RadialGradientBrush>

        <!-- ComboBox Style -->
        <Style x:Key="CCLaneComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ComboBoxBackgroundBrush}"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="100"/>
        </Style>

        <!-- Toggle Button Style for Mode Selection -->
        <Style x:Key="CCLaneModeButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="MinWidth" Value="24"/>
            <Setter Property="MinHeight" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#4A9EFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Small Button Style -->
        <Style x:Key="CCLaneSmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource LabelBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="16"/>
            <Setter Property="MinHeight" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonHoverBrush}"/>
                                <Setter Property="Foreground" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <!-- Header/Label area -->
            <ColumnDefinition Width="60"/>
            <!-- CC points canvas area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Header panel on the left -->
        <Border Grid.Column="0"
                Background="{StaticResource HeaderBackgroundBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top: Value label (127) -->
                <TextBlock Grid.Row="0"
                           Text="127"
                           Foreground="{StaticResource LabelBrush}"
                           FontSize="8"
                           HorizontalAlignment="Right"
                           Margin="0,2,4,0"/>

                <!-- Center: Controller selector and mode buttons -->
                <StackPanel Grid.Row="1"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <!-- Controller name (vertical) -->
                    <TextBlock x:Name="ControllerNameText"
                               Text="Mod"
                               Foreground="{StaticResource LabelBrush}"
                               FontSize="9"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               ToolTip="Click to change controller"/>

                    <!-- CC number -->
                    <TextBlock x:Name="ControllerNumberText"
                               Text="CC1"
                               Foreground="{StaticResource LabelBrush}"
                               FontSize="8"
                               HorizontalAlignment="Center"
                               Margin="0,2,0,0"/>

                    <!-- Mode buttons -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,4,0,0">
                        <ToggleButton x:Name="DrawModeButton"
                                      Style="{StaticResource CCLaneModeButtonStyle}"
                                      IsChecked="True"
                                      ToolTip="Draw Mode"
                                      Content="D"/>
                        <ToggleButton x:Name="EditModeButton"
                                      Style="{StaticResource CCLaneModeButtonStyle}"
                                      ToolTip="Edit Mode"
                                      Content="E"/>
                    </StackPanel>
                </StackPanel>

                <!-- Bottom: Value label (0) -->
                <TextBlock Grid.Row="2"
                           Text="0"
                           Foreground="{StaticResource LabelBrush}"
                           FontSize="8"
                           HorizontalAlignment="Right"
                           Margin="0,0,4,2"/>
            </Grid>
        </Border>

        <!-- CC points canvas area -->
        <Grid Grid.Column="1" ClipToBounds="True">
            <!-- Grid lines layer -->
            <Canvas x:Name="GridCanvas"
                    Background="{StaticResource BackgroundBrush}"
                    ClipToBounds="True"/>

            <!-- CC fill/area layer -->
            <Canvas x:Name="FillCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    IsHitTestVisible="False"/>

            <!-- CC line layer -->
            <Canvas x:Name="LineCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    IsHitTestVisible="False"/>

            <!-- CC points layer (interactive) -->
            <Canvas x:Name="PointsCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="OnCanvasMouseLeftButtonDown"
                    MouseLeftButtonUp="OnCanvasMouseLeftButtonUp"
                    MouseRightButtonDown="OnCanvasMouseRightButtonDown"
                    MouseMove="OnCanvasMouseMove"
                    MouseLeave="OnCanvasMouseLeave"/>

            <!-- Reference lines -->
            <Canvas x:Name="ReferenceCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    IsHitTestVisible="False"/>

            <!-- Hover value indicator -->
            <Border x:Name="HoverIndicator"
                    Background="#E0252629"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="4,2"
                    Visibility="Collapsed"
                    IsHitTestVisible="False"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <TextBlock x:Name="HoverValueText"
                           Foreground="#E0E0E0"
                           FontSize="10"
                           Text="Value: 64"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
