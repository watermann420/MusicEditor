<UserControl x:Class="MusicEngineEditor.Controls.TaskListPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="350"
             Background="#0D0D0D">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Priority Colors -->
        <SolidColorBrush x:Key="PriorityHigh" Color="#E85C5C"/>
        <SolidColorBrush x:Key="PriorityMedium" Color="#E8A73C"/>
        <SolidColorBrush x:Key="PriorityLow" Color="#00FF88"/>
        <SolidColorBrush x:Key="PriorityNone" Color="#808080"/>

        <!-- Category Colors -->
        <SolidColorBrush x:Key="CategoryMix" Color="#00D9FF"/>
        <SolidColorBrush x:Key="CategoryArrangement" Color="#9C7CE8"/>
        <SolidColorBrush x:Key="CategoryRecording" Color="#E85CAF"/>
        <SolidColorBrush x:Key="CategoryMastering" Color="#5CBFE8"/>
        <SolidColorBrush x:Key="CategoryGeneral" Color="#808080"/>

        <!-- Task Item Style -->
        <Style x:Key="TaskItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#252525"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Checkbox Style -->
        <Style x:Key="TaskCheckboxStyle" TargetType="CheckBox">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="border"
                                Width="20" Height="20"
                                Background="#333337"
                                BorderBrush="#4A4A4A"
                                BorderThickness="2"
                                CornerRadius="4"
                                Cursor="Hand">
                            <Path x:Name="checkmark"
                                  Data="M 3,8 L 7,12 L 14,4"
                                  Stroke="White"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#00D9FF"/>
                                <Setter TargetName="checkmark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5A5A5A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Filter Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333337"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#252525"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#181818"
                    BorderBrush="#252525"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Tasks"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="TaskCountText"
                                   Text=" (0/0)"
                                   FontSize="12"
                                   Foreground="#808080"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Clear Done"
                                Background="Transparent"
                                Foreground="#808080"
                                BorderThickness="0"
                                Padding="8,4"
                                FontSize="11"
                                Cursor="Hand"
                                Click="ClearDoneButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Filter Bar -->
            <Border Grid.Row="1"
                    Background="#181818"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Status Filter -->
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="FilterAll"
                                      Style="{StaticResource FilterButtonStyle}"
                                      Content="All"
                                      IsChecked="True"
                                      Click="FilterButton_Click"/>
                        <ToggleButton x:Name="FilterActive"
                                      Style="{StaticResource FilterButtonStyle}"
                                      Content="Active"
                                      Click="FilterButton_Click"/>
                        <ToggleButton x:Name="FilterDone"
                                      Style="{StaticResource FilterButtonStyle}"
                                      Content="Done"
                                      Click="FilterButton_Click"/>
                    </StackPanel>

                    <!-- Sort -->
                    <ComboBox x:Name="SortCombo"
                              Grid.Column="1"
                              Width="100"
                              Background="#333337"
                              Foreground="#E0E0E0"
                              BorderBrush="#252525"
                              FontSize="11"
                              SelectionChanged="SortCombo_SelectionChanged">
                        <ComboBoxItem Content="Priority" IsSelected="True"/>
                        <ComboBoxItem Content="Due Date"/>
                        <ComboBoxItem Content="Category"/>
                        <ComboBoxItem Content="Created"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Category Filter -->
            <Border Grid.Row="2"
                    Background="#181818"
                    BorderBrush="#252525"
                    BorderThickness="0,0,0,1"
                    Padding="12,6">
                <ItemsControl x:Name="CategoryFilterPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected}"
                                          Style="{StaticResource FilterButtonStyle}"
                                          FontSize="10"
                                          Margin="2"
                                          Click="CategoryFilter_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Task List -->
            <ScrollViewer Grid.Row="3"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="TasksItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource TaskItemStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Checkbox -->
                                    <CheckBox Grid.Column="0"
                                              Style="{StaticResource TaskCheckboxStyle}"
                                              IsChecked="{Binding IsCompleted}"
                                              Click="TaskCheckbox_Click"/>

                                    <!-- Priority Indicator -->
                                    <Border Grid.Column="1"
                                            Width="3"
                                            CornerRadius="1"
                                            Background="{Binding PriorityBrush}"
                                            Margin="8,0"/>

                                    <!-- Task Content -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="{Binding Title}"
                                                   FontSize="12"
                                                   Foreground="{Binding TitleForeground}"
                                                   TextDecorations="{Binding TitleDecoration}"
                                                   TextWrapping="Wrap"/>

                                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                            <!-- Category -->
                                            <Border Background="{Binding CategoryBrush}"
                                                    CornerRadius="2"
                                                    Padding="4,1"
                                                    Margin="0,0,6,0">
                                                <TextBlock Text="{Binding Category}"
                                                           FontSize="9"
                                                           Foreground="White"/>
                                            </Border>

                                            <!-- Due Date -->
                                            <TextBlock Text="{Binding DueDateDisplay}"
                                                       FontSize="10"
                                                       Foreground="{Binding DueDateForeground}"
                                                       Visibility="{Binding HasDueDate, Converter={StaticResource BoolToVisibilityConverter}}"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Delete Button -->
                                    <Button Grid.Column="3"
                                            Content="X"
                                            Background="Transparent"
                                            Foreground="#606060"
                                            BorderThickness="0"
                                            Width="24" Height="24"
                                            FontSize="10"
                                            Cursor="Hand"
                                            Visibility="Collapsed"
                                            Click="DeleteTask_Click"
                                            Tag="{Binding}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Border}}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>

                                <!-- Context Menu -->
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Edit" Click="EditTask_Click"/>
                                        <MenuItem Header="Set Priority">
                                            <MenuItem Header="High" Tag="High" Click="SetPriority_Click"/>
                                            <MenuItem Header="Medium" Tag="Medium" Click="SetPriority_Click"/>
                                            <MenuItem Header="Low" Tag="Low" Click="SetPriority_Click"/>
                                            <MenuItem Header="None" Tag="None" Click="SetPriority_Click"/>
                                        </MenuItem>
                                        <MenuItem Header="Set Category">
                                            <MenuItem Header="Mix" Tag="Mix" Click="SetCategory_Click"/>
                                            <MenuItem Header="Arrangement" Tag="Arrangement" Click="SetCategory_Click"/>
                                            <MenuItem Header="Recording" Tag="Recording" Click="SetCategory_Click"/>
                                            <MenuItem Header="Mastering" Tag="Mastering" Click="SetCategory_Click"/>
                                            <MenuItem Header="General" Tag="General" Click="SetCategory_Click"/>
                                        </MenuItem>
                                        <Separator/>
                                        <MenuItem Header="Delete" Click="DeleteTask_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <TextBlock x:Name="EmptyStateText"
                       Grid.Row="3"
                       Text="No tasks yet. Add a task to get started!"
                       Foreground="#606060"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>

            <!-- Add Task Panel -->
            <Border Grid.Row="4"
                    Background="#181818"
                    BorderBrush="#252525"
                    BorderThickness="0,1,0,0"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title Input -->
                    <TextBox x:Name="TaskTitleTextBox"
                             Grid.Row="0"
                             Background="#252628"
                             Foreground="#E0E0E0"
                             BorderBrush="#252525"
                             BorderThickness="1"
                             Padding="8,6"
                             FontSize="12"
                             KeyDown="TaskTitleTextBox_KeyDown"/>

                    <!-- Options Row -->
                    <Grid Grid.Row="1" Margin="0,8,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Priority -->
                        <ComboBox x:Name="PriorityCombo"
                                  Grid.Column="0"
                                  Background="#333337"
                                  Foreground="#E0E0E0"
                                  BorderBrush="#252525"
                                  FontSize="11"
                                  Margin="0,0,4,0">
                            <ComboBoxItem Content="High" Tag="High"/>
                            <ComboBoxItem Content="Medium" Tag="Medium" IsSelected="True"/>
                            <ComboBoxItem Content="Low" Tag="Low"/>
                            <ComboBoxItem Content="None" Tag="None"/>
                        </ComboBox>

                        <!-- Category -->
                        <ComboBox x:Name="CategoryCombo"
                                  Grid.Column="1"
                                  Background="#333337"
                                  Foreground="#E0E0E0"
                                  BorderBrush="#252525"
                                  FontSize="11"
                                  Margin="4,0">
                            <ComboBoxItem Content="Mix" Tag="Mix"/>
                            <ComboBoxItem Content="Arrangement" Tag="Arrangement"/>
                            <ComboBoxItem Content="Recording" Tag="Recording"/>
                            <ComboBoxItem Content="Mastering" Tag="Mastering"/>
                            <ComboBoxItem Content="General" Tag="General" IsSelected="True"/>
                        </ComboBox>

                        <!-- Due Date -->
                        <DatePicker x:Name="DueDatePicker"
                                    Grid.Column="2"
                                    Background="#333337"
                                    Foreground="#E0E0E0"
                                    BorderBrush="#252525"
                                    FontSize="11"
                                    Margin="4,0,0,0"/>
                    </Grid>

                    <!-- Add Button -->
                    <Button Grid.Row="2"
                            Content="Add Task"
                            Background="#00D9FF"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="12,8"
                            Margin="0,8,0,0"
                            FontSize="12"
                            Cursor="Hand"
                            Click="AddTaskButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="4"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#5A7FBF"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
