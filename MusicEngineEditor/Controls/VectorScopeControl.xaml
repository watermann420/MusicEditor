<UserControl x:Class="MusicEngineEditor.Controls.VectorScopeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="250" d:DesignWidth="250"
             Background="#0D0D0D"
             MinHeight="150"
             MinWidth="150">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="GridColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="AxisColor">#4A4D52</Color>
        <Color x:Key="TextColor">#808080</Color>
        <Color x:Key="PointColor">#00CED1</Color>
        <Color x:Key="PointHighColor">#00FFFF</Color>
        <Color x:Key="MonoLineColor">#00CC66</Color>
        <Color x:Key="SideLineColor">#FF9800</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AxisBrush" Color="{StaticResource AxisColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="PointBrush" Color="{StaticResource PointColor}"/>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#181818"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Vector Scope"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Mode and options -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <ToggleButton x:Name="LissajousToggle"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="Lissajous"
                                      IsChecked="True"
                                      Checked="LissajousToggle_Changed"
                                      Unchecked="LissajousToggle_Changed"
                                      ToolTip="Toggle Lissajous display mode"/>

                        <ToggleButton x:Name="GridToggle"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="Grid"
                                      IsChecked="True"
                                      Margin="4,0,0,0"
                                      Checked="GridToggle_Changed"
                                      Unchecked="GridToggle_Changed"
                                      ToolTip="Show/hide grid overlay"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Vector Scope Display -->
            <Border Grid.Row="1"
                    Margin="8"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    BorderBrush="#3A3A3A"
                    BorderThickness="1">
                <Grid ClipToBounds="True">
                    <!-- Grid and axes -->
                    <Canvas x:Name="GridCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Lissajous points using WriteableBitmap -->
                    <Image x:Name="ScopeImage"
                           RenderOptions.BitmapScalingMode="NearestNeighbor"
                           Stretch="Fill"/>

                    <!-- Labels overlay -->
                    <Canvas x:Name="LabelsCanvas"
                            ClipToBounds="True"
                            IsHitTestVisible="False"/>

                    <!-- Correlation indicator -->
                    <Border Background="#C01A1A1A"
                            CornerRadius="3"
                            Padding="6,4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="8">
                        <StackPanel>
                            <TextBlock Text="Correlation"
                                       FontSize="9"
                                       Foreground="{StaticResource TextBrush}"/>
                            <TextBlock x:Name="CorrelationText"
                                       Text="+1.00"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PointBrush}"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Footer controls -->
            <Border Grid.Row="2"
                    Background="#181818"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Zoom control -->
                    <TextBlock Grid.Column="0"
                               Text="Zoom:"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <Slider x:Name="ZoomSlider"
                            Grid.Column="1"
                            Minimum="0.5"
                            Maximum="4.0"
                            Value="1.0"
                            Width="80"
                            VerticalAlignment="Center"
                            ValueChanged="ZoomSlider_ValueChanged"
                            ToolTip="Zoom level"/>

                    <!-- Decay control -->
                    <TextBlock Grid.Column="2"
                               Text="Decay:"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="16,0,6,0"/>
                    <Slider x:Name="DecaySlider"
                            Grid.Column="3"
                            Minimum="0.8"
                            Maximum="0.99"
                            Value="0.95"
                            Width="80"
                            VerticalAlignment="Center"
                            ValueChanged="DecaySlider_ValueChanged"
                            ToolTip="Trail decay rate"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
