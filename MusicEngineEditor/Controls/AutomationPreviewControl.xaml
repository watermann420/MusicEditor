<UserControl x:Class="MusicEngineEditor.Controls.AutomationPreviewControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="500"
             Background="#1E1F22"
             MinHeight="120"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="CurrentColor">#00CED1</Color>
        <Color x:Key="PreviewColor">#FF9800</Color>
        <Color x:Key="DifferenceAddColor">#4CAF50</Color>
        <Color x:Key="DifferenceRemoveColor">#F44336</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="CurrentBrush" Color="{StaticResource CurrentColor}"/>
        <SolidColorBrush x:Key="PreviewBrush" Color="{StaticResource PreviewColor}"/>
        <SolidColorBrush x:Key="DifferenceAddBrush" Color="{StaticResource DifferenceAddColor}"/>
        <SolidColorBrush x:Key="DifferenceRemoveBrush" Color="{StaticResource DifferenceRemoveColor}"/>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Button Styles -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ApplyButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
        </Style>

        <Style x:Key="RevertButtonStyle" TargetType="Button" BasedOn="{StaticResource ControlButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#D32F2F"/>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ABToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="AText"
                                           Grid.Column="0"
                                           Text="A"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <Border Grid.Column="1"
                                        Width="1"
                                        Background="#5A5A5A"
                                        Margin="8,0"/>
                                <TextBlock x:Name="BText"
                                           Grid.Column="2"
                                           Text="B"
                                           FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="AText" Property="Foreground" Value="#00CED1"/>
                                <Setter TargetName="BText" Property="Foreground" Value="#666666"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="AText" Property="Foreground" Value="#666666"/>
                                <Setter TargetName="BText" Property="Foreground" Value="#FF9800"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Automation Preview"
                                   FontWeight="SemiBold"
                                   FontSize="12"
                                   Foreground="{DynamicResource BrightForegroundBrush}"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="ParameterNameText"
                                   Text=" - Volume"
                                   FontSize="12"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- A/B Toggle -->
                    <ToggleButton x:Name="ABToggle"
                                  Grid.Column="2"
                                  Style="{StaticResource ABToggleStyle}"
                                  Width="80"
                                  Checked="ABToggle_Changed"
                                  Unchecked="ABToggle_Changed"
                                  ToolTip="Toggle between current (A) and preview (B)"/>
                </Grid>
            </Border>

            <!-- Preview Display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Value scale -->
                <Canvas x:Name="ValueScaleCanvas"
                        Grid.Column="0"
                        Width="40"
                        Background="Transparent"/>

                <!-- Main display area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Difference highlight (between current and preview) -->
                        <Canvas x:Name="DifferenceCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Current automation curve (A) -->
                        <Canvas x:Name="CurrentCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Preview automation curve (B) -->
                        <Canvas x:Name="PreviewCurveCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Legend -->
                        <Border Background="#C01A1A1A"
                                CornerRadius="3"
                                Padding="8,4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="8">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="{StaticResource CurrentBrush}"
                                            Width="16"
                                            Height="2"
                                            VerticalAlignment="Center"
                                            Margin="0,0,6,0"/>
                                    <TextBlock Text="Current (A)"
                                               FontSize="9"
                                               Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <Border Background="{StaticResource PreviewBrush}"
                                            Width="16"
                                            Height="2"
                                            VerticalAlignment="Center"
                                            Margin="0,0,6,0"/>
                                    <TextBlock Text="Preview (B)"
                                               FontSize="9"
                                               Foreground="{StaticResource TextBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer with actions -->
            <Border Grid.Row="2"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Partial apply options -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <CheckBox x:Name="PartialApplyCheck"
                                  Content="Partial Apply"
                                  Foreground="{StaticResource TextBrush}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0"
                                  Checked="PartialApplyCheck_Changed"
                                  Unchecked="PartialApplyCheck_Changed"/>
                        <TextBlock Text="Range:"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"
                                   Visibility="{Binding ElementName=PartialApplyCheck, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBox x:Name="StartTimeText"
                                 Width="60"
                                 Text="0:00"
                                 Background="#3A3A3A"
                                 Foreground="#CCCCCC"
                                 BorderBrush="#5A5A5A"
                                 Padding="4,2"
                                 Visibility="{Binding ElementName=PartialApplyCheck, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBlock Text=" - "
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ElementName=PartialApplyCheck, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <TextBox x:Name="EndTimeText"
                                 Width="60"
                                 Text="4:00"
                                 Background="#3A3A3A"
                                 Foreground="#CCCCCC"
                                 BorderBrush="#5A5A5A"
                                 Padding="4,2"
                                 Visibility="{Binding ElementName=PartialApplyCheck, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Statistics -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="PointsChangedText"
                                   Text="Points changed: 0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,16,0"/>
                        <TextBlock x:Name="MaxDifferenceText"
                                   Text="Max diff: 0.0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Action buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button x:Name="RevertButton"
                                Style="{StaticResource RevertButtonStyle}"
                                Content="Revert"
                                Click="RevertButton_Click"
                                ToolTip="Discard preview changes"
                                Margin="0,0,8,0"/>
                        <Button x:Name="ApplyButton"
                                Style="{StaticResource ApplyButtonStyle}"
                                Content="Apply"
                                Click="ApplyButton_Click"
                                ToolTip="Apply preview changes"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
