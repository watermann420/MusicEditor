<UserControl x:Class="MusicEngineEditor.Controls.OscilloscopeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="400"
             Background="#0D0D0D"
             MinHeight="120"
             MinWidth="200">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="GridColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextColor">#808080</Color>
        <Color x:Key="WaveformColor">#00CED1</Color>
        <Color x:Key="TriggerLineColor">#E89C4B</Color>
        <Color x:Key="CenterLineColor">#4A4D52</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="WaveformBrush" Color="{StaticResource WaveformColor}"/>
        <SolidColorBrush x:Key="TriggerLineBrush" Color="{StaticResource TriggerLineColor}"/>
        <SolidColorBrush x:Key="CenterLineBrush" Color="{StaticResource CenterLineColor}"/>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ControlComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#181818"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Oscilloscope"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Trigger:"
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <ComboBox x:Name="TriggerModeCombo"
                                  Style="{StaticResource ControlComboBoxStyle}"
                                  Width="90"
                                  SelectionChanged="TriggerModeCombo_SelectionChanged"
                                  ToolTip="Trigger mode">
                            <ComboBoxItem Content="Free Run" IsSelected="True"/>
                            <ComboBoxItem Content="Rising Edge"/>
                            <ComboBoxItem Content="Falling Edge"/>
                        </ComboBox>

                        <ToggleButton x:Name="FreezeButton"
                                      Style="{StaticResource ToggleButtonStyle}"
                                      Content="Freeze"
                                      Margin="8,0,0,0"
                                      Checked="FreezeButton_Changed"
                                      Unchecked="FreezeButton_Changed"
                                      ToolTip="Freeze/hold display"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Oscilloscope Display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Amplitude scale -->
                <Canvas x:Name="AmplitudeScaleCanvas"
                        Grid.Column="0"
                        Width="30"
                        Background="Transparent"/>

                <!-- Main display area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Center line -->
                        <Canvas x:Name="CenterLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Trigger level line -->
                        <Canvas x:Name="TriggerLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Waveform display using WriteableBitmap -->
                        <Image x:Name="WaveformImage"
                               RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Stretch="Fill"/>

                        <!-- Info overlay -->
                        <Border Background="#C01A1A1A"
                                CornerRadius="3"
                                Padding="6,4"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="8">
                            <StackPanel>
                                <TextBlock x:Name="TimeScaleText"
                                           Text="Time: 10 ms/div"
                                           FontSize="9"
                                           Foreground="{StaticResource TextBrush}"/>
                                <TextBlock x:Name="AmplitudeScaleText"
                                           Text="Amp: 1.0/div"
                                           FontSize="9"
                                           Foreground="{StaticResource TextBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <!-- Footer controls -->
            <Border Grid.Row="2"
                    Background="#181818"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Time scale -->
                    <TextBlock Grid.Column="0"
                               Text="Time Scale:"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="0,0,6,0"/>
                    <Slider x:Name="TimeScaleSlider"
                            Grid.Column="1"
                            Minimum="1"
                            Maximum="100"
                            Value="10"
                            Width="100"
                            VerticalAlignment="Center"
                            ValueChanged="TimeScaleSlider_ValueChanged"
                            ToolTip="Time scale (ms/div)"/>

                    <!-- Amplitude scale -->
                    <TextBlock Grid.Column="2"
                               Text="Amplitude:"
                               Foreground="{StaticResource TextBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"
                               Margin="16,0,6,0"/>
                    <Slider x:Name="AmplitudeScaleSlider"
                            Grid.Column="3"
                            Minimum="0.1"
                            Maximum="2.0"
                            Value="1.0"
                            Width="100"
                            VerticalAlignment="Center"
                            ValueChanged="AmplitudeScaleSlider_ValueChanged"
                            ToolTip="Amplitude scale"/>

                    <!-- Trigger level -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="16,0,0,0">
                        <TextBlock Text="Trigger Level:"
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="11"
                                   VerticalAlignment="Center"
                                   Margin="0,0,6,0"/>
                        <Slider x:Name="TriggerLevelSlider"
                                Minimum="-1.0"
                                Maximum="1.0"
                                Value="0.0"
                                Width="80"
                                VerticalAlignment="Center"
                                ValueChanged="TriggerLevelSlider_ValueChanged"
                                ToolTip="Trigger level"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
