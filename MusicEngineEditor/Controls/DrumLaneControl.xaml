<UserControl x:Class="MusicEngineEditor.Controls.DrumLaneControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="600"
             Background="Transparent"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Mute Toggle Style -->
        <Style x:Key="DrumMuteToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C75450"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Solo Toggle Style -->
        <Style x:Key="DrumSoloToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource DrumMuteToggleStyle}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D9A343"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Lane Header -->
        <Border Grid.Column="0"
                Background="#141414"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,1,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Color Indicator -->
                <Border x:Name="ColorIndicator"
                        Grid.Column="0"
                        Background="#00D9FF"
                        CornerRadius="2,0,0,2"/>

                <!-- Drum Name -->
                <TextBlock x:Name="DrumNameText"
                           Grid.Column="1"
                           Text="Kick"
                           FontSize="11"
                           FontWeight="Medium"
                           Foreground="{DynamicResource ForegroundBrush}"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           Margin="8,0,4,0"/>

                <!-- Mute/Solo Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,4,0">
                    <ToggleButton x:Name="MuteButton"
                                  Style="{StaticResource DrumMuteToggleStyle}"
                                  Content="M"
                                  ToolTip="Mute"
                                  Click="MuteButton_Click"/>
                    <ToggleButton x:Name="SoloButton"
                                  Style="{StaticResource DrumSoloToggleStyle}"
                                  Content="S"
                                  ToolTip="Solo"
                                  Click="SoloButton_Click"
                                  Margin="2,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Step Grid -->
        <Border Grid.Column="1"
                Background="#0D0D0D"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1">
            <Canvas x:Name="StepsCanvas"
                    Background="Transparent"
                    MouseLeftButtonDown="StepsCanvas_MouseLeftButtonDown"
                    MouseRightButtonDown="StepsCanvas_MouseRightButtonDown"
                    MouseMove="StepsCanvas_MouseMove"
                    MouseLeftButtonUp="StepsCanvas_MouseLeftButtonUp"
                    ClipToBounds="True">
                <!-- Steps are drawn programmatically -->
            </Canvas>
        </Border>
    </Grid>
</UserControl>
