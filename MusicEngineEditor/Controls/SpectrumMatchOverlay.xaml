<UserControl x:Class="MusicEngineEditor.Controls.SpectrumMatchOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Background="#0D0D0D"
             MinHeight="150"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="GridColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextColor">#808080</Color>
        <Color x:Key="MixCurveColor">#00CED1</Color>
        <Color x:Key="ReferenceCurveColor">#FF9800</Color>
        <Color x:Key="ExceedsReferenceColor">#E53935</Color>
        <Color x:Key="BelowReferenceColor">#1E88E5</Color>
        <Color x:Key="NeutralColor">#555555</Color>
        <Color x:Key="MatchedColor">#00CC66</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="MixCurveBrush" Color="{StaticResource MixCurveColor}"/>
        <SolidColorBrush x:Key="ReferenceCurveBrush" Color="{StaticResource ReferenceCurveColor}"/>
        <SolidColorBrush x:Key="ExceedsReferenceBrush" Color="{StaticResource ExceedsReferenceColor}"/>
        <SolidColorBrush x:Key="BelowReferenceBrush" Color="{StaticResource BelowReferenceColor}"/>
        <SolidColorBrush x:Key="NeutralBrush" Color="{StaticResource NeutralColor}"/>
        <SolidColorBrush x:Key="MatchedBrush" Color="{StaticResource MatchedColor}"/>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="track" Background="#3A3A3A" CornerRadius="9" BorderThickness="1" BorderBrush="#5A5A5A">
                            <Ellipse x:Name="thumb" Width="14" Height="14" Fill="#888888" Margin="1,0,0,0" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#00D9FF"/>
                                <Setter TargetName="thumb" Property="Fill" Value="White"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,1,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Slider Style -->
        <Style x:Key="OpacitySliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="4" Background="#3A3A3A" CornerRadius="2" VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Height="4" Background="#00D9FF" CornerRadius="2,0,0,2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Width="14" Height="14" Fill="White" Cursor="Hand">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="DarkComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with controls -->
            <Border Grid.Row="0"
                    Background="#181818"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Spectrum Match Overlay"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="#FFFFFF"
                               VerticalAlignment="Center"/>

                    <!-- Controls panel -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <!-- Show Overlay Toggle -->
                        <ToggleButton x:Name="ShowOverlayToggle"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="True"
                                      Checked="ShowOverlayToggle_Changed"
                                      Unchecked="ShowOverlayToggle_Changed"
                                      ToolTip="Show/Hide reference overlay"/>
                        <TextBlock Text="Overlay"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Show Delta Toggle -->
                        <ToggleButton x:Name="ShowDeltaToggle"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="True"
                                      Checked="ShowDeltaToggle_Changed"
                                      Unchecked="ShowDeltaToggle_Changed"
                                      ToolTip="Show difference between mix and reference"/>
                        <TextBlock Text="Delta"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Level Match Toggle -->
                        <ToggleButton x:Name="LevelMatchToggle"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="True"
                                      Checked="LevelMatchToggle_Changed"
                                      Unchecked="LevelMatchToggle_Changed"
                                      ToolTip="Auto-match levels between mix and reference"/>
                        <TextBlock Text="Level Match"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Opacity Slider -->
                        <TextBlock Text="Opacity:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <Slider x:Name="OverlayOpacitySlider"
                                Style="{StaticResource OpacitySliderStyle}"
                                Width="80"
                                Minimum="0.1"
                                Maximum="1.0"
                                Value="0.7"
                                ValueChanged="OverlayOpacitySlider_ValueChanged"
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="OpacityValueText"
                                   Text="70%"
                                   FontSize="10"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Width="30"
                                   Margin="4,0,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main spectrum display area -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- dB scale labels -->
                <Canvas x:Name="DbScaleCanvas"
                        Grid.Column="0"
                        Width="35"
                        Background="Transparent"/>

                <!-- Main display area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Delta fill (shows where mix exceeds/falls below reference) -->
                        <Canvas x:Name="DeltaFillCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Mix spectrum line -->
                        <Canvas x:Name="MixSpectrumCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Reference spectrum line (overlay) -->
                        <Canvas x:Name="ReferenceOverlayCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Delta difference line -->
                        <Canvas x:Name="DeltaLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Zero line for delta display -->
                        <Canvas x:Name="ZeroLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- No reference message -->
                        <TextBlock x:Name="NoReferenceText"
                                   Text="Load a reference track to compare"
                                   FontSize="11"
                                   Foreground="#505050"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Band difference indicators with dB values -->
            <Border Grid.Row="2"
                    Margin="43,0,8,8"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    Padding="8,6">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Band indicators with dB difference -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <Border x:Name="Band1Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band1DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Sub" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="20-60" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <Border x:Name="Band2Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band2DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Bass" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="60-250" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <Border x:Name="Band3Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band3DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Low" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="250-500" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" HorizontalAlignment="Center">
                        <Border x:Name="Band4Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band4DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="LMid" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="500-1k" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" HorizontalAlignment="Center">
                        <Border x:Name="Band5Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band5DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Mid" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="1k-2k" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="5" HorizontalAlignment="Center">
                        <Border x:Name="Band6Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band6DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="HMid" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="2k-4k" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="6" HorizontalAlignment="Center">
                        <Border x:Name="Band7Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band7DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Pres" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="4k-8k" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="7" HorizontalAlignment="Center">
                        <Border x:Name="Band8Indicator" Width="28" Height="16" CornerRadius="2" Background="{StaticResource NeutralBrush}">
                            <TextBlock x:Name="Band8DiffText" Text="0" FontSize="8" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="Air" FontSize="8" Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        <TextBlock Text="8k-20k" FontSize="7" Foreground="#444444" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Footer with frequency labels, legend, and statistics -->
            <Grid Grid.Row="3" Margin="43,0,8,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Frequency labels -->
                <Canvas x:Name="FrequencyLabelsCanvas"
                        Grid.Row="0"
                        Height="16"
                        Background="Transparent"/>

                <!-- Legend -->
                <StackPanel Grid.Row="1"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,4,0,0">
                    <Border Background="{StaticResource MixCurveBrush}"
                            Width="20" Height="3" CornerRadius="1" VerticalAlignment="Center"/>
                    <TextBlock Text="Mix" FontSize="9" Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" Margin="4,0,16,0"/>

                    <Border Background="{StaticResource ReferenceCurveBrush}"
                            Width="20" Height="3" CornerRadius="1" VerticalAlignment="Center"/>
                    <TextBlock Text="Reference" FontSize="9" Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" Margin="4,0,16,0"/>

                    <Border Background="{StaticResource ExceedsReferenceBrush}"
                            Width="12" Height="12" CornerRadius="2" VerticalAlignment="Center" Opacity="0.6"/>
                    <TextBlock Text="Mix Exceeds" FontSize="9" Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" Margin="4,0,16,0"/>

                    <Border Background="{StaticResource BelowReferenceBrush}"
                            Width="12" Height="12" CornerRadius="2" VerticalAlignment="Center" Opacity="0.6"/>
                    <TextBlock Text="Mix Below" FontSize="9" Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>

                <!-- Statistics -->
                <Border Grid.Row="2"
                        Background="#252525"
                        CornerRadius="3"
                        Padding="8,4"
                        Margin="0,6,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Similarity:" FontSize="9" Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock x:Name="SimilarityText" Text="--%" FontSize="9" Foreground="#00CC66"
                                   FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,0"/>

                        <TextBlock Text="RMS Diff:" FontSize="9" Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock x:Name="RmsDiffText" Text="-- dB" FontSize="9" Foreground="#CCCCCC"
                                   VerticalAlignment="Center" Margin="0,0,16,0"/>

                        <TextBlock Text="Max Diff:" FontSize="9" Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock x:Name="MaxDiffText" Text="-- dB @ -- Hz" FontSize="9" Foreground="#CCCCCC"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
