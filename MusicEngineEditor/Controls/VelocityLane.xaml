<UserControl x:Class="MusicEngineEditor.Controls.VelocityLane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="800"
             Background="#1A1A1A"
             ClipToBounds="True"
             Focusable="True"
             MinHeight="60">

    <UserControl.Resources>
        <!-- Colors for the Velocity Lane -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="BarLineBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="VelocityBarBrush" Color="#4A9EFF"/>
        <SolidColorBrush x:Key="VelocityBarSelectedBrush" Color="#7BBFFF"/>
        <SolidColorBrush x:Key="VelocityBarHoverBrush" Color="#5CAFFF"/>
        <SolidColorBrush x:Key="VelocityLineBrush" Color="#FF9500"/>
        <SolidColorBrush x:Key="LabelBrush" Color="#6F737A"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#393B40"/>

        <!-- Gradient for velocity bars -->
        <LinearGradientBrush x:Key="VelocityBarGradient" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#2A6EAF" Offset="0"/>
            <GradientStop Color="#4A9EFF" Offset="0.5"/>
            <GradientStop Color="#7BBFFF" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="VelocityBarSelectedGradient" StartPoint="0,1" EndPoint="0,0">
            <GradientStop Color="#4A8EDF" Offset="0"/>
            <GradientStop Color="#7BBFFF" Offset="0.5"/>
            <GradientStop Color="#AADDFF" Offset="1"/>
        </LinearGradientBrush>
    </UserControl.Resources>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <!-- Label area -->
            <ColumnDefinition Width="60"/>
            <!-- Velocity bars area -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Label panel on the left -->
        <Border Grid.Column="0"
                Background="#252629"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Top label (127) -->
                <TextBlock Grid.Row="0"
                           Text="127"
                           Foreground="{StaticResource LabelBrush}"
                           FontSize="9"
                           HorizontalAlignment="Right"
                           Margin="0,2,4,0"/>

                <!-- Title -->
                <TextBlock Grid.Row="1"
                           Text="Velocity"
                           Foreground="{StaticResource LabelBrush}"
                           FontSize="10"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           RenderTransformOrigin="0.5,0.5">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>

                <!-- Bottom label (0) -->
                <TextBlock Grid.Row="2"
                           Text="0"
                           Foreground="{StaticResource LabelBrush}"
                           FontSize="9"
                           HorizontalAlignment="Right"
                           Margin="0,0,4,2"/>
            </Grid>
        </Border>

        <!-- Velocity bars canvas -->
        <Grid Grid.Column="1" ClipToBounds="True">
            <!-- Grid lines layer -->
            <Canvas x:Name="GridCanvas"
                    Background="{StaticResource BackgroundBrush}"
                    ClipToBounds="True"/>

            <!-- Velocity bars layer -->
            <Canvas x:Name="VelocityCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="OnCanvasMouseLeftButtonDown"
                    MouseLeftButtonUp="OnCanvasMouseLeftButtonUp"
                    MouseMove="OnCanvasMouseMove"
                    MouseLeave="OnCanvasMouseLeave"/>

            <!-- Reference lines -->
            <Canvas x:Name="ReferenceCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    IsHitTestVisible="False"/>
        </Grid>
    </Grid>
</UserControl>
