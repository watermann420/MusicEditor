<UserControl x:Class="MusicEngineEditor.Controls.TrackGroupHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="250"
             MinHeight="28">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="GroupBackgroundColor">#2D2E32</Color>
        <Color x:Key="GroupBorderColor">#404348</Color>
        <Color x:Key="GroupHoverColor">#363840</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="MuteActiveColor">#FF5555</Color>
        <Color x:Key="SoloActiveColor">#FFDD55</Color>
        <Color x:Key="ButtonInactiveColor">#3C3F44</Color>
        <Color x:Key="ExpandArrowColor">#888B91</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="GroupBackgroundBrush" Color="{StaticResource GroupBackgroundColor}"/>
        <SolidColorBrush x:Key="GroupBorderBrush" Color="{StaticResource GroupBorderColor}"/>
        <SolidColorBrush x:Key="GroupHoverBrush" Color="{StaticResource GroupHoverColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="MuteActiveBrush" Color="{StaticResource MuteActiveColor}"/>
        <SolidColorBrush x:Key="SoloActiveBrush" Color="{StaticResource SoloActiveColor}"/>
        <SolidColorBrush x:Key="ButtonInactiveBrush" Color="{StaticResource ButtonInactiveColor}"/>
        <SolidColorBrush x:Key="ExpandArrowBrush" Color="{StaticResource ExpandArrowColor}"/>

        <!-- Expand/Collapse Toggle Button Style -->
        <Style x:Key="ExpandToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="2">
                            <Path x:Name="Arrow"
                                  Data="M 0,0 L 6,4 L 0,8 Z"
                                  Fill="{StaticResource ExpandArrowBrush}"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <RotateTransform x:Name="ArrowRotation" Angle="0"/>
                                </Path.RenderTransform>
                            </Path>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="RenderTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="90"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Arrow" Property="Fill" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Group Toggle Button Style for M/S -->
        <Style x:Key="GroupToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource ButtonInactiveBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Volume Slider Style -->
        <Style x:Key="GroupVolumeSliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1.25"/>
            <Setter Property="LargeChange" Value="0.1"/>
            <Setter Property="SmallChange" Value="0.01"/>
            <Setter Property="Width" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="14">
                            <!-- Track background -->
                            <Border Height="4"
                                    Background="#1A1A1A"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>

                            <!-- Unity mark -->
                            <Rectangle Width="1" Height="8"
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Left"
                                       Margin="48,0,0,0"
                                       VerticalAlignment="Center"
                                       Opacity="0.4"/>

                            <!-- Track for slider -->
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="10" Height="12">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#5C5F66"
                                                        CornerRadius="2"
                                                        BorderBrush="{StaticResource GroupBorderBrush}"
                                                        BorderThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border x:Name="MainBorder"
            Background="{StaticResource GroupBackgroundBrush}"
            BorderBrush="{StaticResource GroupBorderBrush}"
            BorderThickness="1"
            CornerRadius="3"
            Padding="4,2">
        <Border.Style>
            <Style TargetType="Border">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{StaticResource GroupHoverBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </Border.Style>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>  <!-- Expand/Collapse arrow -->
                <ColumnDefinition Width="Auto"/>  <!-- Color indicator -->
                <ColumnDefinition Width="*"/>     <!-- Group name -->
                <ColumnDefinition Width="Auto"/>  <!-- Track count badge -->
                <ColumnDefinition Width="Auto"/>  <!-- Solo button -->
                <ColumnDefinition Width="Auto"/>  <!-- Mute button -->
                <ColumnDefinition Width="Auto"/>  <!-- Volume slider -->
            </Grid.ColumnDefinitions>

            <!-- Expand/Collapse Arrow -->
            <ToggleButton x:Name="ExpandCollapseButton"
                          Grid.Column="0"
                          Style="{StaticResource ExpandToggleButtonStyle}"
                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                          ToolTip="Expand/Collapse Group"
                          Margin="0,0,4,0"/>

            <!-- Color Indicator -->
            <Border x:Name="ColorIndicator"
                    Grid.Column="1"
                    Width="4"
                    CornerRadius="2"
                    Background="{Binding GroupColor, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=#4CAF50}"
                    Margin="0,2,6,2"/>

            <!-- Group Name (Editable) -->
            <Grid Grid.Column="2" Margin="0,0,8,0">
                <TextBlock x:Name="GroupNameDisplay"
                           Text="{Binding GroupName, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Track Group}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="11"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"
                           MouseLeftButtonDown="GroupNameDisplay_MouseLeftButtonDown"
                           Cursor="IBeam"
                           Visibility="Visible"/>

                <TextBox x:Name="GroupNameEditor"
                         Text="{Binding GroupName, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                         Foreground="{StaticResource TextPrimaryBrush}"
                         Background="#1E1F22"
                         BorderBrush="{StaticResource GroupBorderBrush}"
                         BorderThickness="1"
                         FontSize="11"
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"
                         Padding="2,1"
                         Visibility="Collapsed"
                         LostFocus="GroupNameEditor_LostFocus"
                         KeyDown="GroupNameEditor_KeyDown"/>
            </Grid>

            <!-- Track Count Badge -->
            <Border Grid.Column="3"
                    Background="#1E1F22"
                    CornerRadius="8"
                    Padding="6,1"
                    Margin="0,0,8,0"
                    VerticalAlignment="Center">
                <TextBlock Text="{Binding TrackCount, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=0}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="9"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           ToolTip="Number of tracks in this group"/>
            </Border>

            <!-- Solo Button -->
            <ToggleButton x:Name="SoloButton"
                          Grid.Column="4"
                          Style="{StaticResource GroupToggleButtonStyle}"
                          Content="S"
                          IsChecked="{Binding IsSoloed, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                          ToolTip="Solo Group"
                          Margin="0,0,4,0">
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                To="{StaticResource SoloActiveColor}" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                To="{StaticResource ButtonInactiveColor}" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>

            <!-- Mute Button -->
            <ToggleButton x:Name="MuteButton"
                          Grid.Column="5"
                          Style="{StaticResource GroupToggleButtonStyle}"
                          Content="M"
                          IsChecked="{Binding IsMuted, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                          ToolTip="Mute Group"
                          Margin="0,0,8,0">
                <ToggleButton.Triggers>
                    <EventTrigger RoutedEvent="ToggleButton.Checked">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                To="{StaticResource MuteActiveColor}" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                To="{StaticResource ButtonInactiveColor}" Duration="0:0:0.1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </ToggleButton.Triggers>
            </ToggleButton>

            <!-- Volume Slider -->
            <Slider x:Name="VolumeSlider"
                    Grid.Column="6"
                    Style="{StaticResource GroupVolumeSliderStyle}"
                    Value="{Binding Volume, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                    ToolTip="Group Volume"
                    MouseDoubleClick="VolumeSlider_MouseDoubleClick"/>
        </Grid>
    </Border>
</UserControl>
