<UserControl x:Class="MusicEngineEditor.Controls.SpectralSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#0D0D0D"
             MinHeight="200"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="PanelBackgroundColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="AccentColor">#55AAFF</Color>
        <Color x:Key="SelectionColor">#3355AAFF</Color>
        <Color x:Key="SelectionBorderColor">#55AAFF</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
        <SolidColorBrush x:Key="SelectionBorderBrush" Color="{StaticResource SelectionBorderColor}"/>

        <!-- Spectrogram gradient (cool to warm) -->
        <LinearGradientBrush x:Key="SpectrogramGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#000000" Offset="1.0"/>
            <GradientStop Color="#000040" Offset="0.85"/>
            <GradientStop Color="#0000FF" Offset="0.7"/>
            <GradientStop Color="#00FFFF" Offset="0.55"/>
            <GradientStop Color="#00FF00" Offset="0.4"/>
            <GradientStop Color="#FFFF00" Offset="0.25"/>
            <GradientStop Color="#FF0000" Offset="0.1"/>
            <GradientStop Color="#FFFFFF" Offset="0.0"/>
        </LinearGradientBrush>

        <!-- Tool button style -->
        <Style x:Key="ToolButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Action button style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource PanelBackgroundBrush}" Padding="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Tools -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Selection:" VerticalAlignment="Center" Margin="4,0,8,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ToggleButton x:Name="RectangleToolButton" Style="{StaticResource ToolButtonStyle}" IsChecked="True"
                                  ToolTip="Rectangle Selection (R)" Click="SelectionTool_Click">
                        <Path Data="M2,2 L14,2 L14,14 L2,14 Z" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" StrokeThickness="1.5" Fill="Transparent" Width="16" Height="16"/>
                    </ToggleButton>
                    <ToggleButton x:Name="LassoToolButton" Style="{StaticResource ToolButtonStyle}"
                                  ToolTip="Lasso Selection (L)" Click="SelectionTool_Click">
                        <Path Data="M3,10 Q1,5 5,2 Q10,1 13,5 Q15,10 12,14 Q8,16 4,14 Q1,12 3,10" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" StrokeThickness="1.5" Fill="Transparent" Width="16" Height="16"/>
                    </ToggleButton>
                    <ToggleButton x:Name="BrushToolButton" Style="{StaticResource ToolButtonStyle}"
                                  ToolTip="Brush Selection (B)" Click="SelectionTool_Click">
                        <Ellipse Width="12" Height="12" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}" StrokeThickness="1.5" Fill="Transparent"/>
                    </ToggleButton>
                </StackPanel>

                <!-- Selection Modifiers -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="Mode:" VerticalAlignment="Center" Margin="0,0,8,0" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <ComboBox x:Name="SelectionModeCombo" Width="100" SelectedIndex="0" SelectionChanged="SelectionMode_Changed">
                        <ComboBoxItem Content="Replace"/>
                        <ComboBoxItem Content="Add"/>
                        <ComboBoxItem Content="Subtract"/>
                        <ComboBoxItem Content="Intersect"/>
                    </ComboBox>
                </StackPanel>

                <!-- Actions -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <Button Content="Delete" Style="{StaticResource ActionButtonStyle}" Click="Delete_Click" ToolTip="Delete selection (Del)"/>
                    <Button Content="Copy" Style="{StaticResource ActionButtonStyle}" Click="Copy_Click" ToolTip="Copy selection (Ctrl+C)"/>
                    <Button Content="Paste" Style="{StaticResource ActionButtonStyle}" Click="Paste_Click" ToolTip="Paste (Ctrl+V)"/>
                    <Button Content="Fill" Style="{StaticResource ActionButtonStyle}" Click="Fill_Click" ToolTip="Fill selection with value"/>
                    <Button Content="Invert" Style="{StaticResource ActionButtonStyle}" Click="Invert_Click" ToolTip="Invert selection"/>
                    <Button Content="Clear" Style="{StaticResource ActionButtonStyle}" Click="Clear_Click" ToolTip="Clear selection (Esc)"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Spectrogram Display Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <!-- Frequency Axis -->
            <Canvas x:Name="FrequencyAxisCanvas" Grid.Row="0" Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}"/>

            <!-- Main Spectrogram Canvas -->
            <Border Grid.Row="0" Grid.Column="1" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <Canvas x:Name="SpectrogramCanvas" ClipToBounds="True" Background="{StaticResource BackgroundBrush}"
                        MouseLeftButtonDown="Spectrogram_MouseLeftButtonDown"
                        MouseLeftButtonUp="Spectrogram_MouseLeftButtonUp"
                        MouseMove="Spectrogram_MouseMove"
                        MouseRightButtonDown="Spectrogram_MouseRightButtonDown"/>
            </Border>

            <!-- Time Axis -->
            <Canvas x:Name="TimeAxisCanvas" Grid.Row="1" Grid.Column="1" Background="{StaticResource PanelBackgroundBrush}"/>

            <!-- Corner (empty) -->
            <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource PanelBackgroundBrush}"/>
        </Grid>

        <!-- Selection Info Panel -->
        <Border Grid.Row="2" Background="{StaticResource PanelBackgroundBrush}" Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Frequency Range -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Freq:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock x:Name="FrequencyRangeText" Text="-- Hz - -- Hz" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" MinWidth="120"/>
                </StackPanel>

                <!-- Time Range -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Time:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock x:Name="TimeRangeText" Text="-- s - -- s" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" MinWidth="100"/>
                </StackPanel>

                <!-- Selection Size -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,24,0">
                    <TextBlock Text="Size:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock x:Name="SelectionSizeText" Text="-- bins x -- frames" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" MinWidth="120"/>
                </StackPanel>

                <!-- Cursor Position -->
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <TextBlock Text="Cursor:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock x:Name="CursorPositionText" Text="-- Hz @ -- s" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" MinWidth="120"/>
                </StackPanel>

                <!-- Color Scale -->
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <TextBlock Text="dB:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <Border Width="80" Height="12" CornerRadius="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                <GradientStop Color="#000000" Offset="0"/>
                                <GradientStop Color="#0000FF" Offset="0.25"/>
                                <GradientStop Color="#00FF00" Offset="0.5"/>
                                <GradientStop Color="#FFFF00" Offset="0.75"/>
                                <GradientStop Color="#FF0000" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>
                    <TextBlock Text="-80" Foreground="{StaticResource TextSecondaryBrush}" FontSize="9" VerticalAlignment="Center" Margin="4,0,0,0"/>
                    <TextBlock Text="0" Foreground="{StaticResource TextSecondaryBrush}" FontSize="9" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
