<UserControl x:Class="MusicEngineEditor.Controls.RangeSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="200" d:DesignWidth="600"
             ClipToBounds="True"
             Focusable="True"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="SelectionColor">#4B6EAF</Color>
        <Color x:Key="SelectionFillColor">#304B6EAF</Color>
        <Color x:Key="HandleColor">#FFFFFF</Color>
        <Color x:Key="InfoBackgroundColor">#E0000000</Color>
        <Color x:Key="TextColor">#BCBEC4</Color>
        <Color x:Key="GridColor">#2B2D30</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="SelectionBrush" Color="{StaticResource SelectionColor}"/>
        <SolidColorBrush x:Key="SelectionFillBrush" Color="{StaticResource SelectionFillColor}"/>
        <SolidColorBrush x:Key="HandleBrush" Color="{StaticResource HandleColor}"/>
        <SolidColorBrush x:Key="InfoBackgroundBrush" Color="{StaticResource InfoBackgroundColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>

        <!-- Handle Style -->
        <Style x:Key="HandleStyle" TargetType="Border">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="{StaticResource SelectionBrush}"/>
            <Setter Property="Cursor" Value="SizeWE"/>
            <Setter Property="CornerRadius" Value="2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource HandleBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="RootGrid">
        <!-- Selection Rectangle -->
        <Canvas x:Name="SelectionCanvas" ClipToBounds="True">
            <!-- Selection Fill -->
            <Border x:Name="SelectionFill"
                    Background="{StaticResource SelectionFillBrush}"
                    Visibility="Collapsed"/>

            <!-- Left Edge -->
            <Border x:Name="LeftEdge"
                    Width="2"
                    Background="{StaticResource SelectionBrush}"
                    Visibility="Collapsed"/>

            <!-- Right Edge -->
            <Border x:Name="RightEdge"
                    Width="2"
                    Background="{StaticResource SelectionBrush}"
                    Visibility="Collapsed"/>

            <!-- Left Handle -->
            <Border x:Name="LeftHandle"
                    Style="{StaticResource HandleStyle}"
                    Visibility="Collapsed"
                    MouseLeftButtonDown="LeftHandle_MouseDown"/>

            <!-- Right Handle -->
            <Border x:Name="RightHandle"
                    Style="{StaticResource HandleStyle}"
                    Visibility="Collapsed"
                    MouseLeftButtonDown="RightHandle_MouseDown"/>

            <!-- Selection Info Popup -->
            <Border x:Name="SelectionInfo"
                    Background="{StaticResource InfoBackgroundBrush}"
                    CornerRadius="4"
                    Padding="8,4"
                    Visibility="Collapsed">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Start: "
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="StartPositionText"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="End: "
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="EndPositionText"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Length: "
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="LengthText"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" x:Name="TrackCountPanel">
                        <TextBlock Text="Tracks: "
                                   Foreground="{StaticResource TextBrush}"
                                   FontSize="10"/>
                        <TextBlock x:Name="TrackCountText"
                                   Foreground="White"
                                   FontSize="10"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Canvas>

        <!-- Track Highlight Indicators -->
        <ItemsControl x:Name="TrackHighlights"
                      IsHitTestVisible="False">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource SelectionFillBrush}"
                            Height="{Binding Height}"
                            Width="{Binding Width}">
                        <Canvas.Left>
                            <Binding Path="X"/>
                        </Canvas.Left>
                        <Canvas.Top>
                            <Binding Path="Y"/>
                        </Canvas.Top>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Interaction Layer -->
        <Canvas x:Name="InteractionCanvas"
                Background="Transparent"
                MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                MouseMove="Canvas_MouseMove"
                MouseLeave="Canvas_MouseLeave"/>
    </Grid>

    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="{Binding ClearSelectionCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding SelectAllCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </UserControl.InputBindings>
</UserControl>
