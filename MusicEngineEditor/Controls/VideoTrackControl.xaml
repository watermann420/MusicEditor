<UserControl x:Class="MusicEngineEditor.Controls.VideoTrackControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="800"
             Background="{DynamicResource PanelBackgroundBrush}"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Toolbar Button Style -->
        <Style x:Key="VideoTrackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Offset Slider Style -->
        <Style x:Key="OffsetSliderStyle" TargetType="Slider">
            <Setter Property="Minimum" Value="-10"/>
            <Setter Property="Maximum" Value="10"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Thumbnail Strip -->
            <RowDefinition Height="*"/>
            <!-- Timecode Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Video Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Video Track"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- File Name -->
                <TextBlock Grid.Column="1"
                           x:Name="FileNameText"
                           Text="(No video loaded)"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="12,0,0,0"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="200"/>

                <!-- Offset Control -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Offset:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <Slider x:Name="OffsetSlider"
                            Style="{StaticResource OffsetSliderStyle}"
                            Value="{Binding Offset, Mode=TwoWay}"
                            ValueChanged="OffsetSlider_ValueChanged"
                            ToolTip="Adjust video offset in seconds"/>
                    <TextBlock x:Name="OffsetText"
                               Text="0.00s"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontSize="10"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"
                               MinWidth="45"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="4" Orientation="Horizontal" Margin="8,0,0,0">
                    <Button x:Name="LoadVideoButton"
                            Style="{StaticResource VideoTrackButtonStyle}"
                            Content="Load..."
                            Click="LoadVideoButton_Click"
                            ToolTip="Load video file"/>
                    <Button x:Name="RemoveVideoButton"
                            Style="{StaticResource VideoTrackButtonStyle}"
                            Content="Remove"
                            Click="RemoveVideoButton_Click"
                            IsEnabled="False"
                            ToolTip="Remove video"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Thumbnail Strip Area -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <!-- Background -->
            <Border Background="#1A1A1A"/>

            <!-- Grid Lines Canvas -->
            <Canvas x:Name="GridCanvas"
                    Background="Transparent"
                    ClipToBounds="True"/>

            <!-- Thumbnails Canvas -->
            <Canvas x:Name="ThumbnailsCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="ThumbnailsCanvas_MouseLeftButtonDown"
                    MouseMove="ThumbnailsCanvas_MouseMove"
                    MouseLeftButtonUp="ThumbnailsCanvas_MouseLeftButtonUp"
                    MouseLeave="ThumbnailsCanvas_MouseLeave"/>

            <!-- No Video Placeholder -->
            <Border x:Name="NoVideoPlaceholder"
                    Background="Transparent"
                    Visibility="Visible">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Opacity="0.5">
                    <TextBlock Text="No video loaded"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="12"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'Load...' to add a video"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Playhead -->
            <Canvas x:Name="PlayheadCanvas"
                    Background="Transparent"
                    IsHitTestVisible="False"
                    ClipToBounds="True">
                <Rectangle x:Name="Playhead"
                           Width="2"
                           Fill="{DynamicResource AccentBrush}"
                           Canvas.Top="0"
                           Visibility="Collapsed"/>
            </Canvas>

            <!-- Scrub Preview -->
            <Border x:Name="ScrubPreview"
                    Background="#E0000000"
                    BorderBrush="{DynamicResource AccentBrush}"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="2"
                    Visibility="Collapsed"
                    IsHitTestVisible="False"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Width="160"
                    Height="90">
                <Grid>
                    <Image x:Name="ScrubPreviewImage"
                           Stretch="Uniform"/>
                    <TextBlock x:Name="ScrubTimecode"
                               Text="00:00:00:00"
                               Foreground="White"
                               FontSize="10"
                               FontFamily="Consolas"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"
                               Margin="0,0,0,2"
                               Background="#80000000"
                               Padding="4,1"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Timecode Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Current Timecode -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Time:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock x:Name="CurrentTimecodeText"
                               Text="00:00:00:00"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontSize="11"
                               FontFamily="Consolas"
                               FontWeight="Medium"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Duration -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="Duration:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock x:Name="DurationText"
                               Text="00:00:00:00"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontSize="11"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Frame Rate -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="FPS:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock x:Name="FrameRateText"
                               Text="--"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontSize="11"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Resolution -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="16,0,0,0">
                    <TextBlock Text="Res:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <TextBlock x:Name="ResolutionText"
                               Text="--"
                               Foreground="{DynamicResource ForegroundBrush}"
                               FontSize="11"
                               FontFamily="Consolas"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
