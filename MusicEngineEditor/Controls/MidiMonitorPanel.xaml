<UserControl x:Class="MusicEngineEditor.Controls.MidiMonitorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="350"
             Background="{DynamicResource PanelBackgroundBrush}"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Colors for MIDI message types -->
        <SolidColorBrush x:Key="NoteOnBrush" Color="#00CC66"/>
        <SolidColorBrush x:Key="NoteOffBrush" Color="#8BC34A"/>
        <SolidColorBrush x:Key="CCBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="PitchBendBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="AftertouchBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="ProgramChangeBrush" Color="#E91E63"/>
        <SolidColorBrush x:Key="SysExBrush" Color="#795548"/>
        <SolidColorBrush x:Key="ClockBrush" Color="#607D8B"/>
        <SolidColorBrush x:Key="OtherBrush" Color="#9E9E9E"/>

        <!-- Channel Activity Indicator Style -->
        <Style x:Key="ChannelIndicatorStyle" TargetType="Border">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="ToolTip" Value="No Activity"/>
        </Style>

        <!-- Filter Toggle Button Style -->
        <Style x:Key="FilterToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control Button Style -->
        <Style x:Key="MonitorButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Message List Item Template -->
        <DataTemplate x:Key="MidiMessageTemplate">
            <Border x:Name="ItemBorder"
                    Background="Transparent"
                    BorderBrush="{DynamicResource SubtleBorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="6,4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>

                    <!-- Timestamp -->
                    <TextBlock Grid.Column="0"
                               Text="{Binding Timestamp, StringFormat='{}{0:HH:mm:ss.fff}'}"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="9"
                               VerticalAlignment="Center"
                               FontFamily="Consolas"/>

                    <!-- Channel -->
                    <Border Grid.Column="1"
                            Background="#2A2A2A"
                            CornerRadius="2"
                            Padding="4,1"
                            Margin="4,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <TextBlock Text="{Binding Channel, StringFormat='Ch{0}'}"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontSize="9"
                                   FontWeight="Medium"/>
                    </Border>

                    <!-- Message Type and Data -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <!-- Type Badge -->
                        <Border x:Name="TypeBadge"
                                Background="{StaticResource OtherBrush}"
                                CornerRadius="2"
                                Padding="6,2"
                                Margin="0,0,6,0">
                            <TextBlock Text="{Binding TypeName}"
                                       Foreground="White"
                                       FontSize="9"
                                       FontWeight="SemiBold"/>
                        </Border>

                        <!-- Data -->
                        <TextBlock Text="{Binding DataDisplay}"
                                   Foreground="{DynamicResource ForegroundBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Direction Indicator -->
                    <TextBlock Grid.Column="3"
                               Text="{Binding Direction}"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="9"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
            <DataTemplate.Triggers>
                <DataTrigger Binding="{Binding MessageType}" Value="NoteOn">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource NoteOnBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="NoteOff">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource NoteOffBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="ControlChange">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource CCBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="PitchBend">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource PitchBendBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="Aftertouch">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource AftertouchBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="ProgramChange">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource ProgramChangeBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="SysEx">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource SysExBrush}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding MessageType}" Value="Clock">
                    <Setter TargetName="TypeBadge" Property="Background" Value="{StaticResource ClockBrush}"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Channel Activity -->
            <RowDefinition Height="Auto"/>
            <!-- Filter Bar -->
            <RowDefinition Height="Auto"/>
            <!-- Message List -->
            <RowDefinition Height="*"/>
            <!-- Status Bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="MIDI Monitor"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <Border x:Name="RecordingIndicator"
                            Background="#E53935"
                            CornerRadius="5"
                            Width="10" Height="10"
                            Margin="8,0,0,0"
                            Visibility="Collapsed"
                            ToolTip="Recording"/>
                </StackPanel>

                <!-- Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <ToggleButton x:Name="RecordToggle"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="Record"
                                  IsChecked="{Binding IsRecording, Mode=TwoWay}"
                                  ToolTip="Start/Stop Recording"/>
                    <ToggleButton x:Name="PauseToggle"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="Pause"
                                  IsChecked="{Binding IsPaused, Mode=TwoWay}"
                                  ToolTip="Pause Message Display"/>
                    <Button x:Name="ClearButton"
                            Style="{StaticResource MonitorButtonStyle}"
                            Content="Clear"
                            Click="ClearButton_Click"
                            ToolTip="Clear All Messages"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Channel Activity Indicators -->
        <Border Grid.Row="1"
                Background="#0D0D0D"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <StackPanel>
                <TextBlock Text="Channel Activity"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           FontSize="9"
                           Margin="0,0,0,4"/>
                <ItemsControl x:Name="ChannelIndicators">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Filter Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Message Type Filters -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Show:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ToggleButton x:Name="FilterNotes"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="Notes"
                                  IsChecked="True"
                                  ToolTip="Show Note On/Off"/>
                    <ToggleButton x:Name="FilterCC"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="CC"
                                  IsChecked="True"
                                  ToolTip="Show Control Change"/>
                    <ToggleButton x:Name="FilterPitchBend"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="Bend"
                                  IsChecked="True"
                                  ToolTip="Show Pitch Bend"/>
                    <ToggleButton x:Name="FilterAftertouch"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="AT"
                                  IsChecked="True"
                                  ToolTip="Show Aftertouch"/>
                    <ToggleButton x:Name="FilterProgram"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="PC"
                                  IsChecked="True"
                                  ToolTip="Show Program Change"/>
                    <ToggleButton x:Name="FilterSysEx"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="SysEx"
                                  IsChecked="False"
                                  ToolTip="Show System Exclusive"/>
                    <ToggleButton x:Name="FilterClock"
                                  Style="{StaticResource FilterToggleStyle}"
                                  Content="Clock"
                                  IsChecked="False"
                                  ToolTip="Show MIDI Clock"/>
                </StackPanel>

                <!-- Channel Filter -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock Text="Channel:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ComboBox x:Name="ChannelFilterComboBox"
                              SelectedIndex="0"
                              Width="80"
                              FontSize="10">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="6"/>
                        <ComboBoxItem Content="7"/>
                        <ComboBoxItem Content="8"/>
                        <ComboBoxItem Content="9"/>
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="11"/>
                        <ComboBoxItem Content="12"/>
                        <ComboBoxItem Content="13"/>
                        <ComboBoxItem Content="14"/>
                        <ComboBoxItem Content="15"/>
                        <ComboBoxItem Content="16"/>
                    </ComboBox>

                    <TextBlock Text="Direction:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="16,0,8,0"/>
                    <ComboBox x:Name="DirectionFilterComboBox"
                              SelectedIndex="0"
                              Width="70"
                              FontSize="10">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="In"/>
                        <ComboBoxItem Content="Out"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Message List -->
        <ListBox x:Name="MessageListBox"
                 Grid.Row="3"
                 Background="Transparent"
                 BorderThickness="0"
                 VirtualizingPanel.IsVirtualizing="True"
                 VirtualizingPanel.VirtualizationMode="Recycling"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ItemTemplate="{StaticResource MidiMessageTemplate}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ListBoxItem">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Status Bar -->
        <Border Grid.Row="4"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Message Count -->
                <TextBlock Grid.Column="0"
                           x:Name="MessageCountText"
                           Text="0 messages"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"/>

                <!-- Buffer Size -->
                <TextBlock Grid.Column="1"
                           Text="Max:"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           FontSize="10"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <ComboBox Grid.Column="2"
                          x:Name="MaxMessagesComboBox"
                          SelectedIndex="2"
                          Width="60"
                          FontSize="10"
                          SelectionChanged="MaxMessages_SelectionChanged">
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="500"/>
                    <ComboBoxItem Content="1000"/>
                    <ComboBoxItem Content="5000"/>
                </ComboBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>
