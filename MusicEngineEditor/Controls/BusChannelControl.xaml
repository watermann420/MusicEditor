<UserControl x:Class="MusicEngineEditor.Controls.BusChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MusicEngineEditor.Controls"
             xmlns:models="clr-namespace:MusicEngineEditor.Models"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="100"
             d:DataContext="{d:DesignInstance Type=models:BusChannel}"
             MinWidth="85"
             MaxWidth="120">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BusBackgroundColor">#252629</Color>
        <Color x:Key="BusBorderColor">#393B40</Color>
        <Color x:Key="FaderTrackColor">#1A1A1A</Color>
        <Color x:Key="FaderThumbColor">#5C5F66</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="MuteActiveColor">#FF5555</Color>
        <Color x:Key="SoloActiveColor">#FFDD55</Color>
        <Color x:Key="ButtonInactiveColor">#3C3F44</Color>
        <Color x:Key="GroupBusColor">#FF9500</Color>
        <Color x:Key="AuxBusColor">#55AAFF</Color>
        <Color x:Key="MasterBusColor">#FF5555</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BusBackgroundBrush" Color="{StaticResource BusBackgroundColor}"/>
        <SolidColorBrush x:Key="BusBorderBrush" Color="{StaticResource BusBorderColor}"/>
        <SolidColorBrush x:Key="FaderTrackBrush" Color="{StaticResource FaderTrackColor}"/>
        <SolidColorBrush x:Key="FaderThumbBrush" Color="{StaticResource FaderThumbColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="MuteActiveBrush" Color="{StaticResource MuteActiveColor}"/>
        <SolidColorBrush x:Key="SoloActiveBrush" Color="{StaticResource SoloActiveColor}"/>
        <SolidColorBrush x:Key="ButtonInactiveBrush" Color="{StaticResource ButtonInactiveColor}"/>

        <!-- Vertical Fader Slider Style -->
        <Style x:Key="BusFaderSliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1.25"/>
            <Setter Property="LargeChange" Value="0.1"/>
            <Setter Property="SmallChange" Value="0.01"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Track background -->
                            <Border Width="8"
                                    Background="{StaticResource FaderTrackBrush}"
                                    CornerRadius="4"
                                    HorizontalAlignment="Center"/>

                            <!-- Unity mark (0dB) -->
                            <Rectangle Width="24" Height="1"
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Top"
                                       Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       Opacity="0.5"/>

                            <!-- Track for slider -->
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="28" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{StaticResource FaderThumbBrush}"
                                                        CornerRadius="3"
                                                        BorderBrush="{StaticResource BusBorderBrush}"
                                                        BorderThickness="1">
                                                    <!-- Grip lines -->
                                                    <StackPanel Orientation="Horizontal"
                                                                HorizontalAlignment="Center"
                                                                VerticalAlignment="Center">
                                                        <Rectangle Width="1" Height="8" Fill="#888" Margin="1,0"/>
                                                        <Rectangle Width="1" Height="8" Fill="#888" Margin="1,0"/>
                                                        <Rectangle Width="1" Height="8" Fill="#888" Margin="1,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Pan Slider Style -->
        <Style x:Key="BusPanSliderStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Minimum" Value="-1"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Height="16">
                            <Border Height="4"
                                    Background="{StaticResource FaderTrackBrush}"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Rectangle Width="1" Height="8"
                                       Fill="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center"
                                       Opacity="0.5"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="12" Height="14">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="{StaticResource FaderThumbBrush}"
                                                         Stroke="{StaticResource BusBorderBrush}"
                                                         StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style -->
        <Style x:Key="BusToggleButtonStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="22"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{StaticResource ButtonInactiveBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bus Type Indicator Style -->
        <Style x:Key="BusTypeIndicatorStyle" TargetType="Border">
            <Setter Property="Height" Value="3"/>
            <Setter Property="CornerRadius" Value="1.5"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="{StaticResource BusBackgroundBrush}"
            BorderBrush="{StaticResource BusBorderBrush}"
            BorderThickness="1"
            CornerRadius="6"
            Padding="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>      <!-- Bus type indicator -->
                <RowDefinition Height="Auto"/>      <!-- Bus name -->
                <RowDefinition Height="Auto"/>      <!-- M/S buttons -->
                <RowDefinition Height="Auto"/>      <!-- Effect chain indicator -->
                <RowDefinition Height="*"/>         <!-- Fader + Meter -->
                <RowDefinition Height="Auto"/>      <!-- Pan -->
                <RowDefinition Height="Auto"/>      <!-- dB display -->
                <RowDefinition Height="Auto"/>      <!-- Routed channels -->
            </Grid.RowDefinitions>

            <!-- Bus Type Indicator -->
            <Border Grid.Row="0"
                    Style="{StaticResource BusTypeIndicatorStyle}"
                    Background="{Binding Color}"/>

            <!-- Bus Name -->
            <Border Grid.Row="1"
                    Background="{Binding Color}"
                    CornerRadius="4"
                    Padding="6,3"
                    Margin="0,0,0,4">
                <TextBlock Text="{Binding Name, FallbackValue=Bus}"
                           Foreground="White"
                           FontSize="11"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Center"
                           ToolTip="{Binding Name}"/>
            </Border>

            <!-- Bus Type Label -->
            <TextBlock Grid.Row="1"
                       FontSize="8"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       HorizontalAlignment="Center"
                       Margin="0,26,0,0">
                <TextBlock.Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="Text" Value="GROUP"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BusType}" Value="Aux">
                                <Setter Property="Text" Value="AUX"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding BusType}" Value="Master">
                                <Setter Property="Text" Value="MASTER"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>

            <!-- Mute / Solo Buttons -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,4,0,4">
                <!-- Mute -->
                <ToggleButton x:Name="MuteButton"
                              Style="{StaticResource BusToggleButtonStyle}"
                              Content="M"
                              IsChecked="{Binding IsMuted, Mode=TwoWay}"
                              ToolTip="Mute Bus"
                              Margin="0,0,4,0">
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource MuteActiveColor}" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource ButtonInactiveColor}" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>

                <!-- Solo -->
                <ToggleButton x:Name="SoloButton"
                              Style="{StaticResource BusToggleButtonStyle}"
                              Content="S"
                              IsChecked="{Binding IsSoloed, Mode=TwoWay}"
                              ToolTip="Solo Bus">
                    <ToggleButton.Triggers>
                        <EventTrigger RoutedEvent="ToggleButton.Checked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource SoloActiveColor}" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation Storyboard.TargetProperty="(ToggleButton.Background).(SolidColorBrush.Color)"
                                                    To="{StaticResource ButtonInactiveColor}" Duration="0:0:0.1"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ToggleButton.Triggers>
                </ToggleButton>
            </StackPanel>

            <!-- Effect Chain Indicator -->
            <Border Grid.Row="3"
                    Background="#2B2D30"
                    CornerRadius="3"
                    Padding="4,2"
                    Margin="0,2"
                    Visibility="{Binding HasEffects, Converter={StaticResource BoolToVisibilityConverter}}"
                    ToolTip="Click to edit effects">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="FX"
                               Foreground="#4B6EAF"
                               FontSize="9"
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding EffectCount, StringFormat=' ({0})'}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="9"/>
                </StackPanel>
            </Border>

            <!-- Fader and Meter Area -->
            <Grid Grid.Row="4" Margin="0,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Volume Fader -->
                <Slider x:Name="VolumeFader"
                        Grid.Column="0"
                        Style="{StaticResource BusFaderSliderStyle}"
                        Value="{Binding Volume, Mode=TwoWay, FallbackValue=0.8}"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Center"
                        Margin="0,10"
                        MouseDoubleClick="VolumeFader_MouseDoubleClick"/>

                <!-- Level Meter -->
                <controls:LevelMeter x:Name="BusMeter"
                                     Grid.Column="1"
                                     Width="30"
                                     LeftLevel="{Binding MeterLeft, FallbackValue=0}"
                                     RightLevel="{Binding MeterRight, FallbackValue=0}"
                                     ShowScale="False"
                                     ShowChannelLabels="False"
                                     ShowPeakHold="True"
                                     Margin="4,0,0,0"/>
            </Grid>

            <!-- Pan Control -->
            <StackPanel Grid.Row="5" Margin="0,4">
                <TextBlock Text="PAN"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           FontSize="8"
                           HorizontalAlignment="Center"/>
                <Slider x:Name="PanSlider"
                        Style="{StaticResource BusPanSliderStyle}"
                        Value="{Binding Pan, Mode=TwoWay, FallbackValue=0}"
                        Margin="2"
                        MouseDoubleClick="PanSlider_MouseDoubleClick"/>
            </StackPanel>

            <!-- Volume dB Display -->
            <Border Grid.Row="6"
                    Background="#1A1A1A"
                    CornerRadius="3"
                    Padding="6,3"
                    Margin="0,4,0,0">
                <TextBlock x:Name="VolumeDisplay"
                           Text="{Binding VolumeDb, StringFormat={}{0:F1} dB, FallbackValue=0.0 dB}"
                           Foreground="{StaticResource TextPrimaryBrush}"
                           FontSize="10"
                           FontFamily="Consolas"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- Routed Channels Count -->
            <Border Grid.Row="7"
                    Margin="0,4,0,0"
                    Visibility="{Binding RoutedChannels.Count, Converter={StaticResource CountToVisibilityConverter}}">
                <TextBlock FontSize="8"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           HorizontalAlignment="Center">
                    <Run Text="{Binding RoutedChannels.Count, Mode=OneWay}"/>
                    <Run Text=" inputs"/>
                </TextBlock>
            </Border>
        </Grid>
    </Border>
</UserControl>
