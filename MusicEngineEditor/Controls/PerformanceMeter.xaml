<UserControl x:Class="MusicEngineEditor.Controls.PerformanceMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="24" d:DesignWidth="200"
             Background="Transparent"
             Cursor="Hand"
             MouseLeftButtonDown="OnMouseLeftButtonDown">

    <UserControl.Resources>
        <!-- CPU Meter Colors -->
        <Color x:Key="CpuLowColor">#6AAB73</Color>
        <Color x:Key="CpuMediumColor">#E8B339</Color>
        <Color x:Key="CpuHighColor">#F75464</Color>
        <Color x:Key="MeterBackgroundColor">#1E1F22</Color>
        <Color x:Key="MeterBorderColor">#393B40</Color>
        <Color x:Key="TextDimColor">#6F737A</Color>
        <Color x:Key="TextBrightColor">#BCBEC4</Color>

        <SolidColorBrush x:Key="CpuLowBrush" Color="{StaticResource CpuLowColor}"/>
        <SolidColorBrush x:Key="CpuMediumBrush" Color="{StaticResource CpuMediumColor}"/>
        <SolidColorBrush x:Key="CpuHighBrush" Color="{StaticResource CpuHighColor}"/>
        <SolidColorBrush x:Key="MeterBackgroundBrush" Color="{StaticResource MeterBackgroundColor}"/>
        <SolidColorBrush x:Key="MeterBorderBrush" Color="{StaticResource MeterBorderColor}"/>
        <SolidColorBrush x:Key="TextDimBrush" Color="{StaticResource TextDimColor}"/>
        <SolidColorBrush x:Key="TextBrightBrush" Color="{StaticResource TextBrightColor}"/>

        <!-- CPU bar gradient (green to yellow to red) -->
        <LinearGradientBrush x:Key="CpuGradientBrush" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="{StaticResource CpuLowColor}" Offset="0.0"/>
            <GradientStop Color="{StaticResource CpuLowColor}" Offset="0.5"/>
            <GradientStop Color="{StaticResource CpuMediumColor}" Offset="0.7"/>
            <GradientStop Color="{StaticResource CpuMediumColor}" Offset="0.8"/>
            <GradientStop Color="{StaticResource CpuHighColor}" Offset="0.9"/>
            <GradientStop Color="{StaticResource CpuHighColor}" Offset="1.0"/>
        </LinearGradientBrush>

        <!-- Glow effect for high CPU -->
        <DropShadowEffect x:Key="HighCpuGlow"
                          Color="{StaticResource CpuHighColor}"
                          BlurRadius="6"
                          ShadowDepth="0"
                          Opacity="0.6"/>
    </UserControl.Resources>

    <UserControl.ToolTip>
        <ToolTip x:Name="DetailedTooltip">
            <StackPanel>
                <TextBlock x:Name="TooltipText" Text="CPU: 0% | Memory: 0 MB" FontFamily="JetBrains Mono, Consolas"/>
            </StackPanel>
        </ToolTip>
    </UserControl.ToolTip>

    <Border Background="{StaticResource MeterBackgroundBrush}"
            BorderBrush="{StaticResource MeterBorderBrush}"
            BorderThickness="1"
            CornerRadius="3"
            Padding="6,3">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Label -->
            <TextBlock Grid.Column="0"
                       Text="CPU"
                       Foreground="{StaticResource TextDimBrush}"
                       FontSize="10"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       Margin="0,0,4,0"/>

            <!-- CPU Bar Container -->
            <Border Grid.Column="1"
                    Width="60"
                    Height="10"
                    Background="#0D0D0D"
                    BorderBrush="{StaticResource MeterBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="2"
                    VerticalAlignment="Center">
                <Grid ClipToBounds="True">
                    <!-- CPU Level Bar -->
                    <Border x:Name="CpuBar"
                            HorizontalAlignment="Left"
                            Width="0"
                            CornerRadius="1"
                            Margin="1">
                        <Border.Background>
                            <SolidColorBrush x:Name="CpuBarBrush" Color="{StaticResource CpuLowColor}"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>

            <!-- CPU Percentage -->
            <TextBlock x:Name="CpuPercentText"
                       Grid.Column="2"
                       Text="0%"
                       Foreground="{StaticResource TextBrightBrush}"
                       FontSize="10"
                       FontWeight="SemiBold"
                       FontFamily="JetBrains Mono, Consolas"
                       VerticalAlignment="Center"
                       Margin="6,0,0,0"
                       MinWidth="28"
                       TextAlignment="Right"/>

            <!-- Separator -->
            <Rectangle Grid.Column="3"
                       Width="1"
                       Height="12"
                       Fill="{StaticResource MeterBorderBrush}"
                       Margin="8,0"/>

            <!-- Memory Display -->
            <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="MEM"
                           Foreground="{StaticResource TextDimBrush}"
                           FontSize="10"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Margin="0,0,4,0"/>
                <TextBlock x:Name="MemoryText"
                           Text="0 MB"
                           Foreground="{StaticResource TextBrightBrush}"
                           FontSize="10"
                           FontWeight="SemiBold"
                           FontFamily="JetBrains Mono, Consolas"
                           VerticalAlignment="Center"
                           MinWidth="45"
                           TextAlignment="Right"/>

                <!-- Dropout Counter (only visible when dropouts occur) -->
                <Border x:Name="DropoutBadge"
                        Background="{StaticResource CpuHighBrush}"
                        CornerRadius="6"
                        Padding="4,1"
                        Margin="6,0,0,0"
                        Visibility="Collapsed"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect Color="{StaticResource CpuHighColor}"
                                          BlurRadius="4"
                                          ShadowDepth="0"
                                          Opacity="0.5"/>
                    </Border.Effect>
                    <TextBlock x:Name="DropoutCountText"
                               Text="0"
                               Foreground="White"
                               FontSize="9"
                               FontWeight="Bold"/>
                </Border>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
