<UserControl x:Class="MusicEngineEditor.Controls.SpectralDifferenceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500"
             Background="#1E1F22"
             MinHeight="200"
             MinWidth="300">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="GridColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="TextColor">#6F737A</Color>
        <Color x:Key="PositiveColor">#4CAF50</Color>
        <Color x:Key="NegativeColor">#F44336</Color>
        <Color x:Key="TrackAColor">#00CED1</Color>
        <Color x:Key="TrackBColor">#FF9800</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="GridBrush" Color="{StaticResource GridColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
        <SolidColorBrush x:Key="PositiveBrush" Color="{StaticResource PositiveColor}"/>
        <SolidColorBrush x:Key="NegativeBrush" Color="{StaticResource NegativeColor}"/>
        <SolidColorBrush x:Key="TrackABrush" Color="{StaticResource TrackAColor}"/>
        <SolidColorBrush x:Key="TrackBBrush" Color="{StaticResource TrackBColor}"/>

        <!-- ComboBox Style -->
        <Style x:Key="TrackComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="BorderBrush" Value="#5A5A5A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4A4A4A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with track selectors -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Spectral Difference"
                               FontWeight="SemiBold"
                               FontSize="12"
                               Foreground="{DynamicResource BrightForegroundBrush}"
                               VerticalAlignment="Center"/>

                    <!-- Track selectors -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Border Background="{StaticResource TrackABrush}"
                                Width="12"
                                Height="12"
                                CornerRadius="2"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0"/>
                        <ComboBox x:Name="TrackACombo"
                                  Style="{StaticResource TrackComboBoxStyle}"
                                  SelectionChanged="TrackCombo_SelectionChanged"
                                  ToolTip="Select Track A"/>

                        <TextBlock Text="vs"
                                   Foreground="{StaticResource TextBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0"/>

                        <Border Background="{StaticResource TrackBBrush}"
                                Width="12"
                                Height="12"
                                CornerRadius="2"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0"/>
                        <ComboBox x:Name="TrackBCombo"
                                  Style="{StaticResource TrackComboBoxStyle}"
                                  SelectionChanged="TrackCombo_SelectionChanged"
                                  ToolTip="Select Track B"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Spectrum difference display -->
            <Grid Grid.Row="1" Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- dB scale -->
                <Canvas x:Name="DbScaleCanvas"
                        Grid.Column="0"
                        Width="35"
                        Background="Transparent"/>

                <!-- Main display area -->
                <Border Grid.Column="1"
                        Background="#1A1A1A"
                        CornerRadius="3"
                        BorderBrush="#3A3A3A"
                        BorderThickness="1">
                    <Grid ClipToBounds="True">
                        <!-- Grid lines -->
                        <Canvas x:Name="GridCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Zero line -->
                        <Canvas x:Name="ZeroLineCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Difference spectrum -->
                        <Canvas x:Name="SpectrumCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"/>

                        <!-- Track A outline (optional) -->
                        <Canvas x:Name="TrackACanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"
                                Opacity="0.5"/>

                        <!-- Track B outline (optional) -->
                        <Canvas x:Name="TrackBCanvas"
                                ClipToBounds="True"
                                IsHitTestVisible="False"
                                Opacity="0.5"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- Frequency labels -->
            <Canvas x:Name="FrequencyLabelsCanvas"
                    Grid.Row="2"
                    Height="16"
                    Margin="43,0,8,0"
                    Background="Transparent"/>

            <!-- EQ Suggestions panel -->
            <Border Grid.Row="3"
                    Background="#2B2D30"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Suggested EQ:"
                               FontWeight="SemiBold"
                               FontSize="11"
                               Foreground="{StaticResource TextBrush}"
                               VerticalAlignment="Center"/>

                    <ItemsControl x:Name="SuggestionsPanel"
                                  Grid.Column="1"
                                  Margin="12,0">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#3A3A3A"
                                        CornerRadius="3"
                                        Padding="8,4"
                                        Margin="0,0,6,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Frequency}"
                                                   Foreground="{StaticResource TrackABrush}"
                                                   FontSize="10"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text=": "
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="10"/>
                                        <TextBlock Text="{Binding Suggestion}"
                                                   Foreground="{Binding SuggestionColor}"
                                                   FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Button Grid.Column="2"
                            x:Name="RefreshButton"
                            Style="{StaticResource ControlButtonStyle}"
                            Content="Analyze"
                            Click="RefreshButton_Click"
                            ToolTip="Refresh analysis"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
