<UserControl x:Class="MusicEngineEditor.Controls.SignalFlowDiagram"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#0D0D0D"
             MinWidth="400"
             MinHeight="300">

    <UserControl.Resources>
        <!-- Dark theme colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="CanvasColor">#17181A</Color>
        <Color x:Key="NodeColor">#181818</Color>
        <Color x:Key="NodeSelectedColor">#3A5FA0</Color>
        <Color x:Key="NodeHoverColor">#3A3C40</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="ConnectionColor">#4A9EFF</Color>
        <Color x:Key="SendConnectionColor">#FF9500</Color>
        <Color x:Key="MasterColor">#FF9500</Color>
        <Color x:Key="BusColor">#8B5CF6</Color>
        <Color x:Key="TrackColor">#4A9EFF</Color>
        <Color x:Key="GridLineColor">#252628</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="CanvasBrush" Color="{StaticResource CanvasColor}"/>
        <SolidColorBrush x:Key="NodeBrush" Color="{StaticResource NodeColor}"/>
        <SolidColorBrush x:Key="NodeSelectedBrush" Color="{StaticResource NodeSelectedColor}"/>
        <SolidColorBrush x:Key="NodeHoverBrush" Color="{StaticResource NodeHoverColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="ConnectionBrush" Color="{StaticResource ConnectionColor}"/>
        <SolidColorBrush x:Key="SendConnectionBrush" Color="{StaticResource SendConnectionColor}"/>
        <SolidColorBrush x:Key="MasterBrush" Color="{StaticResource MasterColor}"/>
        <SolidColorBrush x:Key="BusBrush" Color="{StaticResource BusColor}"/>
        <SolidColorBrush x:Key="TrackBrush" Color="{StaticResource TrackColor}"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="{StaticResource GridLineColor}"/>

        <!-- Grid pattern brush -->
        <DrawingBrush x:Key="GridPatternBrush"
                      TileMode="Tile"
                      Viewport="0,0,50,50"
                      ViewportUnits="Absolute">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="{StaticResource CanvasBrush}">
                        <GeometryDrawing.Geometry>
                            <RectangleGeometry Rect="0,0,50,50"/>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                    <GeometryDrawing>
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <LineGeometry StartPoint="50,0" EndPoint="50,50"/>
                                <LineGeometry StartPoint="0,50" EndPoint="50,50"/>
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                        <GeometryDrawing.Pen>
                            <Pen Brush="{StaticResource GridLineBrush}" Thickness="1"/>
                        </GeometryDrawing.Pen>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>

        <!-- Node style -->
        <Style x:Key="NodeStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource NodeBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource NodeHoverBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Border Grid.Row="0"
                    Background="{StaticResource NodeBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    Padding="8,6">
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Signal Flow"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>

                        <!-- View Mode Toggle -->
                        <Border Background="#1A1B1E"
                                CornerRadius="4"
                                Margin="16,0,0,0"
                                Padding="2">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="HierarchyViewButton"
                                             Content="Hierarchy"
                                             GroupName="ViewMode"
                                             IsChecked="True"
                                             Style="{StaticResource {x:Type ToggleButton}}"
                                             Padding="8,4"
                                             FontSize="10"
                                             Checked="OnViewModeChanged"/>
                                <RadioButton x:Name="RoutingViewButton"
                                             Content="Routing"
                                             GroupName="ViewMode"
                                             Style="{StaticResource {x:Type ToggleButton}}"
                                             Padding="8,4"
                                             FontSize="10"
                                             Checked="OnViewModeChanged"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Zoom Controls -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="ZoomOutButton"
                                Content="-"
                                Width="24"
                                Height="24"
                                FontSize="14"
                                Click="OnZoomOut"
                                ToolTip="Zoom Out"/>
                        <TextBlock x:Name="ZoomLevelText"
                                   Text="100%"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="8,0"
                                   MinWidth="35"
                                   TextAlignment="Center"/>
                        <Button x:Name="ZoomInButton"
                                Content="+"
                                Width="24"
                                Height="24"
                                FontSize="14"
                                Click="OnZoomIn"
                                ToolTip="Zoom In"/>
                        <Button x:Name="FitToViewButton"
                                Content="Fit"
                                Padding="8,4"
                                FontSize="10"
                                Margin="8,0,0,0"
                                Click="OnFitToView"
                                ToolTip="Fit to View"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Diagram Canvas -->
            <ScrollViewer Grid.Row="1"
                          x:Name="DiagramScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          PanningMode="Both">
                <Canvas x:Name="DiagramCanvas"
                        Background="{StaticResource GridPatternBrush}"
                        ClipToBounds="True"
                        MouseLeftButtonDown="OnCanvasMouseDown"
                        MouseMove="OnCanvasMouseMove"
                        MouseLeftButtonUp="OnCanvasMouseUp"
                        MouseWheel="OnCanvasMouseWheel">
                    <Canvas.RenderTransform>
                        <ScaleTransform x:Name="CanvasScale" ScaleX="1" ScaleY="1"/>
                    </Canvas.RenderTransform>

                    <!-- Connection lines drawn programmatically -->

                    <!-- Nodes drawn programmatically -->
                </Canvas>
            </ScrollViewer>

            <!-- Legend and Info Bar -->
            <Border Grid.Row="2"
                    Background="{StaticResource NodeBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,1,0,0"
                    Padding="8,6">
                <Grid>
                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Legend:"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="0,0,8,0"/>

                        <!-- Track -->
                        <Rectangle Width="12" Height="12"
                                   Fill="{StaticResource TrackBrush}"
                                   RadiusX="2" RadiusY="2"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Track"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Bus -->
                        <Rectangle Width="12" Height="12"
                                   Fill="{StaticResource BusBrush}"
                                   RadiusX="2" RadiusY="2"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Bus"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Master -->
                        <Rectangle Width="12" Height="12"
                                   Fill="{StaticResource MasterBrush}"
                                   RadiusX="2" RadiusY="2"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="Master"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,12,0"/>

                        <!-- Send Connection -->
                        <Line X1="0" Y1="6" X2="20" Y2="6"
                              Stroke="{StaticResource SendConnectionBrush}"
                              StrokeThickness="2"
                              StrokeDashArray="2,2"
                              VerticalAlignment="Center"/>
                        <TextBlock Text="Send"
                                   FontSize="10"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </StackPanel>

                    <!-- Selection Info -->
                    <TextBlock x:Name="SelectionInfoText"
                               Text="Click a node to select"
                               FontSize="10"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
