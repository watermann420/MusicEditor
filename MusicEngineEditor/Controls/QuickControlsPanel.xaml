<UserControl x:Class="MusicEngineEditor.Controls.QuickControlsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="140" d:DesignWidth="700"
             MinHeight="100">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#0D0D0D</Color>
        <Color x:Key="HeaderBackgroundColor">#181818</Color>
        <Color x:Key="BorderColor">#2A2A2A</Color>
        <Color x:Key="TextPrimaryColor">#E0E0E0</Color>
        <Color x:Key="TextSecondaryColor">#808080</Color>
        <Color x:Key="ActiveColor">#55AAFF</Color>
        <Color x:Key="HoverColor">#252525</Color>
        <Color x:Key="KnobTrackColor">#43454A</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
        <SolidColorBrush x:Key="ActiveBrush" Color="{StaticResource ActiveColor}"/>
        <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
        <SolidColorBrush x:Key="KnobTrackBrush" Color="{StaticResource KnobTrackColor}"/>

        <!-- Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource ActiveBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource ActiveBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Toggle Button Style for MIDI Learn -->
        <Style x:Key="MidiLearnToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource HoverBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF9500"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF9500"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF9500"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Context Menu Style -->
        <ContextMenu x:Key="KnobContextMenu">
            <MenuItem Header="Assign Parameter..." Click="AssignParameter_Click"/>
            <MenuItem Header="Clear Assignment" Click="ClearAssignment_Click"/>
            <Separator/>
            <MenuItem Header="MIDI Learn" Click="MidiLearn_Click"/>
            <MenuItem Header="Clear MIDI" Click="ClearMidi_Click"/>
            <Separator/>
            <MenuItem Header="Reset Value" Click="ResetValue_Click"/>
            <MenuItem Header="Set as Default" Click="SetDefault_Click"/>
        </ContextMenu>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource HeaderBackgroundBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="4,4,0,0"
                    Padding="8,4">
                <DockPanel>
                    <!-- Title -->
                    <TextBlock Text="QUICK CONTROLS"
                               DockPanel.Dock="Left"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               FontSize="11"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"/>

                    <!-- Toolbar -->
                    <StackPanel Orientation="Horizontal"
                                DockPanel.Dock="Right"
                                HorizontalAlignment="Right">

                        <!-- Track Selector -->
                        <TextBlock Text="Track:"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   VerticalAlignment="Center"
                                   Margin="0,0,4,0"/>
                        <ComboBox x:Name="TrackComboBox"
                                  Width="100"
                                  FontSize="10"
                                  SelectionChanged="TrackComboBox_SelectionChanged"
                                  Margin="0,0,8,0"/>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="6,2"/>

                        <!-- Reset Button -->
                        <Button Content="Reset All"
                                Style="{StaticResource ToolbarButtonStyle}"
                                Click="ResetAll_Click"
                                ToolTip="Reset all controls to default values"/>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="6,2"/>

                        <!-- MIDI Learn Toggle -->
                        <ToggleButton x:Name="MidiLearnToggle"
                                      Content="MIDI Learn"
                                      Style="{StaticResource MidiLearnToggleStyle}"
                                      Checked="MidiLearn_Checked"
                                      Unchecked="MidiLearn_Unchecked"
                                      ToolTip="Enable MIDI Learn mode"/>

                        <Border Width="1" Background="{StaticResource BorderBrush}" Margin="6,2"/>

                        <!-- Status Info -->
                        <TextBlock x:Name="StatusText"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="9"
                                   VerticalAlignment="Center"
                                   Margin="4,0"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Quick Controls Container -->
            <ItemsControl x:Name="ControlsContainer"
                          Grid.Row="1"
                          Margin="8">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="1"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
    </Border>
</UserControl>
