<UserControl x:Class="MusicEngineEditor.Controls.ArticulationMapEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600"
             Background="#0D0D0D">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#0D0D0D"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#181818"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="KeyswitchBrush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="ExpressionBrush" Color="#F59E0B"/>

        <!-- Button Style -->
        <Style x:Key="ToolButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListBox Item Style -->
        <Style x:Key="ArticulationListItem" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2E3033"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="EditorTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource ForegroundBrush}"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="EditorComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Articulation Map"
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="#DFE1E5"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="MapNameText"
                               Text=" - Default"
                               FontSize="12"
                               Foreground="{StaticResource SecondaryBrush}"
                               VerticalAlignment="Center"
                               Margin="4,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="New"
                            Style="{StaticResource ToolButton}"
                            Click="New_Click"/>
                    <Button Content="Import"
                            Style="{StaticResource ToolButton}"
                            Click="Import_Click"/>
                    <Button Content="Export"
                            Style="{StaticResource ToolButton}"
                            Click="Export_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Articulation List -->
            <Border Grid.Column="0"
                    Background="{StaticResource PanelBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <TextBox x:Name="SearchBox"
                             Grid.Row="0"
                             Margin="8"
                             TextChanged="Search_TextChanged">
                        <TextBox.Resources>
                            <VisualBrush x:Key="HintBrush" Stretch="None" AlignmentX="Left">
                                <VisualBrush.Visual>
                                    <TextBlock Text="Search articulations..."
                                               Foreground="{StaticResource SecondaryBrush}"
                                               FontStyle="Italic"/>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </TextBox.Resources>
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource EditorTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background" Value="{StaticResource HintBrush}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- List -->
                    <ListBox x:Name="ArticulationList"
                             Grid.Row="1"
                             Background="Transparent"
                             BorderThickness="0"
                             ItemContainerStyle="{StaticResource ArticulationListItem}"
                             SelectionChanged="ArticulationList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Color indicator -->
                                    <Border Grid.Column="0"
                                            Width="4"
                                            CornerRadius="2"
                                            Margin="0,0,8,0"
                                            Background="{Binding ColorBrush}"/>

                                    <!-- Name -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding KeyswitchDisplay}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource SecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- Type badge -->
                                    <Border Grid.Column="2"
                                            Background="{Binding TypeBrush}"
                                            CornerRadius="3"
                                            Padding="6,2">
                                        <TextBlock Text="{Binding TypeShort}"
                                                   FontSize="10"
                                                   Foreground="White"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Add/Remove Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8">
                        <Button Content="+ Add"
                                Style="{StaticResource ToolButton}"
                                Click="AddArticulation_Click"/>
                        <Button Content="- Remove"
                                Style="{StaticResource ToolButton}"
                                Click="RemoveArticulation_Click"/>
                        <Button Content="Duplicate"
                                Style="{StaticResource ToolButton}"
                                Click="DuplicateArticulation_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Articulation Editor -->
            <ScrollViewer Grid.Column="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="16">
                <StackPanel x:Name="EditorPanel" Visibility="Visible">
                    <!-- Name -->
                    <TextBlock Text="Name"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,0,4"/>
                    <TextBox x:Name="NameTextBox"
                             Style="{StaticResource EditorTextBox}"
                             TextChanged="Name_TextChanged"
                             Margin="0,0,0,16"/>

                    <!-- Type -->
                    <TextBlock Text="Type"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,0,4"/>
                    <ComboBox x:Name="TypeComboBox"
                              Style="{StaticResource EditorComboBox}"
                              SelectionChanged="Type_SelectionChanged"
                              Margin="0,0,0,16">
                        <ComboBoxItem Content="Keyswitch"/>
                        <ComboBoxItem Content="CC Switch"/>
                        <ComboBoxItem Content="Program Change"/>
                        <ComboBoxItem Content="Expression"/>
                    </ComboBox>

                    <!-- Trigger Settings -->
                    <GroupBox Header="Trigger Settings"
                              BorderBrush="{StaticResource BorderBrush}"
                              Foreground="{StaticResource ForegroundBrush}"
                              Padding="12"
                              Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Keyswitch Note -->
                            <StackPanel x:Name="KeyswitchPanel">
                                <TextBlock Text="Keyswitch Note"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ComboBox x:Name="KeyswitchNoteCombo"
                                              Grid.Column="0"
                                              Style="{StaticResource EditorComboBox}"
                                              SelectionChanged="KeyswitchNote_SelectionChanged"/>
                                    <Button x:Name="LearnButton"
                                            Grid.Column="1"
                                            Content="Learn"
                                            Style="{StaticResource ToolButton}"
                                            Click="Learn_Click"
                                            Margin="8,0,0,0"/>
                                </Grid>
                            </StackPanel>

                            <!-- CC Settings -->
                            <StackPanel x:Name="CCPanel" Visibility="Collapsed" Margin="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                        <TextBlock Text="CC Number"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBox x:Name="CCNumberTextBox"
                                                 Style="{StaticResource EditorTextBox}"
                                                 TextChanged="CCNumber_TextChanged"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                        <TextBlock Text="CC Value"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   FontSize="11"
                                                   Margin="0,0,0,4"/>
                                        <TextBox x:Name="CCValueTextBox"
                                                 Style="{StaticResource EditorTextBox}"
                                                 TextChanged="CCValue_TextChanged"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>

                            <!-- Channel -->
                            <StackPanel Margin="0,12,0,0">
                                <TextBlock Text="MIDI Channel"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           FontSize="11"
                                           Margin="0,0,0,4"/>
                                <ComboBox x:Name="ChannelComboBox"
                                          Style="{StaticResource EditorComboBox}"
                                          SelectionChanged="Channel_SelectionChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <!-- Visual Settings -->
                    <GroupBox Header="Visual Settings"
                              BorderBrush="{StaticResource BorderBrush}"
                              Foreground="{StaticResource ForegroundBrush}"
                              Padding="12"
                              Margin="0,0,0,16">
                        <StackPanel>
                            <!-- Color -->
                            <TextBlock Text="Color"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,0,0,4"/>
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="ColorPreview"
                                        Width="32" Height="32"
                                        Background="{StaticResource AccentBrush}"
                                        CornerRadius="4"
                                        BorderBrush="{StaticResource BorderBrush}"
                                        BorderThickness="1"/>
                                <Button Content="Change Color"
                                        Style="{StaticResource ToolButton}"
                                        Click="ChangeColor_Click"
                                        Margin="8,0,0,0"/>
                            </StackPanel>

                            <!-- Symbol -->
                            <TextBlock Text="Symbol/Short Name"
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="11"
                                       Margin="0,12,0,4"/>
                            <TextBox x:Name="SymbolTextBox"
                                     Style="{StaticResource EditorTextBox}"
                                     TextChanged="Symbol_TextChanged"
                                     MaxLength="4"/>

                            <!-- Display in Lane -->
                            <CheckBox x:Name="ShowInLaneCheck"
                                      Content="Show in articulation lane"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      IsChecked="True"
                                      Margin="0,12,0,0"
                                      Checked="ShowInLane_Changed"
                                      Unchecked="ShowInLane_Changed"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Output Settings -->
                    <GroupBox Header="Output Settings"
                              BorderBrush="{StaticResource BorderBrush}"
                              Foreground="{StaticResource ForegroundBrush}"
                              Padding="12">
                        <StackPanel>
                            <CheckBox x:Name="OutputKeyswitchCheck"
                                      Content="Output keyswitch note"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      IsChecked="True"
                                      Checked="OutputKeyswitch_Changed"
                                      Unchecked="OutputKeyswitch_Changed"/>

                            <CheckBox x:Name="SustainCheck"
                                      Content="Sustain (hold keyswitch while playing)"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,8,0,0"
                                      Checked="Sustain_Changed"
                                      Unchecked="Sustain_Changed"/>

                            <StackPanel Orientation="Horizontal" Margin="0,12,0,0">
                                <TextBlock Text="Velocity:"
                                           Foreground="{StaticResource SecondaryBrush}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <TextBox x:Name="VelocityTextBox"
                                         Style="{StaticResource EditorTextBox}"
                                         Width="60"
                                         Text="100"
                                         TextChanged="Velocity_TextChanged"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText"
                           Grid.Column="0"
                           Text="Ready"
                           Foreground="{StaticResource SecondaryBrush}"
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="ArticulationCountText"
                               Text="0 articulations"
                               Foreground="{StaticResource SecondaryBrush}"
                               FontSize="11"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
