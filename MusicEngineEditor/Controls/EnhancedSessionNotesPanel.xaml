<UserControl x:Class="MusicEngineEditor.Controls.EnhancedSessionNotesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#1E1F22">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Category Colors -->
        <SolidColorBrush x:Key="CategoryIdea" Color="#4CAF50"/>
        <SolidColorBrush x:Key="CategoryTodo" Color="#FF9800"/>
        <SolidColorBrush x:Key="CategoryIssue" Color="#F44336"/>
        <SolidColorBrush x:Key="CategoryMix" Color="#2196F3"/>
        <SolidColorBrush x:Key="CategoryArrangement" Color="#9C27B0"/>
        <SolidColorBrush x:Key="CategoryGeneral" Color="#9E9E9E"/>

        <!-- Note Item Style -->
        <Style x:Key="NoteItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3F41"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Toolbar Button Style -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="28"/>
            <Setter Property="Height" Value="28"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Add Button Style -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4B6EAF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5A7FBF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3B5A9F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#3C3F41"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#2B2D30"
                    BorderBrush="#3C3F41"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Session Notes"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="NoteCountText"
                                   Text=" (0)"
                                   FontSize="12"
                                   Foreground="#808080"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="ExportButton"
                                Style="{StaticResource ToolbarButtonStyle}"
                                ToolTip="Export Notes"
                                Click="ExportButton_Click"
                                Content="E"/>
                        <Button x:Name="ClearAllButton"
                                Style="{StaticResource ToolbarButtonStyle}"
                                ToolTip="Clear All Notes"
                                Click="ClearAllButton_Click"
                                Content="X"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Search and Filter -->
            <Border Grid.Row="1"
                    Background="#2B2D30"
                    Padding="12,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <Border Background="#252628"
                            BorderBrush="#3C3F41"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="8,4"
                            Margin="0,0,8,0">
                        <TextBox x:Name="SearchBox"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="#BCBEC4"
                                 CaretBrush="#BCBEC4"
                                 FontSize="12"
                                 TextChanged="SearchBox_TextChanged"/>
                    </Border>

                    <!-- Category Filter -->
                    <ComboBox x:Name="CategoryFilterCombo"
                              Grid.Column="1"
                              Width="100"
                              Background="#333337"
                              Foreground="#BCBEC4"
                              BorderBrush="#3C3F41"
                              SelectionChanged="CategoryFilterCombo_SelectionChanged">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="Ideas" Tag="Idea"/>
                        <ComboBoxItem Content="To-Do" Tag="Todo"/>
                        <ComboBoxItem Content="Issues" Tag="Issue"/>
                        <ComboBoxItem Content="Mix" Tag="Mix"/>
                        <ComboBoxItem Content="Arrangement" Tag="Arrangement"/>
                        <ComboBoxItem Content="General" Tag="General"/>
                    </ComboBox>
                </Grid>
            </Border>

            <!-- Tag Filter -->
            <Border Grid.Row="2"
                    Background="#2B2D30"
                    BorderBrush="#3C3F41"
                    BorderThickness="0,0,0,1"
                    Padding="12,6">
                <ItemsControl x:Name="TagFilterPanel">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ToggleButton Content="{Binding Name}"
                                          IsChecked="{Binding IsSelected}"
                                          Background="#333337"
                                          Foreground="#A0A0A0"
                                          BorderThickness="0"
                                          Padding="6,3"
                                          Margin="2"
                                          FontSize="10"
                                          Click="TagFilter_Click">
                                <ToggleButton.Style>
                                    <Style TargetType="ToggleButton">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ToggleButton">
                                                    <Border x:Name="border"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="3"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                                                            <Setter Property="Foreground" Value="White"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <!-- Notes List -->
            <ScrollViewer Grid.Row="3"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <ItemsControl x:Name="NotesItemsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource NoteItemStyle}"
                                    MouseLeftButtonDown="NoteItem_Click">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header: Timestamp and Category -->
                                    <Grid Grid.Row="0" Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Timestamp (clickable) -->
                                        <Border Grid.Column="0"
                                                Background="#333337"
                                                CornerRadius="3"
                                                Padding="6,2"
                                                Cursor="Hand"
                                                ToolTip="Click to jump to this position">
                                            <TextBlock Text="{Binding TimestampDisplay}"
                                                       FontFamily="Consolas"
                                                       FontSize="11"
                                                       Foreground="#4A9EFF"/>
                                        </Border>

                                        <!-- Date -->
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding DateDisplay}"
                                                   FontSize="10"
                                                   Foreground="#606060"
                                                   VerticalAlignment="Center"
                                                   Margin="8,0,0,0"/>

                                        <!-- Category Badge -->
                                        <Border Grid.Column="2"
                                                Background="{Binding CategoryBrush}"
                                                CornerRadius="3"
                                                Padding="6,2">
                                            <TextBlock Text="{Binding Category}"
                                                       FontSize="10"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>

                                    <!-- Title -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Title}"
                                               FontSize="13"
                                               FontWeight="Medium"
                                               Foreground="White"
                                               Visibility="{Binding HasTitle, Converter={StaticResource BoolToVisibilityConverter}}"
                                               Margin="0,0,0,4"/>

                                    <!-- Content (Rich Text) -->
                                    <TextBlock Grid.Row="2"
                                               Text="{Binding Content}"
                                               Foreground="#BCBEC4"
                                               FontSize="12"
                                               TextWrapping="Wrap"
                                               MaxHeight="80"
                                               TextTrimming="CharacterEllipsis"/>

                                    <!-- Tags -->
                                    <ItemsControl Grid.Row="3"
                                                  ItemsSource="{Binding Tags}"
                                                  Margin="0,6,0,0"
                                                  Visibility="{Binding HasTags, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#333337"
                                                        CornerRadius="2"
                                                        Padding="4,1"
                                                        Margin="0,0,4,2">
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="10"
                                                               Foreground="#808080"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>

                                <!-- Context Menu -->
                                <Border.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Jump to Position" Click="JumpToPositionMenuItem_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Edit Note" Click="EditNoteMenuItem_Click"/>
                                        <MenuItem Header="Delete Note" Click="DeleteNoteMenuItem_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Copy Content" Click="CopyContentMenuItem_Click"/>
                                        <MenuItem Header="Add Tag" Click="AddTagMenuItem_Click"/>
                                    </ContextMenu>
                                </Border.ContextMenu>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Empty State -->
            <TextBlock x:Name="EmptyStateText"
                       Grid.Row="3"
                       Text="No notes yet. Add a note to capture your production ideas!"
                       Foreground="#606060"
                       FontSize="12"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="20"
                       Visibility="Collapsed"/>

            <!-- Add Note Panel -->
            <Border Grid.Row="4"
                    Background="#2B2D30"
                    BorderBrush="#3C3F41"
                    BorderThickness="0,1,0,0"
                    Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Title -->
                    <TextBox x:Name="TitleTextBox"
                             Grid.Row="0"
                             Background="#252628"
                             Foreground="#BCBEC4"
                             BorderBrush="#3C3F41"
                             BorderThickness="1"
                             Padding="8,6"
                             FontSize="12"
                             Margin="0,0,0,8"/>

                    <!-- Category and Tags Row -->
                    <Grid Grid.Row="1" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox x:Name="CategoryCombo"
                                  Width="100"
                                  Background="#333337"
                                  Foreground="#BCBEC4"
                                  BorderBrush="#3C3F41">
                            <ComboBoxItem Content="Idea" Tag="Idea" IsSelected="True"/>
                            <ComboBoxItem Content="To-Do" Tag="Todo"/>
                            <ComboBoxItem Content="Issue" Tag="Issue"/>
                            <ComboBoxItem Content="Mix" Tag="Mix"/>
                            <ComboBoxItem Content="Arrangement" Tag="Arrangement"/>
                            <ComboBoxItem Content="General" Tag="General"/>
                        </ComboBox>

                        <TextBox x:Name="TagsTextBox"
                                 Grid.Column="1"
                                 Background="#252628"
                                 Foreground="#BCBEC4"
                                 BorderBrush="#3C3F41"
                                 BorderThickness="1"
                                 Padding="8,6"
                                 FontSize="11"
                                 Margin="8,0,0,0"
                                 ToolTip="Tags (comma-separated)"/>
                    </Grid>

                    <!-- Content -->
                    <TextBox x:Name="ContentTextBox"
                             Grid.Row="2"
                             Background="#252628"
                             Foreground="#BCBEC4"
                             BorderBrush="#3C3F41"
                             BorderThickness="1"
                             Padding="8,6"
                             Height="60"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontSize="12"/>

                    <!-- Add Button -->
                    <Button Grid.Row="3"
                            Content="Add Note at Current Position"
                            Style="{StaticResource AddButtonStyle}"
                            Margin="0,8,0,0"
                            Click="AddNoteButton_Click"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
