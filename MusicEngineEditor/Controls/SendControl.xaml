<UserControl x:Class="MusicEngineEditor.Controls.SendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:MusicEngineEditor.Models"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="80"
             MinWidth="70">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="SendBackgroundColor">#1E1F22</Color>
        <Color x:Key="SendSlotColor">#2B2D30</Color>
        <Color x:Key="SendBorderColor">#393B40</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="SendActiveColor">#55AAFF</Color>
        <Color x:Key="PreFaderColor">#FF9500</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="SendBackgroundBrush" Color="{StaticResource SendBackgroundColor}"/>
        <SolidColorBrush x:Key="SendSlotBrush" Color="{StaticResource SendSlotColor}"/>
        <SolidColorBrush x:Key="SendBorderBrush" Color="{StaticResource SendBorderColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- Send Knob Style -->
        <Style x:Key="SendKnobStyle" TargetType="Slider">
            <Setter Property="Orientation" Value="Vertical"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <!-- Knob Background -->
                            <Ellipse Width="20" Height="20"
                                     Fill="#2B2D30"
                                     Stroke="{StaticResource SendBorderBrush}"
                                     StrokeThickness="1"/>

                            <!-- Knob Indicator -->
                            <Ellipse x:Name="indicator"
                                     Width="16" Height="16"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center">
                                <Ellipse.Fill>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#4B6EAF" Offset="0"/>
                                        <GradientStop Color="#3D5A91" Offset="1"/>
                                    </RadialGradientBrush>
                                </Ellipse.Fill>
                            </Ellipse>

                            <!-- Value Arc (simplified as line) -->
                            <Line x:Name="valueLine"
                                  X1="10" Y1="10"
                                  X2="10" Y2="2"
                                  Stroke="#55AAFF"
                                  StrokeThickness="2"
                                  StrokeStartLineCap="Round"
                                  StrokeEndLineCap="Round"
                                  RenderTransformOrigin="0.5,0.5">
                                <Line.RenderTransform>
                                    <RotateTransform Angle="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static local:KnobAngleConverter.Instance}}"/>
                                </Line.RenderTransform>
                            </Line>

                            <!-- Hidden Track for interaction -->
                            <Track x:Name="PART_Track" Orientation="Vertical">
                                <Track.Thumb>
                                    <Thumb Opacity="0" Width="20" Height="20"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Send Item Template -->
        <DataTemplate x:Key="SendItemTemplate" DataType="{x:Type models:Send}">
            <Border Background="{StaticResource SendSlotBrush}"
                    BorderBrush="{StaticResource SendBorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="4"
                    Margin="0,2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Send Header -->
                    <DockPanel Grid.Row="0">
                        <!-- Color Indicator -->
                        <Border Width="3"
                                CornerRadius="1"
                                Background="{Binding Color}"
                                DockPanel.Dock="Left"
                                Margin="0,0,4,0"/>

                        <!-- Enable Toggle -->
                        <ToggleButton DockPanel.Dock="Right"
                                      Width="14" Height="14"
                                      IsChecked="{Binding IsEnabled}"
                                      ToolTip="Enable/Disable Send"
                                      Margin="2,0,0,0">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="border"
                                            Background="#3C3F44"
                                            CornerRadius="2">
                                        <Ellipse x:Name="dot"
                                                 Width="6" Height="6"
                                                 Fill="{StaticResource TextSecondaryBrush}"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="dot" Property="Fill" Value="#55AAFF"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>

                        <!-- Bus Name -->
                        <TextBlock Text="{Binding TargetBusName}"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   FontSize="10"
                                   TextTrimming="CharacterEllipsis"
                                   VerticalAlignment="Center"/>
                    </DockPanel>

                    <!-- Send Level -->
                    <Grid Grid.Row="1" Margin="0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Level Slider -->
                        <Slider Grid.Column="0"
                                Minimum="0" Maximum="1"
                                Value="{Binding Level}"
                                Height="4"
                                VerticalAlignment="Center">
                            <Slider.Template>
                                <ControlTemplate TargetType="Slider">
                                    <Grid>
                                        <Border Height="4" Background="#1A1A1A" CornerRadius="2"/>
                                        <Border Height="4"
                                                HorizontalAlignment="Left"
                                                CornerRadius="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#55AAFF"/>
                                                    <Setter Property="Width" Value="{Binding Value, RelativeSource={RelativeSource TemplatedParent}, Converter={x:Static local:PercentageWidthConverter.Instance}}"/>
                                                </Style>
                                            </Border.Style>
                                        </Border>
                                        <Track x:Name="PART_Track">
                                            <Track.Thumb>
                                                <Thumb Width="8" Height="8" Opacity="0"/>
                                            </Track.Thumb>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Slider.Template>
                        </Slider>

                        <!-- Level Display -->
                        <TextBlock Grid.Column="1"
                                   Text="{Binding LevelDb, StringFormat={}{0:F1}}"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="9"
                                   FontFamily="Consolas"
                                   Width="28"
                                   TextAlignment="Right"
                                   VerticalAlignment="Center"
                                   Margin="4,0,0,0"/>
                    </Grid>

                    <!-- Pre/Post Fader Toggle -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                        <RadioButton Content="PRE"
                                     IsChecked="{Binding IsPreFader}"
                                     FontSize="8"
                                     Foreground="{StaticResource TextSecondaryBrush}"
                                     Margin="0,0,4,0">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="Transparent"
                                            Padding="4,2"
                                            CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#FF9500"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>

                        <RadioButton Content="POST"
                                     IsChecked="{Binding IsPreFader, Converter={x:Static local:InverseBoolConverter.Instance}}"
                                     FontSize="8"
                                     Foreground="{StaticResource TextSecondaryBrush}">
                            <RadioButton.Template>
                                <ControlTemplate TargetType="RadioButton">
                                    <Border x:Name="border"
                                            Background="Transparent"
                                            Padding="4,2"
                                            CornerRadius="2">
                                        <ContentPresenter HorizontalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </RadioButton.Template>
                        </RadioButton>
                    </StackPanel>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Border Background="{StaticResource SendBackgroundBrush}"
            BorderBrush="{StaticResource SendBorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Text="SENDS"
                       Foreground="{StaticResource TextSecondaryBrush}"
                       FontSize="9"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,4"/>

            <!-- Send List -->
            <ItemsControl Grid.Row="1"
                          ItemsSource="{Binding Sends}"
                          ItemTemplate="{StaticResource SendItemTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- Add Send Button -->
            <Button Grid.Row="2"
                    Content="+"
                    Click="AddSend_Click"
                    Width="20" Height="20"
                    Background="Transparent"
                    Foreground="{StaticResource TextSecondaryBrush}"
                    BorderBrush="{StaticResource SendBorderBrush}"
                    BorderThickness="1"
                    Margin="0,4,0,0"
                    ToolTip="Add Send">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#55AAFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</UserControl>
