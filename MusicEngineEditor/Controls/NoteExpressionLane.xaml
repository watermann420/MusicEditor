<UserControl x:Class="MusicEngineEditor.Controls.NoteExpressionLane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="600"
             Background="#1E1F22"
             ClipToBounds="True">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PitchBendBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="PressureBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="SlideBrush" Color="#9C27B0"/>
        <SolidColorBrush x:Key="GridLineBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="CenterLineBrush" Color="#3A3A3A"/>
        <SolidColorBrush x:Key="HandleBrush" Color="White"/>

        <!-- Toolbar Button Style -->
        <Style x:Key="ExpressionButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="2,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tool Button Style -->
        <Style x:Key="ToolButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Margin" Value="1,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3F5A7D"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Expression Lane -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Toolbar -->
        <Border Grid.Row="0"
                Background="{DynamicResource ToolbarBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="6,3">
            <DockPanel>
                <!-- Expression Type Buttons -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Expression:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"/>
                    <ToggleButton x:Name="PitchBendToggle"
                                  Style="{StaticResource ExpressionButtonStyle}"
                                  Content="Pitch"
                                  IsChecked="True"
                                  Checked="ExpressionType_Checked"
                                  ToolTip="Pitch Bend"/>
                    <ToggleButton x:Name="PressureToggle"
                                  Style="{StaticResource ExpressionButtonStyle}"
                                  Content="Pressure"
                                  Checked="ExpressionType_Checked"
                                  ToolTip="Polyphonic Aftertouch"/>
                    <ToggleButton x:Name="SlideToggle"
                                  Style="{StaticResource ExpressionButtonStyle}"
                                  Content="Slide"
                                  Checked="ExpressionType_Checked"
                                  ToolTip="CC74 (MPE Slide)"/>

                    <Rectangle Width="1"
                               Fill="{DynamicResource BorderBrush}"
                               Margin="8,2"/>

                    <!-- Drawing Tools -->
                    <TextBlock Text="Tool:"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,4,0"/>
                    <RadioButton x:Name="DrawToolButton"
                                 Style="{StaticResource ToolButtonStyle}"
                                 Content="Draw"
                                 IsChecked="True"
                                 GroupName="ExpressionTools"
                                 ToolTip="Free draw"/>
                    <RadioButton x:Name="LineToolButton"
                                 Style="{StaticResource ToolButtonStyle}"
                                 Content="Line"
                                 GroupName="ExpressionTools"
                                 ToolTip="Draw straight lines"/>
                    <RadioButton x:Name="EraseToolButton"
                                 Style="{StaticResource ToolButtonStyle}"
                                 Content="Erase"
                                 GroupName="ExpressionTools"
                                 ToolTip="Erase points"/>
                </StackPanel>

                <!-- Right Side Controls -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <!-- Selected Note Info -->
                    <TextBlock x:Name="SelectedNoteText"
                               Text="No note selected"
                               Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10"
                               VerticalAlignment="Center"
                               Margin="0,0,12,0"/>

                    <!-- Clear Button -->
                    <Button x:Name="ClearButton"
                            Content="Clear"
                            Click="ClearButton_Click"
                            Background="Transparent"
                            Foreground="{DynamicResource ForegroundBrush}"
                            BorderThickness="1"
                            BorderBrush="{DynamicResource BorderBrush}"
                            Padding="8,2"
                            FontSize="10"
                            Cursor="Hand"
                            ToolTip="Clear expression data for selected note"/>
                </StackPanel>

                <!-- Spacer -->
                <Border/>
            </DockPanel>
        </Border>

        <!-- Expression Lane Canvas Area -->
        <Grid Grid.Row="1" ClipToBounds="True">
            <!-- Background Grid -->
            <Canvas x:Name="GridCanvas"
                    Background="#1A1A1A"
                    ClipToBounds="True"/>

            <!-- Note Background -->
            <Canvas x:Name="NoteBackgroundCanvas"
                    Background="Transparent"
                    ClipToBounds="True"/>

            <!-- Expression Curves -->
            <Canvas x:Name="ExpressionCanvas"
                    Background="Transparent"
                    ClipToBounds="True"
                    MouseLeftButtonDown="ExpressionCanvas_MouseLeftButtonDown"
                    MouseLeftButtonUp="ExpressionCanvas_MouseLeftButtonUp"
                    MouseMove="ExpressionCanvas_MouseMove"
                    MouseLeave="ExpressionCanvas_MouseLeave">
                <Canvas.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Reset to Default" Click="ResetToDefault_Click"/>
                        <MenuItem Header="Copy Expression" Click="CopyExpression_Click"/>
                        <MenuItem Header="Paste Expression" Click="PasteExpression_Click"/>
                        <Separator/>
                        <MenuItem Header="Smooth" Click="Smooth_Click"/>
                        <MenuItem Header="Quantize" Click="QuantizeExpression_Click"/>
                    </ContextMenu>
                </Canvas.ContextMenu>
            </Canvas>

            <!-- Center Line (for bipolar expression like pitch bend) -->
            <Line x:Name="CenterLine"
                  Stroke="{StaticResource CenterLineBrush}"
                  StrokeThickness="1"
                  StrokeDashArray="4,2"
                  Y1="50"
                  Y2="50"
                  IsHitTestVisible="False"/>

            <!-- Value Tooltip -->
            <Border x:Name="ValueTooltip"
                    Background="#E0252629"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="3"
                    Padding="6,3"
                    Visibility="Collapsed"
                    IsHitTestVisible="False"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top">
                <TextBlock x:Name="ValueText"
                           Foreground="{DynamicResource BrightForegroundBrush}"
                           FontSize="10"
                           FontFamily="Consolas"/>
            </Border>

            <!-- No Selection Overlay -->
            <Border x:Name="NoSelectionOverlay"
                    Background="#80000000"
                    Visibility="Visible">
                <TextBlock Text="Select a note to edit expression"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</UserControl>
