<UserControl x:Class="MusicEngineEditor.Controls.ControllerLanesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="800"
             Background="#1A1A1A">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="PanelBrush" Color="#141414"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#808080"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#00D9FF"/>

        <!-- Lane Colors (for different CC lanes) -->
        <SolidColorBrush x:Key="Lane1Brush" Color="#FF9500"/>
        <SolidColorBrush x:Key="Lane2Brush" Color="#00D9FF"/>
        <SolidColorBrush x:Key="Lane3Brush" Color="#10B981"/>
        <SolidColorBrush x:Key="Lane4Brush" Color="#EC4899"/>
        <SolidColorBrush x:Key="Lane5Brush" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="Lane6Brush" Color="#F59E0B"/>

        <!-- Button Style -->
        <Style x:Key="LaneButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="LaneComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PanelBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0"
                Background="{StaticResource PanelBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,0,0,1"
                Padding="8,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="CC Lanes"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource ForegroundBrush}"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="LaneCountText"
                               Text=" (0)"
                               FontSize="11"
                               Foreground="{StaticResource SecondaryBrush}"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="+ Add Lane"
                            Style="{StaticResource LaneButton}"
                            Click="AddLane_Click"
                            Padding="8,4"/>
                    <Button Content="Draw Mode"
                            Style="{StaticResource LaneButton}"
                            x:Name="DrawModeButton"
                            Click="DrawMode_Click"
                            Padding="8,4"
                            Margin="4,0,0,0"/>
                    <Button Content="Edit Mode"
                            Style="{StaticResource LaneButton}"
                            x:Name="EditModeButton"
                            Click="EditMode_Click"
                            Padding="8,4"
                            Margin="4,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lanes Container -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="LanesContainer">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="{Binding Height}" MinHeight="60" Margin="0,0,0,1">
                            <Grid.ColumnDefinitions>
                                <!-- Header -->
                                <ColumnDefinition Width="70"/>
                                <!-- Canvas -->
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Lane Header -->
                            <Border Grid.Column="0"
                                    Background="{StaticResource PanelBrush}"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="0,0,1,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Top: CC selector -->
                                    <StackPanel Grid.Row="0" Margin="4">
                                        <ComboBox ItemsSource="{Binding AvailableControllers}"
                                                  SelectedItem="{Binding SelectedController}"
                                                  DisplayMemberPath="DisplayName"
                                                  Style="{StaticResource LaneComboBox}"/>
                                    </StackPanel>

                                    <!-- Center: Value range -->
                                    <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="4,0">
                                        <TextBlock Text="127"
                                                   FontSize="8"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   HorizontalAlignment="Right"/>
                                        <TextBlock Text="0"
                                                   FontSize="8"
                                                   Foreground="{StaticResource SecondaryBrush}"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,20,0,0"/>
                                    </StackPanel>

                                    <!-- Bottom: Controls -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="4">
                                        <Button Content="X"
                                                Style="{StaticResource LaneButton}"
                                                Tag="{Binding}"
                                                Click="RemoveLane_Click"
                                                ToolTip="Remove Lane"/>
                                        <Button Content="S"
                                                Style="{StaticResource LaneButton}"
                                                Tag="{Binding}"
                                                Click="ScaleLane_Click"
                                                ToolTip="Scale Values"
                                                Margin="2,0,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Lane Canvas -->
                            <Border Grid.Column="1"
                                    Background="{StaticResource BackgroundBrush}"
                                    ClipToBounds="True">
                                <Canvas x:Name="LaneCanvas"
                                        Tag="{Binding}"
                                        Background="Transparent"
                                        MouseLeftButtonDown="Canvas_MouseLeftButtonDown"
                                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                                        MouseMove="Canvas_MouseMove"
                                        MouseRightButtonDown="Canvas_MouseRightButtonDown">
                                    <!-- Grid lines drawn in code-behind -->
                                    <!-- CC curve drawn in code-behind -->
                                </Canvas>
                            </Border>

                            <!-- Color indicator -->
                            <Border Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    Width="3"
                                    Background="{Binding ColorBrush}"/>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Empty state -->
        <Border Grid.Row="1"
                x:Name="EmptyState"
                Background="Transparent"
                Visibility="Visible">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="No CC lanes"
                           FontSize="14"
                           Foreground="{StaticResource SecondaryBrush}"
                           HorizontalAlignment="Center"/>
                <Button Content="+ Add CC Lane"
                        Style="{StaticResource LaneButton}"
                        Click="AddLane_Click"
                        HorizontalAlignment="Center"
                        Margin="0,8,0,0"
                        Padding="12,6"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
