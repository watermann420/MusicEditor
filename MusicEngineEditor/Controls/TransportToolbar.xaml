<UserControl x:Class="MusicEngineEditor.Controls.TransportToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="48" d:DesignWidth="900">

    <UserControl.Resources>
        <!-- Transport Button Base Style -->
        <Style x:Key="TransportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrightForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Play Button Style (Green when not playing) -->
        <Style x:Key="PlayButtonStyle" TargetType="Button" BasedOn="{StaticResource TransportButtonStyle}">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="#2D5A2D"
                                CornerRadius="20"
                                Padding="6">
                            <Border.Effect>
                                <DropShadowEffect x:Name="glowEffect" Color="#00CC66" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D6E3D"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="8" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0.5" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             To="0" Duration="0:0:0.15"/>
                                            <DoubleAnimation Storyboard.TargetName="glowEffect"
                                                             Storyboard.TargetProperty="Opacity"
                                                             To="0" Duration="0:0:0.15"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00CC66"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Record Button Style (Red when armed) -->
        <Style x:Key="RecordButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3D2D2D"/>
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="6">
                            <Border.Effect>
                                <DropShadowEffect x:Name="recordGlow" Color="#FF4757" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D3535"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D32F2F"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                                            <DoubleAnimation Storyboard.TargetName="recordGlow"
                                                             Storyboard.TargetProperty="BlurRadius"
                                                             From="4" To="12" Duration="0:0:0.5"/>
                                            <DoubleAnimation Storyboard.TargetName="recordGlow"
                                                             Storyboard.TargetProperty="Opacity"
                                                             From="0.3" To="0.7" Duration="0:0:0.5"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Loop Toggle Button Style -->
        <Style x:Key="LoopToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#214283"/>
                                <Setter Property="Foreground" Value="#4B9EFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Metronome Toggle Button Style -->
        <Style x:Key="MetronomeToggleStyle" TargetType="ToggleButton" BasedOn="{StaticResource LoopToggleStyle}"/>

        <!-- BPM Control Style -->
        <Style x:Key="BpmButtonStyle" TargetType="RepeatButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Interval" Value="50"/>
            <Setter Property="Delay" Value="300"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#252525"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrightForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#00D9FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Time Display Style -->
        <Style x:Key="TimeDisplayStyle" TargetType="Border">
            <Setter Property="Background" Value="#0D0D0D"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Position Slider Style -->
        <Style x:Key="PositionSliderStyle" TargetType="Slider">
            <Setter Property="Background" Value="#0D0D0D"/>
            <Setter Property="Foreground" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border x:Name="TrackBackground"
                                    Height="4"
                                    Background="#2A2A2A"
                                    CornerRadius="2"
                                    VerticalAlignment="Center"/>
                            <Track x:Name="PART_Track">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="Slider.DecreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="{DynamicResource AccentBrush}" Height="4" CornerRadius="2"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse x:Name="thumbEllipse"
                                                         Width="14" Height="14"
                                                         Fill="{DynamicResource AccentBrush}"
                                                         Stroke="#0D0D0D"
                                                         StrokeThickness="2">
                                                    <Ellipse.Effect>
                                                        <DropShadowEffect Color="#000000" BlurRadius="3" ShadowDepth="1" Opacity="0.3"/>
                                                    </Ellipse.Effect>
                                                </Ellipse>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="thumbEllipse" Property="Fill" Value="#5A7FC4"/>
                                                    </Trigger>
                                                    <Trigger Property="IsDragging" Value="True">
                                                        <Setter TargetName="thumbEllipse" Property="Fill" Value="#3D5A91"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="Slider.IncreaseLarge">
                                        <RepeatButton.Template>
                                            <ControlTemplate TargetType="RepeatButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </RepeatButton.Template>
                                    </RepeatButton>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#181818" Offset="0"/>
                <GradientStop Color="#27292C" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid Margin="12,6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Transport Controls -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <!-- Rewind Button -->
                <Button x:Name="RewindButton" Style="{StaticResource TransportButtonStyle}"
                        ToolTip="Rewind to Start (Home)" Click="RewindButton_Click">
                    <Path Data="M 2,6 L 2,18 M 4,12 L 12,6 L 12,18 Z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Stretch="Uniform" Width="14" Height="14"/>
                </Button>

                <!-- Stop Button -->
                <Button x:Name="StopButton" Style="{StaticResource TransportButtonStyle}"
                        ToolTip="Stop (Space)" Click="StopButton_Click" Margin="4,0,0,0">
                    <Path Data="M 0,0 L 14,0 L 14,14 L 0,14 Z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                          Stretch="Uniform" Width="12" Height="12"/>
                </Button>

                <!-- Play/Pause Button -->
                <Button x:Name="PlayPauseButton" Style="{StaticResource PlayButtonStyle}"
                        ToolTip="Play/Pause (Space)" Click="PlayPauseButton_Click" Margin="6,0,0,0">
                    <!-- Play Icon (shown when not playing) -->
                    <Grid>
                        <Path x:Name="PlayIcon"
                              Data="M 0,0 L 16,10 L 0,20 Z"
                              Fill="#00FF88"
                              Stretch="Uniform" Width="14" Height="16"
                              Margin="2,0,0,0"/>
                        <!-- Pause Icon (hidden by default) -->
                        <Grid x:Name="PauseIcon" Visibility="Collapsed">
                            <Path Data="M 0,0 L 5,0 L 5,16 L 0,16 Z"
                                  Fill="#00FF88"
                                  Stretch="Uniform" Width="5" Height="14" HorizontalAlignment="Left"/>
                            <Path Data="M 0,0 L 5,0 L 5,16 L 0,16 Z"
                                  Fill="#00FF88"
                                  Stretch="Uniform" Width="5" Height="14" HorizontalAlignment="Right"/>
                        </Grid>
                    </Grid>
                </Button>

                <!-- Record Button -->
                <ToggleButton x:Name="RecordButton" Style="{StaticResource RecordButtonStyle}"
                              ToolTip="Record (R)" Margin="6,0,0,0"
                              Checked="RecordButton_CheckedChanged" Unchecked="RecordButton_CheckedChanged">
                    <Ellipse Width="14" Height="14" Fill="#FF4757"/>
                </ToggleButton>
            </StackPanel>

            <!-- BPM Control -->
            <Border Grid.Column="1" Background="#0D0D0D" CornerRadius="4" Padding="8,4" Margin="16,0,0,0"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="BPM" Foreground="{DynamicResource SecondaryForegroundBrush}"
                               FontSize="10" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel Orientation="Horizontal">
                        <RepeatButton x:Name="BpmDecreaseButton" Style="{StaticResource BpmButtonStyle}"
                                      Click="BpmDecreaseButton_Click">
                            <Path Data="M 0,4 L 8,4" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RepeatButton}}"
                                  StrokeThickness="2" Stretch="None" Width="8" Height="8"/>
                        </RepeatButton>
                        <TextBox x:Name="BpmTextBox" Text="120.0" Width="54"
                                 Background="Transparent" BorderThickness="0"
                                 Foreground="{DynamicResource BrightForegroundBrush}"
                                 FontWeight="SemiBold" FontSize="13"
                                 TextAlignment="Center" VerticalAlignment="Center"
                                 KeyDown="BpmTextBox_KeyDown" LostFocus="BpmTextBox_LostFocus"/>
                        <RepeatButton x:Name="BpmIncreaseButton" Style="{StaticResource BpmButtonStyle}"
                                      Click="BpmIncreaseButton_Click">
                            <Path Data="M 4,0 L 4,8 M 0,4 L 8,4" Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=RepeatButton}}"
                                  StrokeThickness="2" Stretch="None" Width="8" Height="8"/>
                        </RepeatButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Position Slider -->
            <Slider x:Name="PositionSlider" Grid.Column="2" Style="{StaticResource PositionSliderStyle}"
                    Minimum="0" Maximum="100" Value="0"
                    Margin="16,0"
                    VerticalAlignment="Center"
                    ValueChanged="PositionSlider_ValueChanged"
                    PreviewMouseDown="PositionSlider_PreviewMouseDown"
                    PreviewMouseUp="PositionSlider_PreviewMouseUp"/>

            <!-- Time Display -->
            <Border x:Name="TimeDisplayBorder" Grid.Column="3" Style="{StaticResource TimeDisplayStyle}"
                    MouseLeftButtonDown="TimeDisplay_MouseLeftButtonDown"
                    ToolTip="Click to toggle Bar:Beat / Time">
                <StackPanel Orientation="Horizontal">
                    <!-- Bar:Beat Display (default) -->
                    <StackPanel x:Name="BarBeatDisplay" Orientation="Horizontal">
                        <TextBlock x:Name="BarDisplay" Text="1" FontFamily="JetBrains Mono, Cascadia Code, Consolas"
                                   FontSize="18" FontWeight="Bold" Foreground="{DynamicResource BrightForegroundBrush}"
                                   MinWidth="24" TextAlignment="Right"/>
                        <TextBlock Text=":" FontFamily="JetBrains Mono, Cascadia Code, Consolas"
                                   FontSize="18" FontWeight="Bold" Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="2,0"/>
                        <TextBlock x:Name="BeatDisplay" Text="1" FontFamily="JetBrains Mono, Cascadia Code, Consolas"
                                   FontSize="18" FontWeight="Bold" Foreground="{DynamicResource BrightForegroundBrush}"
                                   MinWidth="16"/>
                    </StackPanel>
                    <!-- Time Display (hidden by default) -->
                    <TextBlock x:Name="TimeDisplay" Text="00:00.000" Visibility="Collapsed"
                               FontFamily="JetBrains Mono, Cascadia Code, Consolas"
                               FontSize="18" FontWeight="Bold" Foreground="{DynamicResource BrightForegroundBrush}"/>
                </StackPanel>
            </Border>

            <!-- Loop Toggle -->
            <ToggleButton x:Name="LoopToggleButton" Grid.Column="4" Style="{StaticResource LoopToggleStyle}"
                          ToolTip="Toggle Loop (L)" Margin="12,0,0,0"
                          Checked="LoopToggleButton_CheckedChanged" Unchecked="LoopToggleButton_CheckedChanged">
                <Path Data="M 4,2 L 14,2 A 4,4 0 0 1 14,10 L 6,10 M 10,8 L 6,10 L 10,12 M 14,14 L 4,14 A 4,4 0 0 1 4,6 L 12,6"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                      StrokeThickness="1.5" Fill="Transparent"
                      Stretch="Uniform" Width="18" Height="16"/>
            </ToggleButton>

            <!-- Metronome Toggle -->
            <ToggleButton x:Name="MetronomeToggleButton" Grid.Column="5" Style="{StaticResource MetronomeToggleStyle}"
                          ToolTip="Toggle Metronome (M)" Margin="4,0,0,0"
                          Checked="MetronomeToggleButton_CheckedChanged" Unchecked="MetronomeToggleButton_CheckedChanged">
                <Grid Width="18" Height="18">
                    <!-- Metronome body -->
                    <Path Data="M 3,18 L 6,4 L 12,4 L 15,18 Z"
                          Fill="Transparent"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                          StrokeThickness="1.5"
                          Stretch="Uniform"/>
                    <!-- Metronome pendulum -->
                    <Path Data="M 9,4 L 9,12"
                          Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=ToggleButton}}"
                          StrokeThickness="1.5"
                          Stretch="None"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Margin="0,2,0,0"
                          RenderTransformOrigin="0.5,1">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="MetronomePendulumTransform" Angle="0"/>
                        </Path.RenderTransform>
                    </Path>
                </Grid>
            </ToggleButton>
        </Grid>
    </Border>
</UserControl>
