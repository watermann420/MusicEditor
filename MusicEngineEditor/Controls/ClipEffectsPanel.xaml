<UserControl x:Class="MusicEngineEditor.Controls.ClipEffectsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:MusicEngineEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="280"
             MinWidth="200">

    <UserControl.Resources>
        <!-- Colors -->
        <Color x:Key="BackgroundColor">#1E1F22</Color>
        <Color x:Key="PanelBackgroundColor">#2B2D30</Color>
        <Color x:Key="BorderColor">#393B40</Color>
        <Color x:Key="HoverColor">#3C3F41</Color>
        <Color x:Key="AccentColor">#4B6EAF</Color>
        <Color x:Key="TextPrimaryColor">#BCBEC4</Color>
        <Color x:Key="TextSecondaryColor">#6F737A</Color>
        <Color x:Key="BypassedColor">#FF5555</Color>

        <!-- Brushes -->
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimaryColor}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>

        <!-- Effect Slot Style -->
        <Style x:Key="EffectSlotStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PanelBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Bypass Toggle Style -->
        <Style x:Key="BypassToggleStyle" TargetType="ToggleButton">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Background" Value="#3C3F44"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="2"
                                ToolTip="Bypass Effect">
                            <Viewbox Width="10" Height="10">
                                <Path x:Name="icon"
                                      Data="M1,1 L7,7 M7,1 L1,7"
                                      Stroke="{StaticResource TextSecondaryBrush}"
                                      StrokeThickness="1.5"/>
                            </Viewbox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5C3535"/>
                                <Setter TargetName="icon" Property="Stroke" Value="#FF5555"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Parameter Slider Style -->
        <Style x:Key="ParameterSliderStyle" TargetType="Slider">
            <Setter Property="Height" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Border Height="4" Background="#1A1A1A" CornerRadius="2"/>
                            <Border x:Name="PART_SelectionRange"
                                    Height="4"
                                    Background="{StaticResource AccentBrush}"
                                    CornerRadius="2"
                                    HorizontalAlignment="Left"/>
                            <Track x:Name="PART_Track">
                                <Track.Thumb>
                                    <Thumb Width="12" Height="12">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Ellipse Fill="White" Width="10" Height="10"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Boolean Converters -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border Background="{StaticResource BackgroundBrush}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{StaticResource PanelBackgroundBrush}"
                    CornerRadius="6,6,0,0"
                    Padding="10,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Clip Effects"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>

                        <!-- Effect Count Badge -->
                        <Border x:Name="EffectCountBadge"
                                Background="{StaticResource AccentBrush}"
                                CornerRadius="8"
                                Padding="6,2"
                                Margin="8,0,0,0"
                                VerticalAlignment="Center">
                            <TextBlock x:Name="EffectCountText"
                                       Text="0"
                                       FontSize="9"
                                       FontWeight="Bold"
                                       Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Header Buttons -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <!-- Bypass All -->
                        <ToggleButton x:Name="BypassAllToggle"
                                      Style="{StaticResource BypassToggleStyle}"
                                      ToolTip="Bypass All Effects"
                                      Checked="BypassAllToggle_Changed"
                                      Unchecked="BypassAllToggle_Changed"
                                      Margin="0,0,4,0"/>

                        <!-- Copy Effects -->
                        <Button Style="{StaticResource IconButtonStyle}"
                                ToolTip="Copy Effects"
                                Click="CopyEffects_Click">
                            <Path Data="M4,2 L4,0 L12,0 L12,8 L10,8 L10,2 Z M0,4 L8,4 L8,12 L0,12 Z"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  Width="10" Height="10"
                                  Stretch="Uniform"/>
                        </Button>

                        <!-- Paste Effects -->
                        <Button Style="{StaticResource IconButtonStyle}"
                                ToolTip="Paste Effects"
                                Click="PasteEffects_Click"
                                Margin="2,0,0,0">
                            <Path Data="M0,0 L8,0 L8,2 L6,2 L6,12 L8,12 L8,14 L0,14 L0,12 L2,12 L2,2 L0,2 Z"
                                  Fill="{StaticResource TextSecondaryBrush}"
                                  Width="8" Height="12"
                                  Stretch="Uniform"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Effect Slots List -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          Padding="8">
                <ItemsControl x:Name="EffectSlotsControl">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource EffectSlotStyle}"
                                    MouseLeftButtonDown="EffectSlot_Click"
                                    AllowDrop="True"
                                    DragOver="EffectSlot_DragOver"
                                    Drop="EffectSlot_Drop">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Drag Handle / Color Indicator -->
                                    <Border Grid.Column="0"
                                            Grid.RowSpan="2"
                                            Width="4"
                                            CornerRadius="2"
                                            Margin="0,0,8,0"
                                            Background="{Binding EffectColor}"
                                            Cursor="Hand"
                                            MouseLeftButtonDown="DragHandle_MouseDown"/>

                                    <!-- Effect Info -->
                                    <StackPanel Grid.Column="1" Grid.Row="0">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   Foreground="{StaticResource TextPrimaryBrush}"
                                                   FontSize="11"
                                                   FontWeight="Medium"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding Category}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="9"
                                                   Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                    </StackPanel>

                                    <!-- Controls -->
                                    <StackPanel Grid.Column="2"
                                                Grid.RowSpan="2"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Center"
                                                Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">

                                        <!-- Bypass Toggle -->
                                        <ToggleButton Style="{StaticResource BypassToggleStyle}"
                                                      IsChecked="{Binding IsBypassed}"
                                                      Margin="0,0,4,0"/>

                                        <!-- Edit Button -->
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Edit Parameters"
                                                Click="EditEffect_Click">
                                            <Path Data="M0,12 L3,9 L9,15 L12,12 L15,15 L12,18 Z M15,3 L18,0 L21,3 L18,6 Z"
                                                  Fill="{StaticResource TextSecondaryBrush}"
                                                  Width="10" Height="10"
                                                  Stretch="Uniform"/>
                                        </Button>

                                        <!-- Remove Button -->
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Remove Effect"
                                                Click="RemoveEffect_Click">
                                            <Path Data="M2,2 L8,8 M8,2 L2,8"
                                                  Stroke="{StaticResource TextSecondaryBrush}"
                                                  StrokeThickness="1.5"
                                                  Width="8" Height="8"
                                                  Stretch="Uniform"/>
                                        </Button>
                                    </StackPanel>

                                    <!-- Mix Slider (for non-empty slots) -->
                                    <Grid Grid.Column="1"
                                          Grid.Row="1"
                                          Margin="0,6,8,0"
                                          Visibility="{Binding IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Slider Style="{StaticResource ParameterSliderStyle}"
                                                Minimum="0" Maximum="1"
                                                Value="{Binding Mix}"
                                                VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Mix, StringFormat={}{0:P0}}"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   FontSize="9"
                                                   Margin="6,0,0,0"
                                                   MinWidth="30"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <!-- Add Effect Button -->
            <Border Grid.Row="2"
                    Padding="8">
                <Button x:Name="AddEffectButton"
                        Content="+ Add Effect"
                        Click="AddEffect_Click"
                        Background="Transparent"
                        Foreground="{StaticResource TextSecondaryBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Padding="10,6"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                                    <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>
    </Border>
</UserControl>
