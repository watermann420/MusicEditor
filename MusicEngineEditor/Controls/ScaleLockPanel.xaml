<UserControl x:Class="MusicEngineEditor.Controls.ScaleLockPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="36" d:DesignWidth="320"
             Background="Transparent">

    <UserControl.Resources>
        <!-- ComboBox Style for Scale Lock -->
        <Style x:Key="ScaleLockComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource SubtleBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>

        <!-- Toggle Button Style for Enable/Disable -->
        <Style x:Key="ScaleLockToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="#3C3F44"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="lockIcon"
                                           Text="&#x1F512;"
                                           FontSize="10"
                                           VerticalAlignment="Center"
                                           Margin="0,0,4,0"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter TargetName="lockIcon" Property="Text" Value="&#x1F513;"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="4"
            Padding="8,6">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Scale Lock Label -->
            <TextBlock Grid.Column="0"
                       Text="Scale Lock:"
                       FontSize="11"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <!-- Root Note Selector -->
            <ComboBox Grid.Column="1"
                      x:Name="RootNoteComboBox"
                      Style="{StaticResource ScaleLockComboBoxStyle}"
                      MinWidth="50"
                      Margin="0,0,4,0"
                      SelectionChanged="RootNoteComboBox_SelectionChanged"
                      ToolTip="Root Note">
                <ComboBoxItem Content="C" IsSelected="True"/>
                <ComboBoxItem Content="C#"/>
                <ComboBoxItem Content="D"/>
                <ComboBoxItem Content="D#"/>
                <ComboBoxItem Content="E"/>
                <ComboBoxItem Content="F"/>
                <ComboBoxItem Content="F#"/>
                <ComboBoxItem Content="G"/>
                <ComboBoxItem Content="G#"/>
                <ComboBoxItem Content="A"/>
                <ComboBoxItem Content="A#"/>
                <ComboBoxItem Content="B"/>
            </ComboBox>

            <!-- Scale Selector -->
            <ComboBox Grid.Column="2"
                      x:Name="ScaleComboBox"
                      Style="{StaticResource ScaleLockComboBoxStyle}"
                      MinWidth="120"
                      Margin="0,0,8,0"
                      SelectionChanged="ScaleComboBox_SelectionChanged"
                      ToolTip="Scale Type">
                <ComboBoxItem Content="Major" IsSelected="True"/>
                <ComboBoxItem Content="Minor"/>
                <ComboBoxItem Content="Dorian"/>
                <ComboBoxItem Content="Phrygian"/>
                <ComboBoxItem Content="Lydian"/>
                <ComboBoxItem Content="Mixolydian"/>
                <ComboBoxItem Content="Locrian"/>
                <ComboBoxItem Content="Harmonic Minor"/>
                <ComboBoxItem Content="Melodic Minor"/>
                <ComboBoxItem Content="Pentatonic Major"/>
                <ComboBoxItem Content="Pentatonic Minor"/>
                <ComboBoxItem Content="Blues"/>
                <ComboBoxItem Content="Whole Tone"/>
                <ComboBoxItem Content="Chromatic"/>
                <ComboBoxItem Content="Hungarian Minor"/>
                <ComboBoxItem Content="Spanish"/>
                <ComboBoxItem Content="Japanese (Hirajoshi)"/>
                <ComboBoxItem Content="Arabic"/>
                <ComboBoxItem Content="Diminished"/>
            </ComboBox>

            <!-- Spacer -->
            <Border Grid.Column="3"/>

            <!-- Enable/Disable Toggle -->
            <ToggleButton Grid.Column="4"
                          x:Name="EnableToggle"
                          Style="{StaticResource ScaleLockToggleStyle}"
                          Content="Lock"
                          Click="EnableToggle_Click"
                          ToolTip="Enable/Disable Scale Lock - When enabled, incoming MIDI notes will be quantized to the selected scale"/>
        </Grid>
    </Border>
</UserControl>
