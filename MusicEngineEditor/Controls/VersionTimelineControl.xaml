<UserControl x:Class="MusicEngineEditor.Controls.VersionTimelineControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="600"
             Background="#0D0D0D">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Version Node Style -->
        <Style x:Key="VersionNodeStyle" TargetType="Border">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="16"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="ToolTipService.InitialShowDelay" Value="200"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="White"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Branch Label Style -->
        <Style x:Key="BranchLabelStyle" TargetType="Border">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="4,0"/>
        </Style>
    </UserControl.Resources>

    <Border BorderBrush="#252525"
            BorderThickness="1"
            CornerRadius="6">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="#181818"
                    BorderBrush="#252525"
                    BorderThickness="0,0,0,1"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Version History"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                        <TextBlock x:Name="VersionCountText"
                                   Text=" (0 versions)"
                                   FontSize="12"
                                   Foreground="#808080"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button Content="Create Branch"
                                Background="#333337"
                                Foreground="#E0E0E0"
                                BorderThickness="0"
                                Padding="12,6"
                                Margin="0,0,8,0"
                                Cursor="Hand"
                                Click="CreateBranchButton_Click"/>
                        <Button Content="Compare"
                                Background="#333337"
                                Foreground="#E0E0E0"
                                BorderThickness="0"
                                Padding="12,6"
                                Cursor="Hand"
                                Click="CompareButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Timeline Canvas -->
            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <Canvas x:Name="TimelineCanvas"
                        MinWidth="500"
                        MinHeight="200"
                        Background="Transparent"
                        ClipToBounds="True"/>
            </ScrollViewer>

            <!-- Selected Version Info -->
            <Border Grid.Row="2"
                    Background="#181818"
                    BorderBrush="#252525"
                    BorderThickness="0,1,0,0"
                    Padding="12,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="SelectedVersionInfo" Orientation="Horizontal">
                        <TextBlock Text="Select a version to view details"
                                   Foreground="#808080"
                                   FontSize="12"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <Button x:Name="RestoreButton"
                                Content="Restore"
                                Background="#00D9FF"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="16,6"
                                Margin="0,0,8,0"
                                Cursor="Hand"
                                IsEnabled="False"
                                Click="RestoreButton_Click"/>
                        <Button x:Name="DeleteButton"
                                Content="Delete"
                                Background="#333337"
                                Foreground="#E85C5C"
                                BorderThickness="0"
                                Padding="12,6"
                                Cursor="Hand"
                                IsEnabled="False"
                                Click="DeleteButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>
