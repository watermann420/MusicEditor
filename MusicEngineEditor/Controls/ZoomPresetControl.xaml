<UserControl x:Class="MusicEngineEditor.Controls.ZoomPresetControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="32" d:DesignWidth="500">

    <UserControl.Resources>
        <!-- Zoom Preset Button Style -->
        <Style x:Key="ZoomPresetButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{DynamicResource SecondaryForegroundBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3C3F41"/>
                                <Setter Property="Foreground" Value="{DynamicResource BrightForegroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4B6EAF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource DisabledForegroundBrush}"/>
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Zoom Button Style -->
        <Style x:Key="ZoomPresetButtonActiveStyle" TargetType="Button" BasedOn="{StaticResource ZoomPresetButtonStyle}">
            <Setter Property="Background" Value="#214283"/>
            <Setter Property="Foreground" Value="#4B9EFF"/>
        </Style>

        <!-- Zoom ComboBox Style -->
        <Style x:Key="ZoomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E1F22"/>
            <Setter Property="Foreground" Value="{DynamicResource ForegroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Separator Style -->
        <Style x:Key="ToolbarSeparatorStyle" TargetType="Border">
            <Setter Property="Width" Value="1"/>
            <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Margin" Value="6,4"/>
        </Style>
    </UserControl.Resources>

    <Border Background="{DynamicResource PanelBackgroundBrush}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="0,0,0,1"
            Padding="8,4">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <!-- Zoom Label -->
            <TextBlock Text="Zoom:"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       FontSize="11"
                       VerticalAlignment="Center"
                       Margin="0,0,8,0"/>

            <!-- Preset Buttons -->
            <Button x:Name="Zoom1BarButton"
                    Content="1 Bar"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="Zoom1BarButton_Click"
                    ToolTip="Zoom to show 1 bar"/>

            <Button x:Name="Zoom4BarsButton"
                    Content="4 Bars"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="Zoom4BarsButton_Click"
                    ToolTip="Zoom to show 4 bars"/>

            <Button x:Name="Zoom8BarsButton"
                    Content="8 Bars"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="Zoom8BarsButton_Click"
                    ToolTip="Zoom to show 8 bars"/>

            <Button x:Name="Zoom16BarsButton"
                    Content="16 Bars"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="Zoom16BarsButton_Click"
                    ToolTip="Zoom to show 16 bars"/>

            <Button x:Name="ZoomFullSongButton"
                    Content="Full Song"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="ZoomFullSongButton_Click"
                    ToolTip="Zoom to show entire song"/>

            <!-- Separator -->
            <Border Style="{StaticResource ToolbarSeparatorStyle}"/>

            <!-- Custom Zoom Dropdown -->
            <ComboBox x:Name="CustomZoomComboBox"
                      Style="{StaticResource ZoomComboBoxStyle}"
                      SelectionChanged="CustomZoomComboBox_SelectionChanged"
                      IsEditable="True"
                      ToolTip="Custom zoom level (%)">
                <ComboBoxItem Content="25%"/>
                <ComboBoxItem Content="50%"/>
                <ComboBoxItem Content="75%"/>
                <ComboBoxItem Content="100%"/>
                <ComboBoxItem Content="150%"/>
                <ComboBoxItem Content="200%"/>
                <ComboBoxItem Content="300%"/>
                <ComboBoxItem Content="400%"/>
            </ComboBox>

            <!-- Separator -->
            <Border Style="{StaticResource ToolbarSeparatorStyle}"/>

            <!-- Zoom In/Out Buttons -->
            <Button x:Name="ZoomOutButton"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="ZoomOutButton_Click"
                    ToolTip="Zoom Out (-)"
                    Padding="6">
                <Path Data="M 0,5 L 10,5"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="1.5"/>
            </Button>

            <Button x:Name="ZoomInButton"
                    Style="{StaticResource ZoomPresetButtonStyle}"
                    Click="ZoomInButton_Click"
                    ToolTip="Zoom In (+)"
                    Padding="6">
                <Path Data="M 0,5 L 10,5 M 5,0 L 5,10"
                      Stroke="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}"
                      StrokeThickness="1.5"/>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
