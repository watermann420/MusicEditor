<?xml version="1.0" encoding="utf-8"?>
<!--
This publish profile creates a self-contained deployment for Windows x64.
All .NET runtime dependencies are included, so users don't need .NET installed.
-->
<Project>
  <PropertyGroup>
    <Configuration>Release</Configuration>
    <Platform>Any CPU</Platform>
    <PublishDir>bin\publish\</PublishDir>
    <PublishProtocol>FileSystem</PublishProtocol>
    <_TargetId>Folder</_TargetId>

    <!-- Target Windows x64 -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>

    <!-- Self-contained deployment - includes .NET runtime -->
    <SelfContained>true</SelfContained>

    <!-- Single file publish options -->
    <PublishSingleFile>false</PublishSingleFile>

    <!-- Ready to Run compilation for faster startup -->
    <PublishReadyToRun>true</PublishReadyToRun>

    <!-- Trim unused assemblies to reduce size -->
    <PublishTrimmed>false</PublishTrimmed>

    <!-- Include native libraries for Windows -->
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
  </PropertyGroup>
</Project>
